<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
    	<record id="view_picking_out_form" model="ir.ui.view">
            <field name="name">stock.picking.out.form</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_out_form" />
            <field name="arch" type="xml">
            	<data>
            	
            		<xpath expr="//page[@string='Products']/group[@col='12']/field[@name='state']" position="after">
            			<field name="subtype" invisible="True" />
            			<group col="2" colspan="1">
            				<field name="delivered" attrs="{'invisible': ['|', '|', '|', ('type', '!=', 'out'), ('subtype', '!=', 'standard'), ('state', '!=', 'done'), ('delivered', '=', False),]}" />
            				<button name="set_delivered" icon="gtk-apply" type="object" string="Validate Delivery" attrs="{'invisible': ['|', '|', '|', ('type', '!=', 'out'), ('subtype', '!=', 'standard'), ('state', '!=', 'done'), ('delivered', '=', True),]}" />
            			</group>
					</xpath>
            	
            	</data>
            </field>
		</record>
		
		
		<record id="view_picking_out_search" model="ir.ui.view">
            <field name="name">stock.picking.out.search</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.view_picking_out_search" />
            <field name="arch" type="xml">
            	<data>

                    <filter name="done" position="after">
                        <separator orientation="vertical"/>
                        <filter icon="gtk-yes" name="delivered" string="Delivered" domain="[('delivered', '=', True)]" help="Delivered Delivery Orders" />
                        <filter icon="gtk-no" name="not_delivered" string="Not Delivered" domain="[('delivered', '=', False)]" help="Not Delivered Delivery Orders" />
                        <separator orientation="vertical"/>
					</filter>
					
                </data>
            </field>
        </record>
    
    </data>
</openerp>
