<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

    <!--
        Wizard
    -->
        <record id="migration_accounting_import_wizard" model="ir.ui.view">
            <field name="name">migration.accounting.import.wizard</field>
            <field name="model">msf.doc.import.accounting</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Migration Entries">
                    <label string="This will import Migration Entries from a XML file." colspan="4"/>
                    <newline/>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                    <field name="date"/>
                    <group colspan="4" col="2">
                        <button string="Cancel" special="cancel" icon="gtk-cancel"/>
                        <button name="button_validate" type="object" string="Validate" icon="terp-camera_test"/>
                    </group>
                </form>
            </field>
        </record>

    <!--
        Actions
    -->

        <record id="action_migration_accounting_import_wizard" model="ir.actions.act_window">
            <field name="name">Import Migration Entries</field>
            <field name="res_model">msf.doc.import.accounting</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="migration_accounting_import_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_finance_migration" name="Migration" parent="account.menu_finance_configuration" sequence="40"/>
        <menuitem id="menu_finance_migration_accounting" name="Import Migration Entries" parent="menu_finance_migration" sequence="1" action="action_migration_accounting_import_wizard"/>

    </data>
</openerp>
