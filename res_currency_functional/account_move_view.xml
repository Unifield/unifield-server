<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook/page[@string='Journal Items']/field[@name='line_id']/tree/field[@name='credit']" position="replace"/>
                    <xpath expr="/form/notebook/page[@string='Journal Items']/field[@name='line_id']/tree/field[@name='amount_currency']" position="replace"/>
                    <xpath expr="/form/notebook/page[@string='Journal Items']/field[@name='line_id']/tree/field[@name='currency_id']" position="replace"/>
                    <xpath expr="/form/notebook/page[@string='Journal Items']/field[@name='line_id']/tree/field[@name='debit']" position="replace">
                        <field name="credit" sum="Total Functional Credit" string="Functional In" readonly="1"/>
                        <field name="debit" sum="Total Functional Debit" string="Functional Out" readonly="1"/>
                        <field name="functional_currency_id" readonly="1"/>
                        <field name="credit_currency" sum="Total Booking Credit"/>
                        <field name="debit_currency" sum="Total Booking Debit"/>
                        <field name="currency_id" string="Booking Currency"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
