<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_form" model="ir.ui.view">
            <field name="name">account.form</field>
            <field name="model">account.account</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook/page[@string='General Information']" position="after">
                        <page string="Analytical Destination">
                            <field name="user_type_code" invisible="1"/>
                            <field name="dest_ids" nolabel="1" colspan="4" attrs="{'readonly': [('user_type_code', '!=', 'expense')]}" domain="[('type', '!=', 'view'), ('category', '=', 'DEST')]">
                                <tree string="Destination List" editable="bottom">
                                    <field name="destination_id"/>
                                    <field name="default"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
