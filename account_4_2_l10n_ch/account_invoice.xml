<?xml version="1.0"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="invoice_supplier_form">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="name" position="replace">
					<field name="partner_bank" select="2"
						domain="[('partner_id', '=', partner_id)]"
						on_change="onchange_partner_bank(partner_bank)"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_supplier_form2">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="payment_term" position="after">
					<field name="name" select="2"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_supplier_form3">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="reference_type" position="replace">
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_supplier_form4">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="reference" position="replace">
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_supplier_form5">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="check_total" position="before">
					<field name="reference_type" select="2" nolabel="1" size="0"/>
					<field name="reference" select="1" nolabel="1"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_supplier_form6">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<field name="partner_id" position="replace">
					<field name="partner_id"
						on_change="onchange_partner_id(type,partner_id,date_invoice,payment_term, partner_bank)"
						select="1"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_supplier_form7">
			<field name="name">account.invoice.supplier.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_supplier_form"/>
			<field name="arch" type="xml">
				<label colspan="2" position="replace">
					<field name="amount_to_pay"/>
				</label>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_form">
			<field name="name">account.invoice.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="reference_type" position="replace">
					<field name="partner_bank" select="2"/>
				</field>
			</field>
		</record>
		<record model="ir.ui.view" id="invoice_form2">
			<field name="name">account.invoice.form.inherit</field>
			<field name="model">account.invoice</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="reference" position="replace">
				</field>
			</field>
		</record>
	</data>
</openerp>
