<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="product_to_list_form_view" model="ir.ui.view">
            <field name="name">product.to.list.form.view</field>
            <field name="model">product.to.list</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="List importation">
                    <separator colspan="4" string="Products to import" />
                    <field name="product_ids" colspan="4" />
                    <separator colspan="4" string="List definition" />
                    <field name="type" />
                    <field name="list_id" attrs="{'invisible': [('type', '=', 'new')], 'required': [('type', 'in', ['exist', 'replace'])]}" />
                    <field name="new_list_name" attrs="{'invisible': [('type', 'in', ['exist', 'replace'])], 'required': [('type', '=', 'new')]}" />
                    <field name="new_list_type" attrs="{'invisible': [('type', 'in', ['exist', 'replace'])], 'required': [('type', '=', 'new')]}" />
                    <separator colspan="4" string="" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel" />
                    <button name="import_products" string="Import products" icon="gtk-execute" type="object" />
                </form>
            </field>
        </record>
        
        <act_window
            name="Import to list"
            res_model="product.to.list"
            src_model="product.product"
            view_mode="form"
            view_type="form"
            view_id="product_to_list_form_view"
            target="new"
            key2="client_action_multi"
            id="action_open_wizard_product_import_list" />
    
    </data>
</openerp>
