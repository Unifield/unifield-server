<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="action_product_list_export_view" model="ir.actions.server">
            <field name="name">Export list</field>
            <field name="model_id" ref="model_product_list_export"/>
            <field name="state">code</field>
            <field name="code">action = obj.export_to_csv(context=context)</field>
        </record>
        
        <record id="ir_open_product_list_export_view" model="ir.values">
            <field name="key2">client_action_multi</field>
            <field name="model">product.list</field>
            <field name="name">Export list</field>
            <field eval="'ir.actions.server,%d'%action_product_list_export_view" name="value"/>
            <field eval="True" name="object"/>
        </record>
        
        <record id="product_list_export_form_view" model="ir.ui.view">
            <field name="name">product.list.export.form.view</field>
            <field name="model">product.list.export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="List exported">
                    <separator colspan="4" string="Message" />
                    <field name="message" colspan="4" nolabel="1" />
                    <separator colspan="4" string="File to download" />
                    <field name="file" colspan="4" nolabel="1" filename="filename" />
                    <field name="filename" invisible="1"/>
                </form>
            </field>
            
        </record>
        
    </data>
</openerp>