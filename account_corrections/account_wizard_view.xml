                    </xpath>
                    <xpath expr="/form/group[1]/button[@name='button_save']" position="replace">
                        <button name="button_save" string="Save" type="object" icon="gtk-ok" colspan="1" attrs="{'invisible': [('state', '=', 'correction')]}"/>
                        <button name="button_save" string="Correct it!" type="object" icon="gtk-edit" colspan="1" attrs="{'invisible': [('state', '!=', 'correction')]}"/>
                    </xpath>
                </data>
            </field>
        </record>

