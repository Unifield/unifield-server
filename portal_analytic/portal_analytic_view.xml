<?xml version="1.0"?>
<openerp>
<data>

		<record model="ir.ui.view" id="portal_analytic_account_tree">
			<field name="name">portal.analytic.account.tree</field>
			<field name="model">portal.analytic.account</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Analytic Account" link="0">
					<field name="name"/>
					<field name="date" />
					<field name="quantity" />
					<field name="quantity_max" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="portal_analytic_account_form">
			<field name="name">portal.analytic.account.form</field>
			<field name="model">portal.analytic.account</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Analytic Account" link="0">
					<notebook>
						<page string="Account Data">
							<field name="name" select="1"/>
							<field name="code" select="1"/>
							<field name="date" select="2"/>
							<field name="date_start" />
							<field name="user_id" />
							<separator string="Quantities" colspan="4"/>
							<field name="quantity" />
							<field name="quantity_max" />
						</page>
						<page string="Stats by month">  
							<field name="month_ids" colspan="4" nolabel="1">
								<tree string="Month">
									<field name="name"/>
									<field name="unit_amount" widget="float_time"/>
								</tree>
							</field>
						</page>
						<page string="Stats by user"> 
							<field name="user_ids" colspan="4" nolabel="1">
								<tree string="User">
									<field name="name"/>
									<field name="unit_amount" widget="float_time"/>
								</tree>
							</field>
						</page>
					</notebook>
				</form>
			</field>
		</record>
</data>
</openerp>

