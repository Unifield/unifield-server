        <record id="view_account_move_filter_instance_inherit" model="ir.ui.view">
            <field name="name">account.move.filter.instance.inherit</field>
            <field name="model">account.move</field>
            <field name="type">search</field>
            <field eval="30" name="priority"/>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/search//field[@name='journal_id']" position="replace">
                        <field name="instance_id" on_change="onchange_filter_journal(instance_id, journal_id_fake)"/>
                        <field name="journal_id_fake"/>
                    </xpath>
                    <xpath expr="/search//filter[@string='Date']" position="after">
                        <separator orientation="vertical"/>
                        <filter context="{'group_by': 'instance_id'}"
                            domain="[]" icon="terp-stage" string="Proprietary Instance"/>
                    </xpath>
                </data>
            </field>
        </record>
