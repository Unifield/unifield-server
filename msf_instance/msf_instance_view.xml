<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_msf_instance_form" model="ir.ui.view">
            <field name="name">msf.instance.form</field>
            <field name="model">msf.instance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Proprietary Instance" hide_duplicate_button="1" hide_delete_button="1">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="current_instance_level" invisible="1"/>
                    <notebook colspan="4">
                        <page string="General Information">
		                    <field name="mission" attrs="{'required': [('level', '!=', 'section')], 'readonly': [('level', '=', 'section')]}"/>
		                    <field name="instance" readonly="1"/>
		                    <field name="parent_id" attrs="{'required': [('level', '!=', 'section')], 'readonly': [('level', '=', 'section')]}" on_change="onchange_parent_id(parent_id, level)"/>
		                    <field name="note"/>
		                    <field name="move_prefix"/>
		                    <field name="reconcile_prefix"/>
                            <field name="top_cost_center_id"/>
                            <field name="po_fo_cost_center_id"/>
                        </page>
                        <page string="Cost Centres">
		                    <button name="button_cost_center_wizard" string="Add Cost Centres" type="object" icon="terp-document-new" attrs="{'invisible': ['|', '|', ('level', '=', 'section'), ('level', '=', 'project'), ('current_instance_level', '!=', 'section')]}"/>
		                    <group colspan="4">
			                    <field name="target_cost_center_ids" colspan="4" nolabel="1" attrs="{'invisible': [('level', '=', 'section')]}" widget="one2many_list">
			                        <tree editable="top" string="Cost Centres" hide_new_button="1" hide_delete_button="1">
	                                    <field name="cost_center_id" readonly="1"/>
	                                    <field name="cost_center_name"/>
			                            <field name="is_target"/>
                                        <field name="is_top_cost_center"/>
                                        <field name="is_po_fo_cost_center"/>
			                        </tree>
			                        <form string="Cost Centres">
			                            <field name="cost_center_id" readonly="1"/>
                                        <field name="cost_center_name"/>
			                            <field name="is_target"/>
                                        <field name="is_top_cost_center"/>
                                        <field name="is_po_fo_cost_center"/>
			                        </form>
			                    </field>
		                    </group>
                        </page>
                    </notebook>
                    <field name="state" readonly="1"/>
                    <button name="button_deactivate" string="Deactivate" type="object"
                            attrs="{'invisible': [('state', '!=', 'active')]}" icon="gtk-cancel"
                            confirm="You are about to deactivate this proprietary instance. This action can not be undone, do you want to proceed?" />
                </form>
            </field>
        </record>
        
        <record id="view_msf_instance_tree" model="ir.ui.view">
            <field name="name">msf.instance.tree</field>
            <field name="model">msf.instance</field>
            <field name="type">tree</field>
