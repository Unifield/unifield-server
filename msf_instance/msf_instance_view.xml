            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem action="action_msf_instance_tree" id="menu_action_msf_instance_tree" parent="base.menu_config"/>
        

		<!-- UF-1631, 1632: not allow to duplicate, delete or add new company -->
        <record model="ir.ui.view" id="view_company_inherit_4_form">
            <field name="name">res.company.form.instance.inherit</field>
            <field name="inherit_id" ref="account_msf.view_company_inherit_3_form"/>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            	<data>
                    <xpath expr="/form" position="attributes">
                        <attribute name="hide_delete_button">1</attribute>
                        <attribute name="hide_duplicate_button">1</attribute>
                        <attribute name="hide_new_button">1</attribute>
                    </xpath>
                    
	                <page string="Configuration" position="inside">
	                  <group col="2" colspan="2">
	                      <separator string="Proprietary Instance" colspan="2"/>
	                      <field name="instance_id" required="1" colspan="2" domain="[('state', '=', 'draft')]"/>
	                  </group>
	                </page>
                </data>
            </field>
        </record>

