<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Add new analytic distribution button -->
        <record id="invoice_supplier_form_2" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.2</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook" position="before">
                        <group colspan="6">
                            <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-stock_symbol-selection" context="context" colspan="2"/>
                            <field name="analytic_distribution_line_count" nolabel="1" colspan="1"/>
                            <label string="" colspan="4"/>
                        </group>
                    </xpath>
                    <xpath expr="//tree[@string='Invoice lines']/field[@name='account_analytic_id']" position="replace">
                        <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-stock_symbol-selection" context="context"/>
                        <field name="analytic_distribution_state"/>
                    </xpath>
                    <xpath expr="//tree[@string='Invoice lines']" position="attributes">
                        <attribute name="colors">blue:analytic_distribution_state in ('valid');red:analytic_distribution_state in ('invalid');black:analytic_distribution_state in ('none')</attribute>
                    </xpath>
                </data>
            </field>
        </record>

    <!-- Delete old analytic field -->
        <record id="invoice_line_form" model="ir.ui.view">
            <field name="name">account.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
                <field name="account_analytic_id" position="replace" />
            </field>
        </record>

    </data>
</openerp>
