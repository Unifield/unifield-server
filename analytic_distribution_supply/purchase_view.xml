<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

    <!-- Add the analytic distribution button on Purchase Order -->
        <record id="analytic_purchase_order_form_view" model="ir.ui.view">
            <field name="name">analytic.purchase.order.form.view</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="res_currency_functional.purchase_order_form_inherit" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/group/field[@name='company_id']" position="after">
                        <newline />
                        <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-check" context="context" colspan="2" attrs="{'invisible': ['|', ('analytic_distribution_id', '=', False), ('rfq_ok', '=', True)]}"/>
                        <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-emblem-important" context="context" colspan="2" attrs="{'invisible': ['|', ('analytic_distribution_id', '!=', False), ('rfq_ok', '=', True)]}"/>
                        <field name="analytic_distribution_id" invisible="1"/>
                    </xpath>
                    <xpath expr="/form/notebook/page/field[@name='order_line']/tree/field[@name='currency_id']" position="after">
                        <button name="button_analytic_distribution"
                            string="Analytical distribution"
                            type="object"
                            attrs="{'invisible': [('rfq_ok', '=', True)]}"
                            icon="terp-stock_symbol-selection" />
                        <field name="analytic_distribution_state_recap" invisible="context.get('rfq_ok')"/>
                    </xpath>
                </data>
            </field>
        </record>

    <!-- Delete account_analytic_id from Purchase Order Line Form -->
        <record id="analytic_purchase_order_line_form_view" model="ir.ui.view">
            <field name="name">analytic.purchase.order.line.form.view</field>
            <field name="model">purchase.order.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form" />
            <field name="arch" type="xml">
                <field name="account_analytic_id" position="replace">
                    <group colspan="6" attrs="{'invisible': [('rfq_ok', '=', True)]}">
                            <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-check" context="context" colspan="1" attrs="{'invisible': ['|', ('analytic_distribution_id', '=', False), ('line_number','=',0)]}"/>
                            <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-emblem-important" context="context" colspan="1" attrs="{'invisible': ['|', ('analytic_distribution_id', '!=', False), ('line_number','=',0)]}"/>
                            <field name="analytic_distribution_id" invisible="1"/>
                            <field name="line_number" invisible="1"/>
                            <field name="have_analytic_distribution_from_header"/>
                            <label string=" " />
                    </group>
                </field>
            </field>
        </record>

    </data>
</openerp>
