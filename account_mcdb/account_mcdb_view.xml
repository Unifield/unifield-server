<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Account Multi-Criteria Data Browser Form -->
        <record model="ir.ui.view" id="account_mcdb_form">
            <field name="name">account.mcdb.form</field>
            <field name="model">account.mcdb</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Multi-Criteria Data Browser">
                    <separator string="General"/>
                    <group col="4" colspan="6">
                        <field name="company_id" widget="selection" colspan="2"/><label string="" colspan="4"/>
                        <field name="posting_date_from" colspan="1" string="Posting date"/>
                        <field name="posting_date_to" colspan="1" string="to"/>
                        <field name="document_date_from" colspan="1" string="Document date"/>
                        <field name="document_date_to" colspan="1" string="to"/>
                    </group>
                    <separator string="Accounting"/>
                    <group col="4" colspan="6">
                        <field name="abs_id" colspan="2"/>
                        <group col="4" colspan="6">
                            <field name="journal_id" colspan="2" nolabel="1">
                                <tree string="Journal">
                                    <field name="code"/>
                                    <field name="name" string="Name"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                            <field name="period_id" colspan="2" nolabel="1">
                                <tree string="Period">
                                    <field name="name" string="Name"/>
                                    <field name="date_start" string="Start"/>
                                    <field name="date_stop" string="Stop"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <separator string="Account"/>
                    <group col="4" colspan="6">
                        <field name="rev_account_ids"/>
                        <newline/>
                        <group col="4" colspan="6">
                            <field name="account_ids" colspan="2" nolabel="1">
                                <tree string="Accounts" colors="blue:type in ('view');black:type not in ('view')">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="type" string="Type"/>
                                </tree>
                            </field>
                            <field name="account_type_ids" colspan="2" nolabel="1">
                                <tree string="Account type">
                                    <field name="code"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                        <separator string="Reconciliation"/>
                        <field name="reconciled"/><field name="reconcile_id"/>
                        
                    </group>
                    <separator string="Amount &amp; Currency"/>
                    <group col="8" colspan="6">
                        <field name="currency_choice" colspan="2" on_change="onchange_currency_choice(currency_choice, currency_id, functional_currency_id, booking_currency_id, amount_func_from, amount, func_to, amount_book_from, amount_book_to)"/>
                        <field name="currency_id" attrs="{'readonly': [('currency_choice', '=', 'functional')]}" widget="selection" colspan="2" on_change="onchange_currency(currency_choice, currency_id)"/>
                        <field name="amount_from" string="Amount" colspan="2" on_change="onchange_amount(currency_choice, amount_from, 'from')"/>
                        <field name="amount_to" string="to" colspan="2" on_change="onchange_amount(currency_choice, amount_to, 'to')"/>
                        <newline/>
                        <field name="display_in_output_currency" colspan="2"/>
                    </group>
                    <group col="4" colspan="6">
                        <field name="functional_currency_id" invisible="1"/>
                        <field name="amount_func_from" string="Amount" invisible="1"/>
                        <field name="amount_func_to" string="to" invisible="1"/>
                        <field name="booking_currency_id" widget="selection" invisible="1"/>
                        <field name="amount_book_from" string="Amount" invisible="1"/>
                        <field name="amount_book_to" string="to" invisible="1"/>
                        <field name="output_currency_id" widget="selection" invisible="1"/>
                        <field name="amount_out_from" string="Amount" invisible="1"/>
                        <field name="amount_out_to" string="to" invisible="1"/>
                    </group>
                    <separator string="Third Party"/>
                    <group col="6" colspan="6">
                        <field name="partner_id" colspan="2"/>
                        <field name="employee_id" colspan="2"/>
                        <field name="register_id" colspan="2"/>
                    </group>
                    <separator string="Others"/>
                    <group col="4" colspan="6">
                        <field name="ref" colspan="2"/>
                        <field name="name" colspan="2"/>
                    </group>
                    <separator string=" "/>
                    <group col="4" colspan="6">
                        <button name="button_clear" type="object" string="Clear" icon="gtk-clear" colspan="2"/>
                        <button name="button_validate" type="object" string="Search" icon="gtk-ok" colspan="2"/>
                    </group>
                    <field name="model" invisible="1"/>
                </form>
            </field>
        </record>

        <record id="action_account_mcdb_form" model="ir.actions.act_window">
            <field name="name">Multi-Criteria Data Browser</field>
            <field name="res_model">account.mcdb</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_mcdb_form"/>
        </record>

    <!-- Account Multi-Criteria Data Browser Menu -->
        <menuitem string="MCDB" action="action_account_mcdb_form" id="menu_mcdb" parent="account.menu_finance_entries" sequence="1"/>

    </data>
</openerp>
