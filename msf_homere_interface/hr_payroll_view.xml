<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    <!--
        Payroll Search
    -->

        <record id="view_hr_payroll_msf_filter" model="ir.ui.view">
            <field name="name">Payroll Entries</field>
            <field name="model">hr.payroll.msf</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Journal Items">
                    <field name="employee_id" select="1"/>
                    <field name="account_id" select="1"/>
                </search>
            </field>
        </record>

    <!--
        Payroll Tree
    -->
        <record id="view_hr_payroll_msf_tree" model="ir.ui.view">
            <field name="name">hr.payroll.msf.tree</field>
            <field name="model">hr.payroll.msf</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Payroll List" editable="bottom" colors="blue:analytic_state in ('valid');red:analytic_state in ('invalid');black:analytic_state in ('none')" hide_delete_button="1">
                    <field name="date"/>
                    <field name="period_id"/>
                    <field name="employee_id_number"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="account_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="cost_center_id"/>
                    <field name="funding_pool_id"/>
                    <field name="free1_id"/>
                    <field name="free2_id"/>
                    <field name="analytic_state"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="journal_id" invisible="1"/>
                </tree>
            </field>
        </record>

    <!--
        Actions
    -->
        <record id="action_payroll_tree" model="ir.actions.act_window">
            <field name="name">Payroll entries</field>
            <field name="res_model">hr.payroll.msf</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_payroll_msf_tree"/>
            <field name="search_view_id" ref="view_hr_payroll_msf_filter"/>
            <field name="domain">[('state', '=', 'draft'), ('account_id.user_type.code', '=', 'expense')]</field>
        </record>

        <record id="action_employee_allocation_tree" model="ir.actions.act_window">
            <field name="name">Employee Allocation</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="editable_view_employee_tree"/>
        </record>

    <!--
        Menu
    -->
        <menuitem id="menu_finance_payroll" name="Payroll" parent="account.menu_finance" sequence="13"/>
        <menuitem string="Employee Allocation" action="action_employee_allocation_tree" id="menu_finance_payroll_employees" parent="menu_finance_payroll" sequence="3"/>
        <menuitem string="Payroll entries" action="action_payroll_tree" id="menu_finance_payroll_entries" parent="menu_finance_payroll" sequence="3"/>

    </data>
</openerp>
