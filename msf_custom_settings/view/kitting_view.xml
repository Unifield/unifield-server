<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_kit_creation_tree" model="ir.ui.view">
            <field name="name">kit.creation.tree</field>
            <field name="model">kit.creation</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="kit.view_kit_creation_tree" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/tree" position="attributes">
                        <attribute name='hide_delete_button'>1</attribute>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="view_kit_creation_form" model="ir.ui.view">
            <field name="name">kit.creation.form</field>
            <field name="model">kit.creation</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="kit.view_kit_creation_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form" position="attributes">
                        <attribute name='hide_duplicate_button'>1</attribute>
                        <attribute name='hide_delete_button'>1</attribute>
                    </xpath>
                    <xpath expr="/form//button[@name='confirm_kitting']" position="before" >
                        <button 
                        name="action_cancel"
                        string="Cancel" 
                        type="object" 
                        colspan="2" 
                        attrs="{'invisible': [('state', '=', 'cancel')]}"
                        icon="gtk-cancel"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
