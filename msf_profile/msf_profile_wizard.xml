<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    <record id="base.wizard_lang_export" model="ir.ui.view">
        <field name="name">Export Translations</field>
        <field name="model">base.language.export</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export Translations">
                <group col="8">
                    <group colspan="3">
                        <field name="config_logo" widget="image" width="220" height="130" nolabel="1" colspan="1"/>
                        <newline/>
                    </group>
                    <separator orientation="vertical" rowspan="15"/>
                    <group colspan="4">
                        <field name="lang" required="1"/>
                        <field name="format" />
                        <newline />
                        <group colspan="4">
                            <button icon="gtk-cancel" name="act_cancel" special="cancel" string="_Close" type="object"/>
                            <button icon="gtk-ok" name="act_getfile_background" string="_Export" type="object"/>
                        </group>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="export_lang_background_result" model="ir.ui.view">
        <field name="name">Export Lang step 2</field>
        <field name="model">base.language.export</field>
        <field name="priority" eval="200" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export Translation">
                <separator string="The export process could take quite a long time. The file will be attached to a new request, please check the menu Administration > Customization > Low Level Objects > Requests > Requests" colspan="4"/>
                <group colspan="2">
                    <button icon="gtk-ok" name="open_requests"  string="OK" type="object"/>
                </group>
            </form>
        </field>
    </record>

    <record id="base.view_base_import_language" model="ir.ui.view">
        <field name="name">Import Lang</field>
        <field name="model">base.language.import</field>
        <field name="priority" eval="200" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Import Translation">
                <group col="8">
                    <group colspan="3">
                        <field name="config_logo" widget="image" width="220" height="130" nolabel="1" colspan="1"/>
                        <newline/>
                        <label colspan="4" string="Supported file formats: *.csv (Comma-separated values), *.po (GetText Portable Objects) or *.xml (XML SpreadSheet 2003" />
                        <label colspan="4" string="When using CSV format or PO format, please double-check that the file encoding is set to UTF-8 (sometimes called Unicode) when the translator exports it." />
                        <label colspan="4" string="When using CSV format or XML SpreadSheet 2003 format, please check that the first line of your file is one of the following:"/>
                        <label colspan="4" string="- type,name,res_id,src,value"/>
                        <label colspan="4" string="- module,type,name,res_id,src,value"/>
                    </group>
                    <separator orientation="vertical" rowspan="15"/>
                    <group colspan="4">
                        <field name="name" required="1"/>
                        <field name="code" />
                        <field name="data" />
                        <group colspan="4">
                            <button icon="gtk-cancel" name="act_cancel" special="cancel" string="_Close" type="object"/>
                            <button icon="gtk-ok" name="import_lang_background" string="_Import" type="object"/>
                        </group>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="import_lang_background_result" model="ir.ui.view">
        <field name="name">Import Lang step 2</field>
        <field name="model">base.language.import</field>
        <field name="priority" eval="200" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Import Translation">
                <separator string="The import process could take quite a long time, when finished a new request will be created, please check the menu Administration > Customization > Low Level Objects > Requests > Requests" colspan="4"/>
                <group colspan="2">
                    <button icon="gtk-ok" name="open_requests"  string="OK" type="object"/>
                </group>
            </form>
        </field>
    </record>
</data>
</openerp>
