<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="picking_create_picking_ticket_view" model="ir.ui.view">
			<field name="name">Create Picking Ticket</field>
			<field name="model">picking.create.picking.ticket</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Create Picking Tickets">
					<separator colspan="4"
						string="This wizard will help you create picking tickets" />

					<field name="delivery_orders" colspan="4" nolabel="True"
						on_change="onChangeDeliveryOrders(delivery_orders, context)"
						domain="[('type', '=', 'out'), ('sale_id', '!=', False)]">
						<tree
							colors="blue:state in ('draft');grey:state in ('cancel');red:state
						not in ('cancel', 'done') and date &lt; current_date"
							string="Delivery Orders">
							<field name="id" />
							<field name="name" />
							<field name="partner_id" />
							<field name="origin" />
							<field name="date" />
							<field name="min_date" />
							<field name="backorder_id" groups="base.group_extended" />
							<field name="invoice_state" />
							<field name="stock_journal_id" groups="base.group_extended"
								widget="selection" />
							<field name="state" />
						</tree>
					</field>
					<separator colspan="4" />
					<group colspan="2" col="4">
						<button special="cancel" string="Cancel" icon="gtk-cancel" />
						<button name="createPickingTickets" string="Create Picking Tickets"
							type="object" icon="terp-stock_effects-object-colorize" />
					</group>
				</form>
			</field>
		</record>



		<record id="picking_create_picking_ticket_action" model="ir.actions.act_window">
			<field name="name">Create Picking Ticket</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">picking.create.picking.ticket</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="picking_create_picking_ticket_view" />
			<field name="context">{'test' : 'PROUT'}</field> <!-- context used in the onChange function -->
			<field name="target">new</field>
		</record>


		<menuitem icon="STOCK_INDENT" action="picking_create_picking_ticket_action"
			id="menu_create_picking_ticket" parent="stock.menu_stock_warehouse_mgmt" />

	</data>
</openerp>
