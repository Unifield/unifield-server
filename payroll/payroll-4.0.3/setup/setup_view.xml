        <record model="ir.ui.view" id="edit_pay_elements">
			<field name="name">payroll.setup.payelements.form</field>
			<field name="model">payroll.setup.payelements</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Pay Elements">
                  			<separator string="General Information" colspan="4" />
                            <field name="element_type" select="1" required="1"/>
                            <field name="name" select="1"/>
							<seperator string="" colspan="3"/>
                            <field name="description" select="1"/>
                            <field name="element_specific" select="1"/>
                            <field name="taxable" select="1"/>
                            <field name="monthly_variable" select="1"/>
                            <field name="emp_wise_posting" select="1"/>
                            <separator string="If pay element specific" colspan="4" />
                            <field name="dependent_on" select="1"/>
                            <field name="formulae" select="1"/>
							<separator string=" " colspan="4"/>
                            <field name="value" select="1"/>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_pay_elements">
			<field name="name">payroll.setup.payelements.tree</field>
			<field name="model">payroll.setup.payelements</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Pay Elements">
					<field name="element_type" select="1"/>
					<field name="name" select="1"/>
					<field name="description" select="1"/>
					<field name="element_specific" select="1"/>
					<field name="taxable" select="1"/>
					<field name="monthly_variable" select="1"/>
					<field name="emp_wise_posting" select="1"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="open_view_pay_elements">
			<field name="name">payroll.setup.payelements.list</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">payroll.setup.payelements</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_pay_elements" />
		</record>
		<menuitem name="Payroll/Configuration/Pay Elements" id="list_pay_elements" action="open_view_pay_elements" groups="base.group_admin"/>
		
