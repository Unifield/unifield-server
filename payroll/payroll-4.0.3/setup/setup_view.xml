			<field name="name">payroll.setup.form</field>
			<field name="model">payroll.setup</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Payroll Setup">
                    <notebook>
						<page string="General">
							<field name="name" select="1"/>
