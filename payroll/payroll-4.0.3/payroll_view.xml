<?xml version="1.0" ?>
<openerp>
	<data>
		<menuitem name="Payroll" id="menu_hr_root" icon="terp-hr"/>
		<menuitem name="Payroll/HR" icon="terp-hr"/>
		<menuitem name="Payroll/HR/Configuration" groups="base.group_admin"/>
		<menuitem name="Payroll/Configuration" groups="base.group_admin"/>

		<!--
		==========
		Employee 
		==========
		-->
		<record model="ir.ui.view" id="view_employee_form">
			<field name="name">hr.employee.form</field>
			<field name="model">hr.employee</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Employee">
					<notebook>
						<page string="Information">
							<separator string="General Information" colspan="4" />
							<field name="name" select="1"/>
							<field name="company_id"/>
							<field name="user_id"/>
							<field name="address_id"/>
							<field name="dob"/>
							<field name="sex"/>
							<field name="notes" colspan="3"/>
							<separator string="Working Data" colspan="4" />
							<field name="regime" />
							<field name="active" select="1" />
							<field name="holiday_max" />
							<field name="started" select="1" />
							<field name="workgroups" colspan="4" />
							<field name="state"/>
							<field name="parent_id" select="1"/>
							<field name="bank_account"/>
							<field name="position" on_change="onchange_position(state,position)"/>
							<field name="department"/>
							<group colspan="2" col="2">
								<button string="Sign in !" name="sign_in" states="absent" type="object" />
								<button string="Sign out !" name="sign_out" states="present" type="object" />
							</group>
						</page>						
						<page string="Salary">
							<separator string="Salary Structure" colspan="4" />
							<!--<field name="basic" on_change="onchange_basic(basic)"/>-->
							<field name="payelements" colspan="4" widget="one2many_list" nolabel="1"/>
							<group colspan="4" col="2">
								<label string="Press 'calculate' to compute calculted value" name="cal_label"/>
								<button string="Compute" name="calculate_value" type="object"/>
							</group>
							<!--
							<field name="deductions" colspan="3" widget="one2many_list"	nolabel="1" />
							<field name="declaration" colspan="3" widget="one2many_list" nolabel="1"/>
							<group colspan="4" col="8">
								<field name="gross_salary"/>
								<label string="-"/>
								<field name="net_deduction"/>
								<label string="="/>
								<field name="net_salary"/>
							</group>-->
						</page>
						<page string="Holidays">
							<field name="holidays" colspan="3"
								widget="one2many_list"
								nolabel="1" />
						</page>
						<page string="Tax Declaration">
							<field name="tax_declaration"/>
						</page>
						<page string="Specify Increment">
							<field name="specify_incr"/>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_employee_tree">
			<field name="name">hr.employee.tree</field>
			<field name="model">hr.employee</field>
			<field name="type">tree</field>
			<field name="field_parent">child_ids</field>
			<field name="arch" type="xml">
				<tree string="Employees">
					<field name="name"/>
					<field name="user_id"/>
					<field name="address_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="open_view_employee_tree">
			<field name="name">hr.employee</field>
			<field name="res_model">hr.employee</field>
			<field name="view_type">tree</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_employee_tree"/>
			<field name="domain">[('parent_id','=',False)]</field>
		</record>
		<menuitem name="Payroll/HR/Hierarchical view of Employees" id="menu_open_view_employee_tree" action="open_view_employee_tree" groups="base.group_admin"/>

		<record model="ir.ui.view" id="view_employee_list">
			<field name="name">hr.employee.tree</field>
			<field name="model">hr.employee</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employees">
					<field name="name"/>
					<field name="user_id"/>
					<field name="address_id"/>
					<field name="state"/>
					<field name="position"/>
					<field name="parent_id"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="open_view_employee_list">
			<field name="name">hr.employee</field>
			<field name="res_model">hr.employee</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_employee_list"/>
		</record>
		<menuitem name="Payroll/HR/List of Employees" id="menu_open_view_employee_list" action="open_view_employee_list" groups="base.group_admin"/>

		<!--
		=======================
		Employee architecture
