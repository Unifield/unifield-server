<?xml version="1.0" ?>
<openerp>
	<data>
		<!--  Employee Setup -->
        <record model="ir.ui.view" id="edit_emp_pay_elements">
			<field name="name">employee.setup.payelements.form</field>
			<field name="model">employee.setup.payelements</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Pay Elements">
                    
							<separator string="General Information" colspan="4" />
                            <field name="element_name" select="1" on_change="onchange_payelements(element_name)"/>
                            <!--<field name="element_type" select="1"/>-->
                            <field name="name" select="1"/> <!-- on_change="onchange_percent(percent)"/> -->
                                                
                            <separator string="Dependent On " colspan="4" />
                            <field name="dependent_on" select="1"/>
                            <field name="formulae" select="1"/>
                            <field name="value" select="1"/>
                    
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_emp_pay_elements">
			<field name="name">employee.setup.payelements.tree</field>
			<field name="model">employee.setup.payelements</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Pay Elements">
					<field name="element_name" select="1"/>
					<!--<field name="element_type" select="1"/>-->
					<field name="name" select="1"/> <!-- on_change="onchange_percent(percent)"/> -->
					<field name="dependent_on" select="1"/>
                    <field name="formulae" select="1"/>
                    <field name="value" select="1"/>
					<field name="cal_value" select="1"/>
				</tree>
			</field>
		</record>
		
		<!-- Employee specify  increment -->
		<record model="ir.ui.view" id="edit_emp_specify_increment">
			<field name="name">employee.specify.increment.form</field>
			<field name="model">employee.specify.increment</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Employee Increment">
                    <separator string="Increment Info" colspan="4" />
                    <!--<field name="name" select="1" required="1"/>-->
                    <field name="incr_date" select="1" required="1"/>
					<field name="component" select="1" required="1"/>
                    <field name="description" select="1"/> <!-- on_change="onchange_percent(percent)"/> -->
                    <field name="amount" select="1" required="1"/>
					<field name="aplicable" select="1"/>
					<field name="status" select="1" readonly="1"/>
					<!--<separator string="" colspan="4" />
					<button string="Apply" name="increment_apply" type="object"/>-->
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_emp_specify_increment">
			<field name="name">employee.specify.increment.tree</field>
			<field name="model">employee.specify.increment</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Employee Increment">
					<field name="name" select="1"/>
                    <field name="incr_date" select="1"/>
					<field name="component" />
                    <field name="description" select="1"/> <!-- on_change="onchange_percent(percent)"/> -->
                    <field name="amount" select="1"/>
					<field name="aplicable" select="1"/>
					<field name="status" select="1"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="open_view_emp_specify_increment">
			<field name="name">employee.specify.increment</field>
			<field name="res_model">employee.specify.increment</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="edit_emp_specify_increment"/>
		</record>
		<!-- <menuitem name="Payroll/Configuration/Specify Increment" id="menu_open_view_emp_specify_increment" action="open_view_emp_specify_increment" groups="base.group_admin"/> -->
	</data>
</openerp>
