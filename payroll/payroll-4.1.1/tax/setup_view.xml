<?xml version="1.0" ?>
<openerp>
	<data>
		<!--  Employee Setup -->
        <record model="ir.ui.view" id="edit_emp_tax_declarations">
			<field name="name">employee.tax.declarations.form</field>
			<field name="model">employee.tax.declarations</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Tax Declarations">
                    <separator string="Declaration form" colspan="4" />
                    <field name="status" select="1" required="1"/>
                    <field name="rebate_code" select="1" required="1"/> <!-- on_change="onchange_percent(percent)"/> -->
                    <field name="description" select="1"/>
					<field name="scheme_code" select="1"/>
					<field name="policy_no" select="1"/>
					<field name="premium_yr" select="1"/>
					<field name="amount" select="1"/>
					<field name="deduction_inc" select="1"/>
					<field name="proof_recv" select="1"/>
                    
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_emp_tax_declararions">
			<field name="name">employee.tax.declarations.tree</field>
			<field name="model">employee.tax.declarations</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Tax Declarations">
					<field name="status" select="1" required="1"/>
                    <field name="rebate_code" select="1" required="1" on_change="onchange_rebate_code(rebate_code)"/>
                    <field name="description" select="1"/>
					<field name="scheme_code" select="1"/>
					<field name="policy_no" select="1"/>
					<field name="premium_yr" select="1"/>
					<field name="amount" select="1"/>
					<field name="deduction_inc" select="1"/>
					<field name="proof_recv" select="1"/>
				</tree>
			</field>
		</record>
		
		<!-- tax rebate sections -->
		<record model="ir.ui.view" id="edit_tax_rebate_sections">
			<field name="name">tax.rebate.sections.form</field>
			<field name="model">tax.rebate.sections</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Tax Rebate Sections">
                    <separator string="Rebate Secions" colspan="4" />
                    <field name="name" select="1" required="1"/>
                    <field name="description" select="1" required="1"/>
                    <field name="max_limit" select="1"/>
					<field name="deduction_inc" select="1"/>
					<field name="dependency" select="1" colspan="4"/>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_tax_rebate_sections">
			<field name="name">tax.rebate.sections.list</field>
			<field name="model">tax.rebate.sections</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Tax Declarations">
					<field name="name" select="1" required="1"/>
                    <field name="description" select="1" required="1"/>
                    <field name="max_limit" select="1"/>
					<field name="deduction_inc" select="1"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="open_tax_rebate_sections">
			<field name="name">tax.rebate.sections</field>
			<field name="res_model">tax.rebate.sections</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_tax_rebate_sections"/>
		</record>
		<menuitem name="Payroll/Configuration/Tax Rebate Sections" id="menu_open_tax_rebate_sections_tree" action="open_tax_rebate_sections" groups="base.group_admin"/>
		
		<!-- tax rebates -->
		<record model="ir.ui.view" id="edit_tax_rebates">
			<field name="name">tax.rebates.form</field>
			<field name="model">tax.rebates</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Tax Rebates">
                    <separator string="Tax Rebates" colspan="4" />
					<!-- <field name="section_id" select="1" required="1"/> -->
                    <field name="name" select="1" required="1"/>
                    <field name="description" select="1" required="1"/>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_tax_rebates">
			<field name="name">tax.rebates.tree</field>
			<field name="model">tax.rebates</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Tax Rebates">
					<field name="section_id" select="1"/>
					<field name="name" select="1"/>
                    <field name="description" select="1"/>
				</tree>
			</field>
		</record>
	</data>
</openerp>
