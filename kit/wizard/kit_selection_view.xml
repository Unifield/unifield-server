<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_kit_selection_form_wizard" model="ir.ui.view">
            <field name="name">view.kit.selection.form.wizard</field>
            <field name="model">kit.selection</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Theoretical Kit Selection">
            	<separator string="You need to select a theoretical kit in order to replace the kit by its components." colspan="4"/>
                <field name="question" nolabel="True" invisible="True" colspan="4" />
                <field name="product_id" colspan="4" />
                <field name="kit_id" colspan="4" domain="[('state', '=', 'completed'), ('composition_type', '=', 'theoretical'), ('composition_product_id', '=', product_id)]" />
                <group colspan="2" />
                <button icon='gtk-cancel' special="cancel"
                    string="_Close" />
                <button name="do_de_kitting" string="Ok"
                    type="object" icon="gtk-ok" />
            </form>
            </field>
        </record>

    </data>
</openerp>
