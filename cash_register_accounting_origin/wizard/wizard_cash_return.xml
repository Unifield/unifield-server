<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wizard_cash_return_form1">
            <field name='name'>wizard.cash.return.form1</field>
            <field name='model'>wizard.cash.return</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string="Cash Return- Wizard">
                    <label string="Welcome to the Cash Return Wizard. This wizard help you to consider a cash return in the cashbox and link 
                        it to some invoices." colspan="4"/>
                    <separator string="Necessary Information" colspan="4"/>
                    <field name="initial_amount"/>
                    <newline />
                    <field name='returned_amount' on_change="onchange_returned_amount(returned_amount, invoice_line_ids, advance_line_ids, 
                        display_invoice)"/>
                    <newline />
                    <group colspan="4">
                        <field name='invoice_id' nolabel="1" domain="[('type', '=', 'in_invoice'), ('state', '=', 'open')]"/>
                        <button string='Add invoice' name='action_add_invoice' type='object' icon='gtk-add' />
                    </group>
                    <newline />
                    <field name='invoice_line_ids' attrs="{'invisible':[('display_invoice', '!=', True)]}" nolabel="1" colspan="4" on_change="changeline(invoice_line_ids, returned_amount)"/>
                    <newline />
                    <field name='advance_line_ids' attrs="{'invisible':[('display_invoice', '=', True)]}" nolabel="1" colspan="4" on_change="changeline(advance_line_ids, returned_amount)"/>
                    <newline />
                    <field name="total_amount"/>
                    <newline />
                    <field name='display_invoice' invisible="1"/>
                    <group colspan="4">
                        <button string='Cancel' special='cancel' icon='gtk-cancel' />
                        <button string="Compute" name="compute_total_amount" type="object" icon='gtk-execute'/>
                        <button string='Ok' name='action_confirm_cash_return' type='object' icon='gtk-apply' />
                    </group>
                </form>
            </field>
          </record>

        <record model="ir.ui.view" id="wizard_invoice_line_tree">
            <field name='name'>wizard.invoice.line.tree</field>
            <field name='model'>wizard.invoice.line</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string="Invoice Lines">
                    <field name="date" />
                    <field name="reference" />
                    <field name="communication" />
                    <field name="account_id" />
                    <field name="partner_id" />
                    <field name="amount" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="wizard_invoice_line_form">
            <field name='name'>wizard.invoice.line.form</field>
            <field name='model'>wizard.invoice.line</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string="Invoice Lines">
                    <field name="date" />
                    <field name="reference" />
                    <field name="communication" />
                    <field name="account_id" />
                    <field name="partner_id" />
                    <field name="amount" />
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="wizard_advance_line_tree">
            <field name='name'>wizard.advance.line.tree</field>
            <field name='model'>wizard.advance.line</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree editable="bottom" string="Advance Lines">
                    <field name="date" />
                    <field name="description" />
                    <field name="account_id" />
                    <field name="partner_id" />
                    <field name="amount" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="wizard_advance_line_form">
            <field name='name'>wizard.advance.line.form</field>
            <field name='model'>wizard.advance.line</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string="Advance Lines">
                    <field name="date" />
                    <field name="description" />
                    <field name="account_id" />
                    <field name="partner_id" />
                    <field name="amount" />
                </form>
            </field>
        </record>

    </data>
</openerp>
