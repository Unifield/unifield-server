<?xml version="1.0"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="sale_order_form_fleet_maintenance">
			<field name="name">sale.order.form.fleet_maintenance.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="type">form</field>
      <field name="arch" type="xml">
				<field name="partner_id" position="after">
						<field name="fleet_id" string="Default Sub Fleet" domain="[('is_sub_fleet','=',True), ('parent_partner_id','=',partner_id)]"/>
				</field>
	    </field>
		</record>
		
		
		<record model="ir.ui.view" id="sale_order_form_fleet_maintenance2">
			<field name="name">sale.order.form.fleet_maintenance2.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="type">form</field>
      <field name="arch" type="xml">
				<xpath expr="/form/notebook/page/field/form/notebook" position="inside">
						<page string="Maintenance">
							<separator string="Fleet"/>
							<field name="is_maintenance" invisible="1"/>
							<!--field name="product_type" invisible="1"/> TODO put an or there -->
		     			<field name="fleet_id" attrs="{'required':[('is_maintenance','=',True)]}" domain="[('is_sub_fleet','=',True), ('parent_partner_id','=',parent.partner_id)]" on_change="fleet_id_change(parent.fleet_id, fleet_id, product_id, maintenance_start_date)"/>
              <newline/>
		     			<separator string="Maintenance Dates"/>
		     			<field name="maintenance_month_qty" attrs="{'readonly':[('is_maintenance','=',False)], 'required':[('is_maintenance','=',True)]}" on_change="maintenance_qty_change(maintenance_product_qty, maintenance_month_qty, maintenance_start_date, maintenance_end_date)" />
		    			<field name="maintenance_product_qty" attrs="{'readonly':[('is_maintenance','=',False)], 'required':[('is_maintenance','=',True)]}" on_change="maintenance_qty_change(maintenance_product_qty, maintenance_month_qty, maintenance_start_date, maintenance_end_date)" />
		     			<field name="maintenance_start_date" attrs="{'readonly':[('is_maintenance','=',False)], 'required':[('is_maintenance','=',True)]}" on_change="maintenance_qty_change(maintenance_product_qty, maintenance_month_qty, maintenance_start_date, maintenance_end_date)"/>
		    			<field name="maintenance_end_date" attrs="{'readonly':[('is_maintenance','=',False)], 'required':[('is_maintenance','=',True)]}" on_change="maintenance_qty_change(maintenance_product_qty, maintenance_month_qty, maintenance_start_date, maintenance_end_date)" />
						</page>
				</xpath>
	    </field>
		</record>
		
		
		<record model="ir.ui.view" id="sale_order_form_fleet_maintenance3">
			<field name="name">sale.order.form.fleet_maintenance3.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="type">form</field>
      <field name="arch" type="xml">
				<xpath expr="/form/notebook/page/field/tree/field[@name='product_uom_qty']" position="after">
	    			<field name="maintenance_product_qty" />
	     			<field name="fleet_id" string="Sub Fleet"/>
	     			<field name="maintenance_start_date"/>
	     			<field name="maintenance_month_qty" />
				</xpath>
	    </field>
		</record>
	</data>
</openerp>