<?xml version="1.0"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="view_partner_form_fleet_maintenance">
			<field name="name">res.partner.form.fleet_maintenance.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="type">form</field>			
      <field name="arch" type="xml">
	        <notebook position="inside">
	        	<page string="Fleets">
							<field colspan="4" mode="tree" context="{'fleet_type':'sub_fleet'}" name="sub_fleets" nolabel="1">
								<tree string="Sub Fleets" colors="red:is_expired;blue:fleet_type=='fleet'">
									<field name="indented_name" />
									<field name="is_expired" />
									<field name="time_to_expire" />
									<field name="expire_time" />
								</tree>
							</field>
	        	</page>
	        </notebook>
	    </field>
		</record>
	</data>
</openerp>