<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
            
        <record id="initial_stock_inventory_form_import" model="ir.ui.view">
            <field name="name">initial.stock.inventory.form.import</field>
            <field name="model">initial.stock.inventory</field>
            <field name="type">form</field>
            <field name="priority">301</field>
            <field name="inherit_id" ref="specific_rules.stock_initial_inventory_form_view" />
            <field name="arch" type="xml">
                <data>
                <xpath expr="/form/notebook/page/field[@name='order_line']/tree/field[@name='currency_id']" position="after">
                    <field name="to_correct_ok" invisible="1"/>
                </xpath>
                <xpath expr="/form/notebook/page/field[@name='order_line']/tree" position="attributes" >
                    <attribute name="colors">red:to_correct_ok == True</attribute>
                </xpath>
                <xpath expr="/form/notebook/page[@string='Purchase Order']/field[@name='order_line']" position="before" >
                <group name="import" string=" Import Lines " colspan="4" attrs="{'invisible':[('state', '!=', 'draft')]}">
                    <label colspan="4" string="The file should be in XML Spreadsheet 2003 format." align="0.0"/>
                    <label colspan="4" string="The columns should be in this order : Product Code*, Product Description*, Quantity*, Product UoM*, Unit Price*, Delivery Requested Date*, Currency*, Comment" align="0.0"/>
                    <field name="file_to_import" colspan="2" />
                    <button name="import_file" string="Import the file" icon="gtk-execute" colspan="1" type="object" />
                    <button name="button_remove_lines" string="Delete Lines" icon="gtk-remove" colspan="1" type="object" invisible="1"/>
                    <button name="check_lines_to_fix" string="Check Lines" icon="gtk-dialog-warning" colspan="1" type="object" invisible="0"/>
                </group>
            </xpath>
                </data>
            </field>
        </record>
        
    </data>
</openerp>
