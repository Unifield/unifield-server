<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
            
        <record id="tender_form_view_import" model="ir.ui.view">
            <field name="name">tender.form.view.import</field>
            <field name="model">tender</field>
            <field name="type">form</field>
            <field name="priority">301</field>
            <field name="inherit_id" ref="tender_flow.tender_form" />
            <field name="arch" type="xml">
                <data>
                <xpath expr="/form/notebook/page[@string='Tender Lines']/field[@name='tender_line_ids']/tree/field[@name='state']" position="after" >
                    <field name="to_correct_ok" invisible="1"/>
                    <field name="text_error" attrs="{'invisible':[('to_correct_ok', '=', False)]}" />
                </xpath>
                <xpath expr="/form/notebook/page[@string='Tender Lines']/field[@name='tender_line_ids']/tree" position="attributes" >
                    <attribute name="colors">red:to_correct_ok == True</attribute>
                </xpath>
                <xpath expr="/form/notebook/page[@string='Tender Lines']/field[@name='tender_line_ids']" position="before" >
                <group name="import" string=" Import Lines " colspan="4">
                    <label colspan="4" string="The file should be in XML Spreadsheet 2003 format." align="0.0"/>
                    <label colspan="4" string="The columns should be in this order : Product Code*, Product Name*, Qty*, Product UoM*, Unit Price*, Delivery Requested Date*" align="0.0"/>
                    <field name="file_to_import" colspan="2" />
                    <button name="import_file" string="Import the file" icon="gtk-execute" colspan="1" type="object" />
                    <button name="button_remove_lines" string="Delete Lines" icon="gtk-remove" colspan="2" type="object" invisible="1"/>
                    <button name="check_lines_to_fix" string="Check Lines" icon="gtk-dialog-warning" colspan="1" type="object" invisible="0"/>
                </group>
                </xpath>
                </data>
            </field>
        </record>
        
    </data>
</openerp>
