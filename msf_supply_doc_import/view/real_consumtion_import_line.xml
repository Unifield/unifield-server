<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_real_consumption_form" model="ir.ui.view">
            <field name="name">real.consumption.form.view</field>
            <field name="model">real.average.consumption</field>
            <field name="type">form</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="consumption_calculation.real_average_consumption_form_view" />
            <field name="arch" type="xml">
                <data>
                <xpath expr="/form//field[@name='line_ids']/tree[@string='Products']" position="inside">
                    <field name="to_correct_ok" invisible="1"/>
                </xpath>
                <xpath expr="/form//field[@name='line_ids']/tree" position="attributes" >
                    <attribute name="colors">red:to_correct_ok == True</attribute>
                </xpath>
                <xpath expr="/form//field[@name='line_ids']" position="before" >
                <group name="import" string=" Import Lines " colspan="4" attrs="{'invisible':[('state', '!=', 'draft')]}">
                    <label colspan="4" string="The columns should be in this order : Product Code*, Product Description*, Product UOM, Batch Number, Expiry Date, Consumed Quantity, Remark" align="0.0" invisible="1"/>
                    <field name="file_to_import" colspan="2" />
                    <button name="import_file" string="Import the file" icon="gtk-execute" colspan="1" type="object" />
                </group>
                </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
