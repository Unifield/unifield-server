<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_import_monthly_consumption_form" model="ir.ui.view">
            <field name="name">monthly.review.consumption.form.view</field>
            <field name="model">monthly.review.consumption</field>
            <field name="type">form</field>
            <field name="priority">18</field>
            <field name="inherit_id" ref="consumption_calculation.monthly_review_consumption_form_view" />
            <field name="arch" type="xml">
                <data>
                <xpath expr="/form//field[@name='line_ids']" position="before" >
                <group name="import" string=" Import Lines " colspan="4" col="24">
                    <field name="file_to_import" colspan="2" />
                    <button name="import_file" string="Import the file" icon="gtk-execute" colspan="1" type="object" />
                    <button name="button_remove_lines" string="Remove lines" icon="gtk-remove" colspan="1" type="object" />
                    <button name="remove_error_message" string="Remove error message" icon="gtk-remove" colspan="1" type="object"  attrs="{'invisible':[('to_correct_ok', '=', False)]}"/>
                    <field name="to_correct_ok" invisible="1" colspan="1" />
                </group>
                <group name="error_import" string=" Error On Import Lines " colspan="4" attrs="{'invisible':[('to_correct_ok', '=', False)]}">
                    <field name="text_error" colspan="4" col="1" nolabel="1"/>
                </group>
                </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
