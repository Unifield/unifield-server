<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="1">
		<record model="profile.game.retail.phase1" id="phase1">
		        <field name="name">Phase1</field>        
		        <field name="state">not running</field>
    	</record>
	</data>
    <data>

        <record model="ir.ui.view" id="view_game_phase1_form">
            <field name="name">profile.game.retail.phase1.form</field>
            <field name="model">profile.game.retail.phase1</field>
            <field name="arch" type="xml">
                <form string="Game Scenario">
                    <field name="name" align="0.0"/>
                    <separator string="Retail Scenario - Objectives" colspan="4"/>
                    <label string="Explain the scenario introduction here..." align="0.0" colspan="4"/>
                    <label string="Explain the scenario system here..." align="0.0" colspan="4"/>
                    <label string="Explain the scenario system here..." align="0.0" colspan="4"/>
                    <newline/>
                    <separator string="Retail Scenario - Scenario" colspan="4"/>
                    <label string="Explain the scenario system here..." align="0.0" colspan="4"/>
                    <label string="Explain the scenario system here..." align="0.0" colspan="4"/>
                    <label string="Explain the scenario system here..." align="0.0" colspan="4"/>
                    <label string="You can get the explanation at http://openerp.com..." align="0.0" colspan="4"/>
                    <group colspan="1" col="2">
                        <separator string="Sales Manager" colspan="2"/>
                        <field name="step1"/>
                        <field name="step2"/>
                        <field name="step3"/>
                    </group>
                    <group colspan="1" col="2">
                        <separator string="HR Manager" colspan="2"/>
                        <field name="step4"/>
                        <field name="step5"/>
                        <field name="step6"/>
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Logistic Manager" colspan="2"/>
                        <field name="step7"/>
                        <field name="step8"/>
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Financial Manager" colspan="2"/>
                        <field name="step9"/>
                        <field name="step10"/>
                    </group>
                    <newline/>
                    <group colspan="4">
                        <separator string="References" colspan="4"/>
                        <field name="step1_so_id" align="0.0"/>
                        <separator string="State" colspan="4"/>
                        <field name="state" align="0.0"/>
                        <button string="Start Scenario" name="confirm" states="not running" type="object"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_game_phase1_tree">
            <field name="name">profile.game.retail.phase1.tree</field>
            <field name="model">profile.game.retail.phase1</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Game Scenario">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_game_phase1_form">
            <field name="name">Game Scenario</field>
            <field name="res_model">profile.game.retail.phase1</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

		<record id="note_game_type" model="board.note.type">
            <field name="name">Business Game</field>
        </record>
        
        <record id="board_game_form" model="ir.ui.view">
            <field name="name">board.game.form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Business Game Board">
                    <hpaned position="100">
                        <child1>
                            <action colspan="4" view_mode="form" height="200" name="%(action_game_phase1_form)d" string="My Game operation" width="510"/>
                         </child1>   
                    </hpaned>
                </form>
            </field>
        </record>
        
        <record id="open_board_game" model="ir.actions.act_window">
            <field name="name">Business Game Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="board_game_form"/>
        </record>

        <menuitem
            name="Business Game Scenario"
            parent="business_game"
            sequence="1"
            id="menu_game_phase1"
            action="action_game_phase1_form"/>

		<record id="account.user_finance" model="res.users">
            <field name="action_id" ref="open_board_game"/>           
        </record>
        <record id="hr.user_hr" model="res.users">
            <field name="action_id" ref="open_board_game"/> 
        </record>
        <record id="stock.user_logistic" model="res.users">
            <field name="action_id" ref="open_board_game"/> 
        </record>
        <record id="sale.user_sales" model="res.users">
            <field name="action_id" ref="open_board_game"/> 
        </record>

     </data>
</openerp>
