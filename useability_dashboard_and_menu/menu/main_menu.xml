<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
    
        <menuitem id="product_attributes.menu_main_product" 
                  name="Products" 
                  web_icon_hover="images/products.png"
                  web_icon="images/products-hover.png" 
                  action="product.product_normal_action"
                  sequence="1" 
                />
       <menuitem id="base.menu_purchase_root" 
                 name="Purchases"
                 icon="terp-purchase"
                 groups="purchase.group_purchase_manager,purchase.group_purchase_user"
                 web_icon="images/purchases.png"
                 web_icon_hover="images/purchases-hover.png"
                 sequence="2"/>
                 
        <menuitem id="menu_base_partner" 
                  name="Orders"
                  icon="terp-partner"
                  web_icon="images/partner.jpg"
                  web_icon_hover="images/partner_hover.jpg"
                  sequence="3" />

        <record id="open_partner_tree" model="ir.actions.act_window">
            <field name="name">Partners</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help">We display here both Customers an Suppliers.</field>
        </record>

        <menuitem id="menu_partner" 
                  name="Partners" 
                  web_icon="images/partner.jpg"
                  web_icon_hover="images/partner_hover.jpg"
                  action="open_partner_tree"
                  sequence="4" 
                />
                  
        <menuitem id="stock.menu_stock_root" 
                  name="Warehouse"
                  icon="terp-stock"
                  groups="stock.group_stock_manager,stock.group_stock_user" 
                  web_icon="images/warehouse.png"
                  web_icon_hover="images/warehouse-hover.png"
                  sequence="5"/>
         
    
        <menuitem id="object_query.main_menu_preferences" 
                  name="Tools" 
                  web_icon="images/prefs.png"
                  web_icon_hover="images/prefs-hover.png" 
                  action="object_query.action_object_query"
                  sequence="6"
                  />
                  
        <menuitem id="menu_supply_config" 
                  name="Supply Configuration" 
                  web_icon="images/supply.png"
                  web_icon_hover="images/supply_hover.png"
                  sequence="7"
                  />
                  
        <menuitem id="product_attributes.menu_product_config" 
        name="Configuration" 
        parent="menu_supply_config" 
        sequence="20" />
                  
        <menuitem id="base.menu_administration"
                  name="Administration" 
                  icon="terp-administration"
                  web_icon="images/administration.png"
                  web_icon_hover="images/administration-hover.png"
                  sequence="8"/>
                  
        <menuitem id="account.menu_finance" name="Accounting"
                  icon="terp-account" 
                  groups="account.group_account_user,account.group_account_manager,account.group_account_invoice"
                  web_icon="images/accounting.png"
                  web_icon_hover="images/accounting-hover.png"
                  sequence="9"/>
                  
        <menuitem id="hr.menu_hr_root" 
                  name="Human Resources" 
                  icon="terp-hr" 
                  web_icon="images/hr.png"
                  web_icon_hover="images/hr-hover.png"
                  sequence="10"/>
                  
        <!-- Asset Events in SALES>Products>Assets -->
        <menuitem action="product_asset.asset_event_normal_action" 
            id="product_asset.menu_asset_event_sales"
            name = "Asset events &amp; follow up"
            parent="product_asset.menu_asset_sales" sequence="1" />
                  
        <menuitem action="product_asset.asset_type_normal_action" 
                  id="product_asset.menu_asset_type_sales"
                  parent="product_attributes.menu_product_config" 
                  sequence="1" />
                  
        <delete model="ir.ui.menu" id="product_nomenclature.menu_products_nomenclature_sales"/>
        <delete model="ir.ui.menu" id="product.menu_products_category"/>
        <delete model="ir.ui.menu" id="product.menu_product_ul_form_action"/>
            
    </data>
</openerp>
