<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- COPY PASTE FROM purchase_override>purchase_view.xml and remove "shipped_rate" and  "invoiced_rate" -->
        <record id="purchase_order_tree_draft" model="ir.ui.view">
            <field name="name">purchase.order.type.tree.view</field>
            <field name="model">purchase.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Purchase Orders"
                      colors="grey:state=='cancel';blue:state in ('wait','confirmed');red:state in ('except_invoice','except_picking')">
                      <field name="name" string="Reference" />
                      <field name="order_type" />
                      <field name="priority" />
                      <field name="categ" />
                      <field name="date_order" />
                      <field name="partner_id" string="Supplier" />
                      <field name="delivery_requested_date" />
                      <field name="origin" />
                      <field name="amount_total" sum="Total amount" />
                      <field name="state" />
                </tree>
            </field>
        </record>
        
        <record id="purchase_order_tree_draft_view" model="ir.actions.act_window.view">
	        <field name="sequence">0</field>
	        <field name="view_mode" >tree</field>
	        <field name="view_id" ref="purchase_order_tree_draft" />
	        <field name="state" />
        </record>

        <record id="tender_flow.purchase_draft" model="ir.actions.act_window">
            <field eval="[
            (4,ref('purchase_order_tree_draft_view')),
            ]" 
            name="view_ids"/>
        </record>
        
        <record id="board_purchase_form" model="ir.ui.view">
            <field name="name">board.purchase.form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="tender_flow.board_purchase_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/hpaned/child2/action[@name='%(tender_flow.action_purchase_order_monthly_categ_graph)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2" position="inside">
                        <action name="%(tender_flow.tender_action)d" string="Tender"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>