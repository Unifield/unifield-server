<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="board_warehouse_form" model="ir.ui.view">
            <field name="name">board.warehouse.form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.board_warehouse_form" />
            <field name="arch" type="xml">
                <data>
                    <!-- REPLACE ALL -->
                    <xpath expr="/form/hpaned/child1/action[@name='%(stock.action_incoming_product_board)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child1/action[@name='%(stock.action_outgoing_product_board)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2/action[@name='%(stock.action_stock_incoming_product_delay)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2/action[@name='%(stock.action_stock_outgoing_product_delay)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child1/action[@name='%(procurement.procurement_action_board)d']" position="replace">
                    </xpath>
                    
                    <!-- ADD ALL -->
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action name="%(stock.action_picking_tree4)d" string="Incoming Shipment"/>
                    </xpath>
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action name="%(stock.action_outgoing_product_board)d" string="Outgoing delivery"/>
                    </xpath>
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action name="%(stock.action_out_picking_move)d" string="Deliver Products"/>
                    </xpath>
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action colspan="4" name="%(procurement.procurement_action_board)d" string="Procurements in Exception" width="510" />
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>