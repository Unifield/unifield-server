<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- GRAPH SALE.ORDER.LINE per customer per month (for the last 3 months) per 1st level of nomenclature-->
         <record id="sale_order_groupby_nomen0_and_cust_graph" model="ir.ui.view">
             <field name="name">sale.order.groupby.nomen0.and.cust.graph.view</field>
             <field name="model">sale.order</field>
             <field name="type">graph</field>
             <field name="arch" type="xml">
                <graph string="Number of sale order line for the 3 last months" type="bar">
                    <field name="partner_id" group="1" />
                    <field name="nb_of_lines" operator="+"/>
                </graph>
             </field>
        </record>
        
        <record id="open_graph_sale_order_groupby_nomen0_and_cust" model="ir.actions.act_window">
                <field name="name">Sale order group by nomenclature and customer</field>
                <field name="res_model">sale.order</field>
                <field name="type">ir.actions.act_window</field>
                <field eval="3" name="sequence"/>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form, graph</field>
                <field name="view_id" ref="sale_order_groupby_nomen0_and_cust_graph"/>
                <field name="context">context</field>
        </record>
    
    
        <record id="board_sales_manager_form" model="ir.ui.view">
            <field name="name">board.sales.manager.form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.board_sales_manager_form" />
            <field name="arch" type="xml">
                <data>
                    <!-- REPLACE -->
                    <xpath expr="/form/hpaned/child1/action[@name='%(sale.action_quotation_for_sale)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2/action[@name='%(sale.action_sales_by_salesman)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2/action[@name='%(sale.action_sales_product_total_price)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2/action[@name='%(sale.action_sales_by_partner)d']" position="replace">
                    </xpath>
                    <!-- MOVED -->
                    <xpath expr="/form/hpaned/child1/action[@name='%(sale.action_view_sales_by_month)d']" position="replace">
                    </xpath>
                    <xpath expr="/form/hpaned/child2" position="inside">
                        <action width="510" name="%(sale.action_view_sales_by_month)d" string="Sales by Month"/>
                    </xpath>
                    <!-- ADD -->
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action name="%(sourcing.sourcing_line_action)d" string="Order sourcing (to be sourced)"/>
                    </xpath>
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action name="%(sale.action_order_form)d" string="Field Order"/>
                    </xpath>
                    <xpath expr="/form/hpaned/child1" position="inside">
                        <action name="%(procurement_request.action_procurement_request)d" string="Internal Request"/>
                    </xpath>
                    <xpath expr="/form/hpaned/child2" position="inside">
                        <action name="%(open_graph_sale_order_groupby_nomen0_and_cust)d" string="Line per customer, per nomenclature in the last 90 days"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>