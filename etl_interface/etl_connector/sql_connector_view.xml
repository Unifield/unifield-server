<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="1">
		<record id="conn_sql_connector" model="etl.connector.type">
			<field name="name">sql connector</field>
			<field name="code">sql_connector</field>
		</record>
	</data>
	<data>

		<record id="etl_connector_sql_form" model="ir.ui.view">
			<field name="name">etl.connector.sql.form</field>
			<field name="model">etl.connector</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="etl_connector_basic_form"/>
			<field name="arch" type="xml">
				<notebook position='inside'>
					<page string="Property" attrs="{'invisible':[('type','!=','sql_connector')]}" >
						<field name="host" required="1" select="1"/>
						<field name="port" required="1" select="1"/>
						<field name="sslmode" required="1"/>
						<newline/>
						<field name="uid" required="1"/>
						<field name="passwd" password="True" required="1"/>
						<field name="con_type" required="1"/>
				</page>
				</notebook>

			</field>
		</record>




		<record id="action_etl_connector_sql_tree"
			model="ir.actions.act_window">
			<field name="name">SQL Connectors</field>
			<field name="res_model">etl.connector</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('type','=','sql_connector')]</field>
			<field name="view_id"
				ref="etl_interface.etl_connector_basic_tree" />
		</record>

		<record id="action_etl_connector_sql_view1"
			model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id"
				ref="etl_interface.etl_connector_basic_tree" />
			<field name="act_window_id"
				ref="action_etl_connector_sql_tree" />
		</record>

		<record id="action_etl_connector_sql_view2"
			model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="etl_connector_sql_form" />
			<field name="act_window_id"
				ref="action_etl_connector_sql_tree" />
		</record>

		<menuitem name="SQL Connector"
			parent="etl_interface.etl_connector_all_tree"
			action="action_etl_connector_sql_tree" id="etl_connector_sql" />


	</data>
</openerp>

