<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="comp_control_data_count" model="etl.component.type">
			<field name="name">control.data_count</field>
			<field name="code">control.data_count</field>
		</record>
    </data>
	<data>
		<record id="etl_component_data_count_form" model="ir.ui.view">
			<field name="name">etl.component.data_count.form</field>
			<field name="model">etl.component</field>
			<field name="type">form</field>            
			<field name="arch" type="xml">
                <form string="Data Count component">
                    <group colspan="4">
					    <field name="name" select="1" />
					    <field name="type_id" invisible="1" domain="[('type_id.name','=','control.data_count')]"/>
                        <field name="transformer_id" invisible="1" colspan="4"/>
                    </group>                    
                    <notebook colspan="4">                                                
                        <page string="Transitions Detail">
					        <separator string="Incomming Transitions" colspan="4" />
					        <field name="trans_in_ids" nolabel="1" colspan="4" readonly="1" />
					        <separator string="Outgoing Transitions" colspan="4" />
					        <field name="trans_out_ids" nolabel="1" colspan="4" readonly="1" />
                        </page>
                    </notebook>
				</form>				
			</field>
		</record>

		<record id="action_etl_component_data_count_tree"
			model="ir.actions.act_window">
			<field name="name">Data Count Component</field>
			<field name="res_model">etl.component</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('type_id.name','=','control.data_count')]</field>
		</record>

		<record id="action_etl_component_data_count_from"
			model="ir.actions.act_window">
			<field name="res_model">etl.component</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="domain">[('type_id.name','=','control.data_count')]</field>
			<field name="view_id" ref="etl_component_data_count_form" />
		</record>

		<record id="action_etl_component_data_count_view1"
			model="ir.actions.act_window.view">
			<field eval="1" name="sequence" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="etl_interface.etl_component_tree" />
			<field name="act_window_id" ref="action_etl_component_data_count_tree" />
		</record>
		<record id="action_etl_component_data_count_view2" model="ir.actions.act_window.view">
			<field eval="2" name="sequence" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="etl_component_data_count_form" />
			<field name="act_window_id" ref="action_etl_component_data_count_tree" />
		</record>


		<menuitem name="Data Count" parent="etl_interface.menu_etl_jd_c_control_form"
            action="action_etl_component_data_count_tree"
			id="menu_etl_jd_c_pec__data_count_form" />		

	</data>
</openerp>

