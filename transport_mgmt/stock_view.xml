<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="transport_view_shipment_form" model="ir.ui.view">
            <field name="name">transport.view.shipment.form</field>
            <field name="model">shipment</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="msf_outgoing.view_shipment_form" />
            <field name="arch" type="xml">
                <data>
            
                    <xpath expr="/form/notebook/page[@string='Transport Information']/group" position="before">
                        <group colspan="3" col="3">
                            <separator colspan="3" string="Transport Purchase Order" />
                            <field name="transport_order_id" colspan="3" />
                        </group>
                        <newline />
                    </xpath>

                </data>
            </field>
        </record>

        <record id="transport_view_picking_out_form" model="ir.ui.view">
            <field name="name">transport.view.picking.out.form</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_picking_out_form" />
            <field name="arch" type="xml">
                <data>
            
                    <xpath expr="/form/notebook/page[@string='Additional info']/field[@name='type']" position="after">
                        <field name="transport_order_id" />
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</openerp>
