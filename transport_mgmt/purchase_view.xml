<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="purchase_form_view_transport_mgmt_line" model="ir.ui.view">
            <field name="name">purchase.form.view.transport.mgmt.line</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="res_currency_functional.purchase_order_form_inherit" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook/page/group[1]/field[@name='currency_id']" position="before">
                        <group colspan="12" col="19" attrs="{'invisible': ['|', ('categ', '=', 'transport'), ('display_intl_transport_ok', '=', False)]}">
                            <field name="display_intl_transport_ok" invisible="1" />
                            <field name="intl_supplier_ok" invisible="1" />
                            <field name="transport_mode" attrs="{'invisible': [('display_intl_transport_ok', '=', False)],
                                                                'readonly': [('shipped_rate', '!=', 0.00)],
                                                                }"/>
                            <label colspan="15" />
                            <field name="transport_cost" attrs="{'invisible': [('display_intl_transport_ok', '=', False)],
                                                                'required': [('intl_supplier_ok', '=', True)],
                                                                'readonly': [('shipped_rate', '!=', 0.00)],
                                                                }" nolabel="1" />
                            <field name="transport_currency_id" attrs="{'invisible': [('display_intl_transport_ok', '=', False)],
                                                                 'required': [('intl_supplier_ok', '=', True)],
                                                                'readonly': [('shipped_rate', '!=', 0.00)],
                                                                }" nolabel="1" />
                            <separator colspan="19" attrs="{'invisible': [('display_intl_transport_ok', '=', False)]}" />
                        </group>
                    </xpath>

                    <xpath expr="/form/notebook/page/group[1]/field[@name='amount_total']" position="after">
                        <field name="total_price_include_transport" readonly="1" attrs="{'invisible': ['|', ('categ', '=', 'transport'), ('display_intl_transport_ok', '=', False)]}" />
                    </xpath>

                    <xpath expr="/form/notebook/page/group[1]/field[@name='functional_amount_total']" position="after">
                        <field name="func_total_price_include_transport" readonly="1" attrs="{'invisible': ['|', ('categ', '=', 'transport'), ('display_intl_transport_ok', '=', False)]}"/>
                    </xpath>

                    <xpath expr="/form/notebook/page[@string='Purchase Order']" position="after">
                        <page string="Linked documents" attrs="{'invisible': [('categ', '!=', 'transport')]}">
                            <separator colspan="4" string="Purchase Order" />
                            <field name="transport_order_id" />
                            <separator colspan="4" string="Shipment documents" />
                            <field name="shipment_transport_ids" colspan="4" nolabel="1" widget="many2many" domain="[('type', '=', 'out'), '|', ('subtype', '=', 'packing'), ('converted_to_standard', '=', True)]" />
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="purchase_form_view_transport_mgmt" model="ir.ui.view">
            <field name="name">purchase.form.view.transport.mgmt</field>
            <field name="model">purchase.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase_override.purchase_order_type_form_view" />
            <field name="arch" type="xml">
                <data>

                    <xpath expr="/form/notebook//field[@name='origin']" position="after">
                        <button name="display_transport_line" type="object" string="Display/Hide Transport line" icon="gtk-execute" colspan="2" attrs="{'invisible': ['|', ('categ', '=', 'transport'), ('intl_supplier_ok', '=', True)]}"/>
                    </xpath>

                    <xpath expr="/form//field[@name='pricelist_id']" position="replace">
                        <field domain="[('type','=','purchase')]" name="pricelist_id" groups="base.group_extended" on_change="onchange_pricelist_id(partner_id, pricelist_id)" />
                    </xpath>

                    <xpath expr="/form//field[@name='location_id']" position="after">
                        <field name="incoterm_id" attrs="{'invisible': [('intl_supplier_ok', '=', False)]}" widget="selection" />
                    </xpath>

                </data>
            </field>
        </record>

        <!-- Add a 'description' field on PO search view to search on details -->
        <record id="purchase_order_search_description_view" model="ir.ui.view">
            <field name="name">purchase.order.search.description.view</field>
            <field name="model">purchase.order</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="purchase_override.purchase_order_type_search_view" />
            <field name="arch" type="xml">
                <data>

                    <xpath expr="/search//field[@name='origin']" position="after">
                        <field name="details" />
                    </xpath>

                </data>
            </field>
        </record>

        <record id="purchase_order_line_form_transport_inherit" model="ir.ui.view">
            <field name="name">purchase.order.line.form.transport.inherit</field>
            <field name="model">purchase.order.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook//field[@name='product_id']" position="before">
                        <field name="product_domain" invisible="1" />
                    </xpath>
                    <!-- The field product_domain is True or False, so the result of the domain is [True, True] (only transport
                            products) or [True, False] (all products) -->
                    <xpath expr="/form/notebook//field[@name='product_id']" position="attributes">
                        <attribute name="domain">[('transport_ok', 'in', [True, product_domain])]</attribute>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
