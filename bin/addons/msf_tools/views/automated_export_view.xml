<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="automated_export_search_view" model="ir.ui.view">
            <field name="name">automated.export.search.view</field>
            <field name="model">automated.export</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Automated exports">
                    <filter icon="terp-check" name="filteractive" string="Active" domain="[('active', '=', True)]" />
                    <filter icon="gtk-dialog-error" name="filterinactive" string="Inactive" domain="[('active', '=', False)]" />
                    <field name="name" />
                    <field name="function_id" />
                    <field name="partner_id" />
                    <newline />
                    <group expand="1" string="Group By..." colspan="4" col="4">
                        <filter string="Partner" name="groupby_partner_id" icon="terp-partner" domain="[]"  context="{'group_by':'partner_id'}"/>
                        <filter string="Function" name="groupby_function_id" icon="terp-accessories-archiver" domain="[]"  context="{'group_by':'function_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="automated_export_tree_view" model="ir.ui.view">
            <field name="name">automated.export.tree.view</field>
            <field name="model">automated.export</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Automated exports" colors="red: not active">
                    <field name="name" />
                    <field name="function_id" />
                    <field name="partner_id" />
                    <field name="start_time" />
                    <field name="interval" />
                    <field name="interval_unit" />
                    <field name="active"  />
                </tree>
            </field>
        </record>

        <record id="automated_export_form_view" model="ir.ui.view">
            <field name="name">automated.export.form.view</field>
            <field name="model">automated.export</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Automated export">
                    <separator colspan="4" string="General configuration" />
                    <field name="name" />
                    <field name="function_id" widget="selection" on_change="change_function_id(function_id)"/>
                    <field name="active" />
                    <field name="export_format" attrs="{'invisible': [('disable_cron', '=', True)]}"/>
                    <label colspan="2" />
                    <field name="partner_id" attrs="{'invisible': [('multiple', '=', False)], 'required': [('multiple', '=', True)]}"/>
                    <newline />
                    <field name="pause" attrs="{'invisible': [('disable_cron', '=', False)]}"/>
                    <button name="run_job_manually" string="Run job manually" colspan="2" type="object" icon="gtk-execute" />
                    <button name="sent_to_remote" string="Manually send to FTP" colspan="2" type="object" icon="cloud.png" attrs="{'invisible': ['|', ('disable_cron', '=', False), ('ftp_ok', '=', False)]}" />

                    <field name="disable_cron" invisible="1" />
                    <field name="multiple" invisible="1" />

                    <separator colspan="4" string="FTP server" />
                    <group col="4" colspan="4">
                        <field name="ftp_ok" on_change="onchange_ftp_ok(ftp_ok)" attrs="{'readonly': [('active', '=', True)]}"/>
                        <field name="ftp_protocol" attrs="{'readonly': ['|', ('active', '=', True), ('ftp_ok', '=', False)]}"/>
                        <field name="ftp_url" attrs="{'required': [('ftp_ok', '!=', False)], 'readonly': ['|', ('active', '=', True), ('ftp_ok', '=', False)]}"/>
                        <field name="ftp_login" attrs="{'readonly': ['|', ('active', '=', True), ('ftp_ok', '=', False)]}"/>
                        <field name="ftp_port" attrs="{'readonly': ['|', ('active', '=', True), ('ftp_ok', '=', False)]}"/>
                        <field name="ftp_password" password="True" attrs="{'readonly': ['|', ('active', '=', True), ('ftp_ok', '=', False)]}"/>
                        <button name="ftp_test_connection" string="Test connection" colspan="2" type="object" icon="terp-stock_zoom" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                    </group>
                    <separator colspan="4" string="Paths configuration" />
                    <group colspan="4">
                        <field name="dest_path" attrs="{'readonly': [('active', '=', True)]}" />
                        <field name="ftp_dest_ok" attrs="{'readonly': ['|', ('ftp_ok', '=', False), ('active', '=', True)]}"/>
                        <field name="destination_local_path" attrs="{'readonly': [('active', '=', True)], 'invisible': ['|', ('disable_cron', '=', False), ('ftp_dest_ok', '=', False)], 'required': [('disable_cron', '=', True), ('ftp_dest_ok', '=', True)]}" colspan="4"/>
                        <field name="report_path" attrs="{'readonly': [('active', '=', True)]}" />
                        <field name="ftp_report_ok" attrs="{'readonly': ['|', ('ftp_ok', '=', False), ('active', '=', True)]}"/>
                        <field name="report_local_path" attrs="{'readonly': [('active', '=', True)], 'invisible': ['|', ('disable_cron', '=', False), ('ftp_report_ok', '=', False)], 'required': [('disable_cron', '=', True), ('ftp_report_ok', '=', True)]}" colspan="4"/>
                    </group>

                    <group colspan="4" col="6" attrs="{'invisible': [('disable_cron', '=', True)]}">
                        <separator colspan="6" string="Scheduler configuration" />
                        <field name="priority" />
                        <field name="interval" attrs="{'required': [('interval_unit', '&gt;', 0)]}" />
                        <field name="interval_unit" />
                        <field name="start_time" />
                    </group>
                    <separator colspan="4" string="Activation" />
                    <group colspan="4" col="1">
                        <button name="active_export" string="Activate" colspan="1" type="object" icon="gtk-execute" attrs="{'invisible': [('active', '=', True)]}" />
                        <button name="deactive_export" string="De-activate" colspan="1" type="object" icon="gtk-execute" attrs="{'invisible': [('active', '=', False)]}" />
                    </group>
                </form>
            </field>
        </record>

        <record id="automated_export_action" model="ir.actions.act_window">
            <field name="name">Automated exports</field>
            <field name="res_model">automated.export</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filteractive' : 1}</field>
        </record>
        <menuitem
            id="automated_export_menu"
            action="automated_export_action"
            parent="object_query.menu_preferences" 
            sequence="16"/>

    </data>
</openerp>
