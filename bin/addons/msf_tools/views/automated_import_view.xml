<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="automated_import_search_view" model="ir.ui.view">
            <field name="name">automated.import.search.view</field>
            <field name="model">automated.import</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Automated imports">
                    <filter icon="terp-check" name="filteractive" string="Active" domain="[('active', '=', True)]" />
                    <filter icon="gtk-dialog-error" name="filterinactive" string="Inactive" domain="[('active', '=', False)]" />
                    <field name="name" />
                    <field name="function_id" />
                    <field name="partner_id" />
                    <newline />
                    <group expand="1" string="Group By..." colspan="4" col="4">
                        <filter string="Partner" name="groupby_partner_id" icon="terp-partner" domain="[]"  context="{'group_by':'partner_id'}"/>
                        <filter string="Function" name="groupby_function_id" icon="terp-accessories-archiver" domain="[]"  context="{'group_by':'function_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="automated_import_tree_view" model="ir.ui.view">
            <field name="name">automated.import.tree.view</field>
            <field name="model">automated.import</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Automated imports" colors="red: not active">
                    <field name="name" />
                    <field name="function_id" />
                    <field name="partner_id" />
                    <field name="start_time" />
                    <field name="interval" />
                    <field name="interval_unit" />
                    <field name="active"  />
                </tree>
            </field>
        </record>

        <record id="automated_import_form_view" model="ir.ui.view">
            <field name="name">automated.import.form.view</field>
            <field name="model">automated.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Automated import">
                    <separator colspan="4" string="General configuration" />
                    <html colspan="4">
                        <script language="javascript">
                            $(document).ready(function() {
                                original_onclick = $('#local_autoconfig').attr('onclick');
                                original_confirm = $('#local_autoconfig').attr('confirm');
                                $('#local_autoconfig').removeAttr('onclick');
                                $('#local_autoconfig').click(function() {
                                    if (!confirm(original_confirm)) {
                                        return false;
                                    }
                                    ['src_path', 'dest_path', 'dest_path_failure', 'report_path'].forEach(function (f){
                                        $('#'+f).val('');
                                        $('#'+f).removeClass('requiredfield');
                                    });
                                    $('#active').removeAttr('disabled');
                                    $('#active').val('');
                                    original_onclick();
                                });
                            });
                        </script>
                    </html>
                    <field name="multiple" invisible="1" />
                    <field name="name" />
                    <field name="function_id" widget="selection" on_change="change_function_id(function_id)" />
                    <field name="active" />
                    <field name="partner_id" attrs="{'invisible': [('multiple', '=', False)], 'required': [('multiple', '=', True)]}"/>
                    <field name="is_admin" invisible="1"/>
                    <button name="run_job_manually" string="Run job manually" colspan="2" type="object" icon="gtk-execute" />
                    <button name="local_autoconfig" string="Local Auto Configuration" colspan="2" type="object" icon="terp-dialog-close" confirm="This action should only be executed on a Sandbox, it will override the current configuration. Do you confirm ?" attrs="{'invisible': [('is_admin', '=', False)]}"/>

                    <separator colspan="4" string="Remote server" />
                    <group col="4" colspan="4">
                        <field name="ftp_ok" on_change="onchange_ftp_ok(ftp_ok)" />
                        <field name="ftp_protocol" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <field name="ftp_url" attrs="{'readonly': [('ftp_ok', '=', False)], 'required': [('ftp_ok', '!=', False)]}"/>
                        <field name="ftp_login" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <field name="ftp_port" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <field name="ftp_password" password="True" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <button name="ftp_test_connection" string="Test connection" colspan="2" type="object" icon="terp-stock_zoom" attrs="{'readonly': [('ftp_ok', '=', False)]}" /> 
                    </group>
                    <separator colspan="4" string="Paths configuration" />
                    <group col="4" colspan="4">
                        <field name="src_path" attrs="{'required': [('active', '=', True)]}" />
                        <field name="ftp_source_ok" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <field name="dest_path" attrs="{'required': [('active', '=', True)]}" />
                        <field name="ftp_dest_ok" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <field name="dest_path_failure" attrs="{'required': [('active', '=', True)]}" />
                        <field name="ftp_dest_fail_ok" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                        <field name="report_path" attrs="{'required': [('active', '=', True)]}" />
                        <field name="ftp_report_ok" attrs="{'readonly': [('ftp_ok', '=', False)]}"/>
                    </group>

                    <separator colspan="4" string="Scheduler configuration" />
                    <group colspan="4" col="6">
                        <field name="priority" />
                        <field name="interval" attrs="{'required': [('interval_unit', '&gt;', 0)]}" />
                        <field name="interval_unit" />
                        <field name="start_time" />
                        <field name="next_scheduled_task" />
                    </group>
                    <separator colspan="4" string="Activation" />
                    <group colspan="4" col="1">
                        <button name="active_import" string="Activate" colspan="1" type="object" icon="gtk-execute" attrs="{'invisible': [('active', '=', True)]}" />
                        <button name="deactive_import" string="De-activate" colspan="1" type="object" icon="gtk-execute" attrs="{'invisible': [('active', '=', False)]}" />
                    </group>
                </form>
            </field>
        </record>

        <record id="automated_import_action" model="ir.actions.act_window">
            <field name="name">Automated imports</field>
            <field name="res_model">automated.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filteractive' : 1}</field>
        </record>
        <menuitem
            id="automated_import_menu"
            action="automated_import_action"
            parent="object_query.menu_preferences"
            sequence="15"/>

    </data>
</openerp>
