<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="export_report_stopped_products_form_view" model="ir.ui.view">
            <field name="name">export.report.stopped.products.form.view</field>
            <field name="model">export.report.stopped.products</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export Phase Out Products">
                    <separator colspan="4" string="Request information" />
                    <field name="name" />
                    <field name="state" />
                    <button name="generate_report" type="object" string="Generate report" 
                        icon="gtk-execute" states='draft' />
                </form>
            </field>
        </record>


        <record id="export_report_stopped_products_tree_view" model="ir.ui.view">
            <field name="name">export.report.stopped.products.tree.view</field>
            <field name="model">export.report.stopped.products</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Export Phase Out Products">
                    <field name="name" />
                    <field name="state" />
                </tree>
            </field>
        </record>


        <record id="report_stopped_product_search_view" model="ir.ui.view">
            <field name="name">export.report.stopped.products.search.view</field>
            <field name="model">export.report.stopped.products</field> <!-- _name of openERP object -->
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Export Phase Out Products">
                    <field name="name" />
                    <field name="state" />
                </search>
            </field>
        </record>


        <record id="report_stopped_products_info_view" model="ir.ui.view">
            <field name="name">export.report.stopped.products.info.view</field>
            <field name="model">export.report.stopped.products</field>
            <field name="type">form</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <form string="Status of the report" hide_new_button="1" hide_delete_button="1">
                    <label> </label>                                                
                    <group colspan="2" col="2">                                     
                        <html>                                                      
                            <div style="align: center">                             
                                <p style="font-size:14px;align:center">             
                                    Your export inventory level demand will be treated quickly.<br />
                                </p>                                                
                                <p style="font-size:14px;align:center">             
                                    Due to the volume of data, your report cannot be shown immediatly.<br />
                                </p>                                                
                                <p style="font-size:14px;align:center">             
                                    When the report will be ready, you can access to it by the menu Tools / Export Phase Out Products.<br />
                                </p>                                                
                            </div>                                                  
                        </html>                                                     
                    </group>                                                        
                    <label> </label>                                                
                </form>
            </field>
        </record>


        <record id="export_report_stopped_products_action" model="ir.actions.act_window">
            <field name="name">Export Phase Out Products</field>
            <field name="res_model">export.report.stopped.products</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        
        <menuitem
            id="export_report_stopped_products_menu"
            action="export_report_stopped_products_action"
            parent="object_query.menu_preferences"
            sequence="51" />

    </data>
</openerp>