                    <!-- TEMPLATE section -->
                    <separator string="Selector Template" colspan="4"/>
                    <group col="5" colspan="4">
                        <field name="display_mcdb_load_button" invisible="1" />
                        <field name="template" on_change="onchange_template()" string="Select an existing template" />
                        <button icon="gtk-save" name="load_mcdb_template" string="Load" type="object"
                                attrs="{'invisible': [('display_mcdb_load_button', '=', False)]}" />
                        <button icon="gtk-edit" name="edit_mcdb_template" string="Replace" type="object"
                                attrs="{'invisible': [('display_mcdb_load_button', '=', True)]}" />
                        <button icon="gtk-cancel" name="delete_mcdb_template" string="Delete" type="object"
                                attrs="{'invisible': [('display_mcdb_load_button', '=', True)]}"
                                confirm="Do you really want to delete the selected template?"/>
                        <field name="description" string="or Choose a new template name" colspan="2" />
                        <button icon="gtk-floppy" name="save_mcdb_template" string="Save new template" type="object" colspan="3" />
                    </group>

                    <separator string="General" colspan="4" attrs="{'invisible': [('model', '=', 'account.move.line')]}"/>
                    <field name="analytic_axis" attrs="{'invisible': [('model', '=', 'account.move.line')], 'required': [('model', '=', 'account.analytic.line')]}" colspan="4" on_change="onchange_analytic_axis(analytic_axis)"/>
                    <group col="4" colspan="4">
                        <group col="2" colspan="2">
                            <group col="4" colspan="2">
                                <separator string="Instances" colspan="3"/>
                                <field name="display_instance" colspan="1" nolabel="1" on_change="onchange_display_instance(display_instance, display_top_prop_instance)"/>
                            </group>
                            <group col="2" colspan="2" attrs="{'invisible': [('display_instance', '=', False)]}">
                                <group col="2" colspan="2">
                                    <button name="button_instance_clear" type="object" string="Remove all Instances" icon="gtk-clear" colspan="2"/>
                                    <button name="button_instance_add" type="object" string="Add all Instances" icon="gtk-add" colspan="2"/>
                                </group>
                                <field name="rev_instance_ids" colspan="4"/>
                                <field name="instance_ids" colspan="4" nolabel="1" domain="[('instance_to_display_ids','=',True)]">
                                    <tree string="Proprietary Instances">
                                        <field name="code"/>
                                        <field name="mission"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                        <group col="2" colspan="2">
                            <group col="4" colspan="2">
                                <separator string="Top prop Instances" colspan="3"/>
                                <field name="display_top_prop_instance" colspan="1" nolabel="1" on_change="onchange_display_prop_instance(display_instance, display_top_prop_instance)"/>
                            </group>
                            <group col="2" colspan="2" attrs="{'invisible': [('display_top_prop_instance', '=', False)]}">
                                <group col="2" colspan="2">
                                    <button name="button_prop_instance_clear" type="object" string="Remove Prop Instances" icon="gtk-clear" colspan="2"/>
                                    <button name="button_prop_instance_add" type="object" string="Add Prop Instances" icon="gtk-add" colspan="2"/>
                                </group>
                                <field name="rev_top_prop_instance_ids" colspan="4"/>
                                <field name="top_prop_instance_ids" colspan="4" nolabel="1" domain="['&amp;', ('level', '=', 'coordo'), ('instance_to_display_ids','=',True)]">
                                    <tree string="Proprietary Instances">
                                        <field name="code"/>
                                        <field name="mission"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </group>
                    <group colspan="2" col="2">
                        <html>
                            <br />
                        </html>
                    </group>
                    <separator string="" colspan="4"/>
                    <group colspan="2" col="2">
                        <field name="document_date_from" string="Document date"/>
                        <field name="posting_date_from" string="Posting date"/>
                        <field name="document_code"/>
                    </group>
                    <group colspan="2" col="2">
                        <field name="document_date_to" string="to"/>
                        <field name="posting_date_to" string="to"/>
                        <field name="document_state" colspan="1" attrs="{'invisible': [('model', '!=', 'account.move.line')]}"/>
                    </group>

