<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sol_pol_intermission_section_validation_form_view" model="ir.ui.view">
            <field name="name">Product Creator check at validation</field>
            <field name="model">sol.pol.intermission.section.validation.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Warning!">
                    <field name="partner_type" invisible="1" />
                    <group colspan="4" attrs="{'invisible': [('partner_type', '!=', 'section')]}">
                        <html colspan="4">
                            <translate>This document contains non-conforming products for intersectional partner.</translate>
                        </html>
                    </group>
                    <group colspan="4" attrs="{'invisible': [('partner_type', '!=', 'intermission')]}">
                        <html colspan="4">
                            <translate>This document contains non-conforming products for intermission partner.</translate>
                        </html>
                    </group>
                    <html colspan="4">
                        <br />
                    </html>
                    <field name="message" widget="html_text" nolabel="1" colspan="4" />
                    <html colspan="4">
                        <br />
                    </html>
                    <button name="validate" string="Proceed with validation" type="object" icon="terp-camera_test" colspan="2" />
                    <button special="cancel" string="Cancel action" icon="gtk-close" colspan="2" />
                </form>
            </field>
        </record>
    </data>
</openerp>
