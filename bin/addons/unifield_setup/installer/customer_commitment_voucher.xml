<openerp>
    <data>
        <record id="view_customer_commitment_voucher_setup" model="ir.ui.view">
            <field name="name">Activate Customer Commitment Vouchers</field>
            <field name="model">customer.commitment.setup</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.res_config_view_base"/>
            <field name="arch" type="xml">
                <data>
                    <form position="attributes">
                        <attribute name="string">Activate Customer Commitment Vouchers</attribute>
                    </form>
                    <xpath expr="//label[@string='description']" position="attributes">
                        <attribute name="string"></attribute>
                    </xpath>
                    <xpath expr='//separator[@string="title"]' position='attributes'>
                        <attribute name='string'>Activate Customer Commitment Vouchers</attribute>
                    </xpath>
                    <xpath expr='//separator[@string="vsep"]' position='attributes'>
                        <attribute name='rowspan'>25</attribute>
                        <attribute name='string'></attribute>
                    </xpath>
                    <group string="res_config_contents" position="replace">
                        <group colspan="5">
                            <field name="customer_commitment"/>
                            <field name="has_customer_commitment" invisible="1" />
                            <newline />
                            <group colspan="5" attrs="{'invisible': [('has_customer_commitment', '=', False)]}">
                            <html colspan="4">
                                <h1>Customer Commitment Vouchers already generated on this instance. If you deactivate this feature, all existing Customer CV will be forced as done.</h1>
                            </html>
                            </group>
                        </group>
                    </group>
                </data>
            </field>
        </record>

        <record id="action_customer_commitment_voucher_setup" model="ir.actions.act_window">
            <field name="name">Activate Customer Commitment Vouchers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer.commitment.setup</field>
            <field name="view_id" ref="view_customer_commitment_voucher_setup" />
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="todo_customer_commitment_voucher_setup" model="ir.actions.todo">
            <field name="action_id" ref="action_customer_commitment_voucher_setup" />
            <field name="sequence">35</field>
            <field name="restart">always</field>
        </record>
    </data>
</openerp>
