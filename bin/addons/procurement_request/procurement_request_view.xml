<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
    
        <record id="procurement_request_form_view" model="ir.ui.view">
            <field name="name">procurement.request.form.view</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="priority" eval="250" />
            <field name="arch" type="xml">
                <form string="Internal Request">
                    <field name="sourcing_trace_ok" invisible="1" />
                    <group colspan="6" attrs="{'invisible': [('state', 'not in', ['validated', 'validated_p'])]}">
                        <html>
                            <p id="message_ir_validated" style="display:none; text-align:center; color: red; font-weight: bold; font-size: 1.2em;">
                               <translate>WARNING: This document has already been validated, are you sure you wish to modify after validation?</translate>
                            </p>
                            <script language="javascript">
                                var editable = $('#_terp_editable').val();
                                if (editable == "True") {
                                    msg_dom = $('#message_ir_validated');
                                    msg_dom.show();
                                }
                            </script>
                        </html>
                    </group>
                    <group col="6" colspan="6" name="header">
                        <group col="4" colspan="4">
                            <field name="name" />
                            <field name="date_order" attrs="{'readonly': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}" />
                            <field name="requestor" attrs="{'readonly': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}" />
                            <field name="location_requestor_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="origin" attrs="{'readonly': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}" />
                            <field name="functional_currency_id" />
                            <group colspan="2" col="3">
                                <field name="stock_take_date" attrs="{'readonly': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}" />
                                <button colspan="1" name="update_date" string="Apply to lines" type="object" context="{'field_name': 'stock_take', 'type': 'sale.order'}" icon="gtk-indent"
                                    attrs="{'invisible': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}" />
                            </group>
                            <field name="fo_to_resource" invisible="1" />
                            <field name="parent_order_name" attrs="{'invisible': [('fo_to_resource', '=', False)]}" />
                        </group>
                        <group col="2" colspan="2">
                            <field name="warehouse_id" widget="selection"  attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="delivery_requested_date" required="1" string="Requested date" attrs="{'readonly': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}" />
                            <field name="categ" on_change="onchange_categ(categ)" /> <!-- RO state!=draft set on _column, same on IR -->
                            <field name="priority" attrs="{'readonly': [('state', 'not in', ['draft', 'draft_p', 'validated'])]}"/>
                        </group>
                    </group>

                    <notebook colspan="5">
                        <page string="Products">
                            <button colspan="4" string="Round Qty to SoQ" type="object" name="round_to_soq" icon="gtk-execute" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                            <field name="order_line" mode="tree,form" colspan="4" nolabel="1"
                                on_change="order_line_change(order_line)"
                                filter_selector="[('Show all', []), ('Hide closed', [('state', 'not in', ['done', 'cancel', 'cancel_r'])]), ('Show closed only', [('state', '=', 'done')]), ('Hide cancelled', [('state', 'not in', ['cancel', 'cancel_r'])]), ('Show cancelled only', [('state', 'in', ['cancel', 'cancel_r'])])]"
                                default_selector="'3'" o2m_selectable="2">
                                <tree string="Products" hide_delete_button="True" editable="top" noteditable="fake_state not in ['draft', 'validated']" button_attrs="{'invisible': [('state', 'not in', ['draft', 'draft_p'])]}"
                                    colors="red:to_correct_ok == True or inactive_product == True;blue: soq_updated == True">
                                    <button name="tree_button" string="Add Line" attrs="{'invisible': [('state', '!=', 'validated')]}" />
                                    <button name="get_error" type="object" icon="gtk-dialog-warning" string="Show error" attrs="{'invisible': [('to_correct_ok', '=', False), ('inactive_product', '=', False)]}" />
                                    <field name="line_number" readonly="1"/>
                                    <field name="product_id" on_change="requested_product_id_change(product_id, comment, parent.categ)"
                                    context="available_for_restriction='consumption',search_default_not_restricted=1"
                                    attrs="{'required': [('product_ok', '=', False)]}" />
                                    <field name="comment" string="Comment instead of the product" on_change="comment_change(comment,product_id,nomen_manda_0)"
                                    attrs="{'required': [('comment_ok', '=', False)]}"/>
                                    <field name="name" invisible="1" />
                                    <field name="product_ok" invisible="1" />
                                    <field name="comment_ok" invisible="1" />
                                    <field name="product_uom" 
                                           on_change="onchange_uom(product_id, product_uom, product_uom_qty)" 
                                           domain="[('uom_by_product', '=', product_id)]" />
                                    <field name="nomen_manda_0" invisible="1" />
                                    <field name="nomen_manda_1" invisible="1" />
                                    <field name="nomen_manda_2" invisible="1" />
                                    <field name="nomen_manda_3" invisible="1" />
                                    <field name="product_id_ok" invisible="1" />
                                    <button name="open_order_line_to_correct" 
                                    string="Configurator" 
                                    type="object" 
                                    attrs="{'invisible': ['|', ('product_id_ok', '=', True), ('state', 'not in', ['draft', 'draft_p', 'validated', 'validated_p'])]}"
                                    icon="terp-go-week" />
                                    <field name="product_uom_qty" on_change="onchange_ir_qty(product_id, product_uom, product_uom_qty, price_unit)" />
                                    <field name="original_changed" readonly="1"/>
                                    <button name="button_view_changed" string="View Current/Original" type="object" icon="terp-stock_zoom"
                                            attrs="{'invisible': [('original_qty', '=', False), ('modification_comment', '=', False), ('original_changed', '=', False)]}"/>
                                    <field name="price_unit" on_change="change_price_unit(product_uom_qty, price_unit)"/>
                                    <field name="notes" />
                                    <field name="display_resourced_orig_line" />
                                    <field name="display_confirm_button" invisible="1" />
                                    <field name="type" on_change="requested_type_change(product_id, type)"
                                           attrs="{'readonly': [('fake_state', 'not in', ['draft', 'draft_p', 'validated', 'validated_p']), ('display_confirm_button', '=', False)]}"
                                    />
                                    <field name="my_company_id" invisible="1" />
                                    <!-- utp-357: the supplier will be selected in the sourcing tool -->
                                    <field name="supplier" invisible="1"
                                        context="{'product_id': product_id, 'choose_supplier': True}"
                                        attrs="{'readonly': [('type', '=', 'make_to_stock')]}"
                                        domain="[('supplier', '=', True), ('id', '!=', my_company_id), ('check_partner_ir', '=', True)]"
                                        />
                                    <field name="fake_state" invisible="1"/>
                                    <field name="original_qty" invisible="1"/>
                                    <field name="modification_comment" invisible="1"/>
                                    <field name="created_by_sync" invisible="1"/>
                                    <field name="cancelled_by_sync" invisible="1"/>
                                    <field name="state_to_display"/>
                                    <field name="stock_take_date"/>
                                    <field name="price_subtotal" sum="Total"/>
                                    <button name="open_split_wizard"
                                        type="object"
                                        string="Split Line"
                                        icon="terp-stock_effects-object-colorize"
                                        attrs="{'invisible': [('fake_state', 'in', ('confirmed', 'cancel', 'cancel_r', 'done', 'exception'))]}"
                                        />
                                    <button string="Validate" icon="terp-check" name="validated_ir" type="object" header="True"
                                            attrs="{'invisible': [('fake_state', '!=', 'draft')]}"/>
                                    <button string="Cancel" icon="gtk-del" name="open_delete_sale_order_line_wizard" type="object" attrs="{'invisible': [('fake_state', 'not in', ('draft', 'validated'))]}"/>
                                </tree>
                                <form>
                                   <field name="product_id" colspan="4" />
                                   <field name="product_uom_qty" />
                                   <field name="product_uom" />
                                   <field name="type" />
                                   <newline />
                                   <field name="notes" colspan="4"/>
                                   <field name="supplier" />
                                   <field name="latest" />
                                </form>
                            </field>
                            <group colspan="4" col="6">
                                <field name="state" />
                                <button name="ask_resource_lines" type="object" icon="gtk-cancel" string="Cancel document" states="draft,draft_p,validated,validated_p" context="{'noraise': True}" help="all the lines will be Cancelled where this status change is feasible" />
                                <button name="validate_ir_lines" type="object" string="Validate document" icon="terp-check" states="draft,draft_p" help="all the lines will be Validated where this status change is feasible" />
                            </group>
                        </page>
                        <page string="Sourcing Documents">
                            <field name="order_ids" nolabel="1" colspan="4" readonly="1" />
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" />
                        </page>
                        <page string="Sourcing Logs" attrs="{'invisible': [('sourcing_trace_ok', '=', False)]}">
                            <field name="sourcing_trace" colspan="4" nolabel="1" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        
        <record id="procurement_request_tree_view" model="ir.ui.view">
            <field name="name">procurement.request.tree.view</field>
            <field name="model">sale.order</field>
            <field name="type">tree</field>
            <field name="priority" eval="250" />
            <field name="arch" type="xml">
                <tree string="Internal Requests">
                    <field name="name" />
                    <field name="date_order" />
                    <field name="delivery_requested_date" required="1" />
                    <field name="origin" />
                    <field name="requestor" />
                    <field name="location_requestor_id" />
                    <field name="ir_total_amount" string="Indicative Total Value"/>
                    <field name="functional_currency_id" />
                    <field name="line_count"/>
                    <field name="state" />
                    <field name="warehouse_id" invisible="1" />
                </tree>
            </field>
        </record>
        
        <record id="procurement_request_search_view" model="ir.ui.view">
            <field name="name">procurement.request.search.view</field>
            <field name="model">sale.order</field>
            <field name="type">search</field>
            <field name="priority" eval="250" />
            <field name="arch" type="xml">
                <search string="Internal Requests">
                    <group string="Filters" expand="1">
                        <filter name="state_proc" string="Draft" icon="terp-document-new" domain="[('state', 'in', ['draft','draft_p'])]" />
                        <filter name="state_valid" string="Validated" icon="terp-check" domain="[('state', 'in', ['validated','validated_p'])]" />
                        <filter name="sourced" string="Sourced" icon="gtk-paste-v" domain="[('state','in',['sourced','sourced_p'])]" />
                        <filter name="state_proc_progress" string="Confirmed" icon="terp-camera_test" domain="[('state', 'in', ('confirmed', 'confirmed_p'))]" />
                        <filter name="state_done" string="Closed" icon="terp-dialog-close" domain="[('state', '=', 'done')]" />
                        <filter name="cancelled" string="Cancelled" icon="gtk-cancel" domain="[('state', '=', 'cancel')]" />
                        <separator orientation="vertical" />
                        <field name="name" />
                        <field name="origin" />
                        <field name="requestor" />
                        <field name="location_requestor_id" />
                        <field name="product_id" />
                    </group>
                    <newline />
                    <group string="Group By...">
                        <filter string="State" icon="terp-gtk-select-all" domain="[]" context="{'group_by': 'state'}" />
                        <separator orientation="vertical" />
                        <filter string="Requestor" icon="terp-personal" domain="[]" context="{'group_by': 'requestor'}" />
                        <separator orientation="vertical" />
                        <filter string="Warehouse" icon="terp-stock" domain="[]" context="{'group_by': 'warehouse_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="procurement_request_sourcing_document_tree_view">
            <field name="name">procurement.request.sourcing.document.tree</field>
            <field name="model">procurement.request.sourcing.document</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sourcing Documents" editable="0">
                    <field name="linked_model" />
                    <field name="linked_name" />
                    <button type="object" name="go_to_document" string="Open document" icon="terp-gtk-jump-to-ltr" />
                </tree>
            </field>
        </record>
        
        <record id="action_procurement_request" model="ir.actions.act_window">
            <field name="name">Internal Requests</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="procurement_request_search_view" />
            <field name="context">{'procurement_request': True}</field>
            <field name="domain">[('procurement_request', '=', True)]</field>
        </record>
        
        <record id="action_procurement_request_form_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_procurement_request" />
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="procurement_request_form_view" />
        </record>
        
        <record id="action_procurement_request_tree_view" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_procurement_request" />
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="procurement_request_tree_view" />
        </record>

        <menuitem action="action_procurement_request"
                  id="menu_procurement_request"
                  sequence="2"
                  parent="base.menu_sales" />
    
    </data>
</openerp>
