<?xml version="1.0"?>
<openerp>
    <data>

        <record id="wizard_account_accrual_import_errors_tree" model="ir.ui.view">
            <field name="name">wizard.account.accrual.import.errors.tree</field>
            <field name="model">account.accrual.import.errors</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Information">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Import accrual wizard -->
        <record model="ir.ui.view" id="wizard_account_accrual_import_form">
            <field name='name'>wizard.account.accrual.import.form</field>
            <field name='model'>account.accrual.import</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string="Import Accrual Lines">
                    <label string="Select file to import" colspan="4" align="0.0"/>
                    <newline/>
                    <group col="4" colspan="4">
                        <field name="file" filename="filename" colspan="4" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <newline />
                    <field name="progression" widget="progressbar" nolabel="1" attrs="{'invisible': [('state', '=', 'draft')]}" colspan="4" />
                    <field name="message" nolabel="1" attrs="{'invisible': [('state', '=', 'draft')]}" widget="text"/>
                    <newline/>
                    <button name="button_update" type="object" string="Update" icon="gtk-refresh" attrs="{'invisible': [('state', '!=', 'inprogress')]}"/>
                    <newline />
                    <field name="error_ids" nolabel="1" attrs="{'invisible': [('state', 'not in', ['error', 'ad_error'])]}"/>
                    <group colspan="4" col="2" attrs="{'invisible': [('state', '!=', 'draft')]}">
                        <button string="Cancel" special="cancel" icon="gtk-cancel"/>
                        <button name="button_validate" type="object" string="Import" icon="terp-camera_test"/>
                    </group>
                    <button name="button_refresh_accrual" type="object" icon="terp-camera_test" string="Ok"
                            attrs="{'invisible': [('state', 'not in', ['done', 'ad_error'])]}"/>
                    <field name="state" invisible="1"/>
                </form>
            </field>
        </record>

    </data>
</openerp>
