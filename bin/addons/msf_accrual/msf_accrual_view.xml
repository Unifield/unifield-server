<?xml version="1.0"?>
<openerp>
      <data>
            
            <record id="view_msf_accrual_line_form" model="ir.ui.view">
                <field name="name">msf.accrual.line.form</field>
                <field name="model">msf.accrual.line</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form>
                        <group colspan="6" col="6">
                            <field name="journal_id" readonly="1"/>
                            <field name="entry_sequence" readonly="1"/>
                            <field name="currency_id" string="Booking Currency" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <group col="8" colspan="4">
                                <field name="third_party_type" string="Third Party Type"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       colspan="2"
                                />
                                <field name="partner_id" string="Third Party"
                                       attrs="{'readonly': [('state', '!=', 'draft')],
                                               'required': [('third_party_type', '=', 'res.partner'), ('state', '=', 'draft')],
                                               'invisible': [('third_party_type', '!=', 'res.partner')]}"
                                       colspan="2"
                                />
                                <field name="employee_id" string="Third Party"
                                       context="{'search_default_active': True}"
                                       attrs="{'readonly': [('state', '!=', 'draft')],
                                               'required': [('third_party_type', '=', 'hr.employee'), ('state', '=', 'draft')],
                                               'invisible': [('third_party_type', '!=', 'hr.employee')]}"
                                       colspan="2"
                                />
                                <group colspan="2" col="1" attrs="{'invisible': [('third_party_type', 'in', ['res.partner', 'hr.employee'])]}">
                                    <label string="" colspan="1"/>
                                </group>
                            </group>
                            <field name="period_id" on_change="onchange_period(period_id)"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="document_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="date" string="Posting Date" readonly="1"/>
                            <field name="accrual_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="accrual_account_id" domain="[('restricted_area', '=', 'accruals_accrual')]"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="reference" colspan="2" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group colspan="6" col="4">
                            <field name="analytic_distribution_id" invisible="1"/>
                            <!-- AD buttons with a different icon depending on whether there is already an AD or not -->
                            <button name="button_analytic_distribution" string="Analytical Distribution" type="object"
                                    icon="terp-check" context="context"
                                    attrs="{'invisible': [('analytic_distribution_id', '=', False)]}"/>
                            <button name="button_analytic_distribution_2" string="Analytical Distribution" type="object"
                                    icon="terp-emblem-important" context="context"
                                    attrs="{'invisible': [('analytic_distribution_id', '!=', False)]}"/>
                            <button name="button_reset_distribution" string="Reset AD at line level" type="object"
                                    icon="gtk-undelete" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        </group>

                        <notebook colspan="6">
                            <page string="Accruals">
                                <field name="description" colspan="2" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <newline/>
                                <field name="expense_account_id" colspan="2" domain="[('restricted_area', '=', 'accruals')]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <newline/>
                                <field name="accrual_amount" colspan="2" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <newline/>
                                <field name="expense_line_ids" nolabel="1" colspan="6">
                                    <tree string="Accrual lines"
                                          editable="top"
                                          colors="blue:state in ('draft') and analytic_distribution_state in ('valid', 'none');black:state in ('valid') and analytic_distribution_state in ('valid', 'none');red:analytic_distribution_state in ('invalid', 'invalid_small_amount') or state in ('draft')">
                                        <field name="line_number"/>
                                        <field name="description"/>
                                        <field name="expense_account_id"/>
                                        <field name="accrual_amount"/>
                                        <!-- AD button always displayed (to adapt in case the domain of expense_account_id is changed) -->
                                        <button name="button_analytic_distribution" string="Analytical Distribution" type="object" icon="terp-stock_symbol-selection" context="context"/>
                                        <field name="analytic_distribution_state" invisible="1"/>
                                        <field name="analytic_distribution_state_recap"/>
                                    </tree>
                                </field>
                                <newline/>
                                <field name="state" colspan="2" readonly="1"/>
                            </page>
                            <page string="Journal Items">
                            </page>
                        </notebook>

                        <group colspan="2" col="4">
                            <button name="button_cancel" string="Cancel" states="done" type="object" icon="gtk-cancel"
                                confirm="Are you sure you want to cancel this accrual line ?"/>
                        </group>
                    </form>
                </field>
            </record>
            
            <record id="view_msf_accrual_line_tree" model="ir.ui.view">
                <field name="name">msf.accrual.line.tree</field>
                <field name="model">msf.accrual.line</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Accruals Management"
                        colors="blue: state == 'draft' and analytic_distribution_state == 'valid';black: state in ('done', 'running') and analytic_distribution_state == 'valid';red: state != 'cancel' and analytic_distribution_state in ('none', 'invalid', 'invalid_small_amount');grey: state == 'cancel'"
                        hide_delete_button="1">
                        <button name="button_duplicate" string="Duplicate" type="object" icon="gtk-copy" />
                        <field name="document_date"/>
                        <field name="date"/>
                        <field name="period_id"/>
                        <field name="entry_sequence" />
                        <field name="description"/>
                        <field name="reference"/>
                        <field name="third_party_name"/>
                        <field name="analytic_distribution_state" invisible="1"/>
                        <field name="expense_account_id"/>
                        <field name="accrual_account_id"/>
                        <field name="accrual_amount"/>
                        <field name="currency_id"/>
                        <field name="functional_amount"/>
                        <field name="functional_currency_id"/>
                        <field name="accrual_type"/>
                        <field name="state"/>
                        <button name="button_delete" states="draft" string="Delete" type="object" icon="gtk-del"/>
                    </tree>
                </field>
            </record>
            
            <record id="view_msf_accrual_line_search" model="ir.ui.view">
                <field name="name">msf.accrual.line.search</field>
                <field name="model">msf.accrual.line</field>
                <field name="type">search</field>
                <field name="arch" type="xml">
                    <search string="Accruals Management">
                        <group>
                            <filter name="draft" icon="terp-check" string="Draft"
                                    domain="[('state', '=', 'draft')]"/>
                            <filter name="filter_running" icon="terp-document-new" string="Running"
                                    domain="[('state', '=', 'running')]"/>
                            <filter name="filter_done" icon="terp-camera_test" string="Done"
                                    domain="[('state', '=', 'done')]"/>
                            <filter name="cancel" icon="terp-gtk-stop" string="Cancelled"
                                    domain="[('state', '=', 'cancel')]"/>
                            <separator orientation="vertical"/>
                            <filter name="filter_one_time_accrual" icon="gtk-dnd" string="One Time accruals"
                                    domain="[('accrual_type', '=', 'one_time_accrual')]"/>
                            <filter name="filter_reversing_accrual" icon="gtk-revert-to-saved" string="Reversing accruals"
                                    domain="[('accrual_type', '=', 'reversing_accrual')]"/>
                            <field name="period_id"/>
                            <field name="expense_account_id"/>
                            <field name="accrual_account_id"/>
                        </group>
                    </search>
                </field>
            </record>

            <record id="action_msf_accrual_line_tree" model="ir.actions.act_window">
                <field name="name">Accruals Management</field>
                <field name="res_model">msf.accrual.line</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="context">{}</field>
            </record>

            <menuitem action="action_msf_accrual_line_tree" id="menu_action_msf_accrual_line_tree" parent="account.menu_finance_periodical_processing" sequence="1"/>

       </data>
</openerp>
