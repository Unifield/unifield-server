<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="signature_add_user_wizard_form" model="ir.ui.view">
            <field name="name">signature_add_user_wizard_form</field>
            <field name="model">signature.add_user.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Add Users">
                    <field name="res_users"/>
                    <group colspan="4">
                      <button string="Cancel" special="cancel" icon="gtk-cancel" />
                      <button string="Confirm" icon="terp-check" name="save" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="signature_set_user_form" model="ir.ui.view">
            <field name="name">signature_set_user_form</field>
            <field name="model">signature.set_user</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create Signature">
                    <html colspan="4">
                         <script language="javascript">
                            $(document).ready(function() {
                                $('#view_form').submit(function(e){
                                    var ret = true;
                                    if ($('#sig_new_signature').signature('isEmpty')) {
                                        ret = confirm('New signature is empty ! It will not be saved.');
                                    } else {
                                        ret = confirm('Do you want to save this signature ?');
                                    }
                                    return ret;
                                });
                            });
                    </script>
                    </html>
                    <field name="user_id"/>
                    <newline />
                    <field name="new_signature" widget="signature" colspan="4"/>
                    <group colspan="4">
                      <button string="Cancel"  icon="gtk-cancel" name="closepref" type="object" />
                      <button string="Confirm" icon="terp-check" name="save" type="object" />
                    </group>
                </form>
            </field>
        </record>

        <record id="signature_document_wizard_form" model="ir.ui.view">
            <field name="name">signature_document_wizard_form</field>
            <field name="model">signature.document.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sign Document">
                    <field name="name" invisible="1"/>
                    <field name="role" colspan="4" />
                    <newline />
                    <field name="image" widget="image" />
                    <newline />
                    <group colspan="4">
                      <button string="Cancel" special="cancel" icon="gtk-cancel" />
                      <button string="Sign" icon="terp-check" name="save" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="signature_change_date_form" model="ir.ui.view">
            <field name="name">signature_change_date_form</field>
            <field name="model">signature.change_date</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Change End Date">
                    <field name="current_from" />
                    <field name="current_to" />
                    <field name="new_to" on_change="change_new_to(current_from, new_to)" />
                    <group colspan="4">
                      <button string="Cancel"  icon="gtk-cancel" name="closepref" type="object" />
                      <button string="Confirm" icon="terp-check" name="save" type="object" />
                    </group>
                </form>
            </field>
        </record>

        <record id="signature_follow_up_search" model="ir.ui.view">
            <field name="name">signature_follow_up_tree</field>
            <field name="model">signature.follow_up</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="my_sign" string="My Signatures" icon="terp-personal" domain="[('user_id', '=', uid)]" />
                    <separator orientation="vertical"/>
                    <filter name="to_sign" string="To be signed" icon="gtk-paste"  domain="[('signed', '=', 0)]"  />
                    <filter name="signed" string="Signed" icon="gtk-paste-v"  domain="[('signed', '&gt;', 0)]"  />
                    <separator orientation="vertical"/>
                    <filter name="open" string="Open" icon="terp-check" domain="[('status', '=', 'open')]" />
                    <filter name="partial" string="Partially Signed" icon="terp-document-new" domain="[('status', '=', 'partial')]" />
                    <filter name="fully" string="Fully Signed" icon="terp-camera_test" domain="[('status', '=', 'signed')]" />
                    <separator orientation="vertical"/>
                    <field name="user_id" />
                    <field name="doc_name" />
                    <field name="doc_type" />
                </search>
            </field>
        </record>

        <record id="signature_follow_up_tree" model="ir.ui.view">
            <field name="name">signature_follow_up_tree</field>
            <field name="model">signature.follow_up</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree hide_new_button="1" hide_edit_button="1" hide_delete_button="1">
                    <field name="user_id" />
                    <field name="doc_name" />
                    <button name="open_doc" string="Open Document" type="object" icon="terp-gtk-go-back-rtl" />
                    <field name="doc_type" />
                    <field name="status" />
                    <field name="signed" type="boolean"/>
                    <field name="signature_date" />
                </tree>
            </field>
        </record>

        <record id="signature_follow_up_action" model="ir.actions.act_window">
            <field name="name">Signatures Follow Up</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">signature.follow_up</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="signature_follow_up_tree"/>
            <field name="search_view_id" ref="signature_follow_up_search"/>
            <field name="context">{'search_default_my_sign': True, 'search_default_to_sign': True}</field>
        </record>

        <!--
        define in module useability_dashboard_and_menu, under Tools
        <menuitem id="signature_follow_up_menu" action="signature_follow_up_action" parent="base.menu_users" sequence="15"/>
        -->


    </data>
</openerp>
