<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="replenishment_location_config_form" model="ir.ui.view">
            <field name="name">replenishment.location.config.form</field>
            <field name="model">replenishment.location.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Location Configuration" hide_duplicate_button="1" noteditable="not is_current_instance">
                    <field name="name" />
                    <field name="description" />
                    <field name="main_instance" />
                    <field name="is_project" invisible="1" />
                    <field name="is_current_instance" invisible="1" />
                    <group colspan="2" col="4">
                        <field name="synched" attrs="{'readonly': [('is_project', '=', True)]}" />
                        <field name="active" />
                    </group>
                    <group colspan="2" col="2">
                        <separator string="Local Locations" colspan="2" />
                        <field name="local_location_ids" nolabel="1">
                        <tree hide_new_button="0" hide_edit_button="1">
                                <field name="complete_name" />
                                <field name="usage" />
                                <field name="location_category" />
                            </tree>
                        </field>
                    </group>
                    <group colspan="2" col="2" attrs="{'invisible': [('synched', '=', False)]}">
                        <separator string="Project Locations" colspan="2" />
                        <field name="remote_location_ids" nolabel="1">
                            <tree hide_edit_button="1">
                                <field name="full_name" />
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="replenishment_location_config_tree" model="ir.ui.view">
            <field name="name">replenishment.location.config.tree</field>
            <field name="model">replenishment.location.config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Location Configuration">
                    <field name="name" />
                    <field name="description" />
                    <field name="synched" />
                    <field name="main_instance" />
                </tree>
            </field>
        </record>

        <record id="replenishment_location_config_search" model="ir.ui.view">
            <field name="name">replenishment.location.config.search</field>
            <field name="model">replenishment.location.config</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Location Configuration">
                    <field name="name" />
                    <field name="description" />
                    <field name="synched" />
                    <field name="main_instance" />
                </search>
            </field>
        </record>

        <record id="replenishment_location_config_action" model="ir.actions.act_window">
            <field name="name">Location Configuration</field>
            <field name="res_model">replenishment.location.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_current_instance', '=', True)]</field>
        </record>

        <menuitem id="replenishment_location_config_menu"
            action="replenishment_location_config_action"
            sequence="10"
            parent="stock_schedule.stock_automatic_procurements_menu" />


        <record id="replenishment_review_config_form" model="ir.ui.view">
            <field name="name">replenishment.review.config.form</field>
            <field name="model">replenishment.location.config</field>
            <field name="type">form</field>
            <field name="priority" eval="50" />
            <field name="arch" type="xml">
                <form string="Inventory Review Configuration" hide_new_button="1" hide_duplicate_button="1" hide_delete_button="1">
                    <field name="name" readonly="1" />
                    <field name="description" readonly="1" />
                    <field name="frequence_name" />
                    <newline />
                    <button name="choose_change_frequence" type="object" string="Change/Choose Frequency" icon="terp-go-today" colspan="2" />
                    <field name="review_active"  required="1" />
                    <field name="projected_view" required="1" />
                    <field name="rr_amc" required="1" />
                    <field name="sleeping" required="1" />
                    <field name="time_unit" required="1" />
                </form>
            </field>
        </record>

        <record id="replenishment_review_config_tree" model="ir.ui.view">
            <field name="name">replenishment.review.config.tree</field>
            <field name="model">replenishment.location.config</field>
            <field name="type">tree</field>
            <field name="priority" eval="50" />
            <field name="arch" type="xml">
                <tree string="Inventory Review Configuration" hide_new_button="1" hide_delete_button="1">
                    <field name="name" />
                    <field name="description" />
                    <field name="review_active" />
                </tree>
            </field>
        </record>

        <record id="replenishment_review_config_search" model="ir.ui.view">
            <field name="name">replenishment.review.config.search</field>
            <field name="model">replenishment.location.config</field>
            <field name="type">search</field>
            <field name="priority" eval="50" />
            <field name="arch" type="xml">
                <search string="Inventory Review Configuration">
                    <field name="name" />
                    <field name="description" />
                    <field name="review_active" />
                    <field name="active"  />
                </search>
            </field>
        </record>

        <record id="replenishment_review_config_action" model="ir.actions.act_window">
            <field name="name">Inventory Review Configuration</field>
            <field name="res_model">replenishment.location.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_current_instance', '=', True)]</field>
            <field name="search_view_id" ref="replenishment_review_config_search" />
        </record>
        <record id="replenishment_review_config_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="replenishment_review_config_tree"/>
            <field name="act_window_id" ref="replenishment_review_config_action"/>
        </record>
        <record id="replenishment_review_config_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="replenishment_review_config_form"/>
            <field name="act_window_id" ref="replenishment_review_config_action"/>
        </record>

        <menuitem id="replenishment_review_config_menu"
            action="replenishment_review_config_action"
            sequence="20"
            parent="stock_schedule.stock_automatic_procurements_menu" />


        <record id="replenishment_segment_form" model="ir.ui.view">
            <field name="name">replenishment.segment.form</field>
            <field name="model">replenishment.segment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Segment" hide_duplicate_button="1" noteditable="not is_current_instance">
                    <group colspan="2" col="2">
                        <field name="name_seg" />
                        <field name="description_seg" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="location_config_id" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('is_current_instance', '=', True)]" on_change="change_location_config_id(location_config_id, ir_requesting_location)"/>
                        <separator string="Location Config"/>
                        <group colspan="2" col="4">
                            <field name="is_current_instance" invisible="1" />
                            <field name="description" readonly="1" />
                            <field name="main_instance" readonly="1" />
                            <field name="rr_amc" readonly="1" />
                            <newline />
                            <field name="local_location_ids" colspan="2" nolabel="1" readonly="1">
                                <tree>
                                    <field name="complete_name" />
                                </tree>
                            </field>
                            <field name="remote_location_ids" colspan="2" nolabel="1" readonly="1">
                                <tree>
                                    <field name="full_name" string="Other project Locations"/>
                                </tree>
                            </field>
                        </group>
                        <field name="rule" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="rule_alert" />
                        <field name="ir_requesting_location" domain="[('usage', '=', 'internal'), ('location_category', 'in', ['stock', 'consumption_unit', 'eprep']), ('from_config', '=', location_config_id)]" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="product_list_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                    </group>
                    <group colspan="2" col="2">
                        <field name="order_creation_lt" on_change="on_change_lt(order_creation_lt, order_validation_lt, supplier_lt, handling_lt, order_coverage, previous_order_rrd, date_next_order_received_modified)" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="order_validation_lt" on_change="on_change_lt(order_creation_lt, order_validation_lt, supplier_lt, handling_lt, order_coverage, previous_order_rrd, date_next_order_received_modified)" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="internal_lt" />
                        <field name="supplier_lt" on_change="on_change_lt(order_creation_lt, order_validation_lt, supplier_lt, handling_lt, order_coverage, previous_order_rrd, date_next_order_received_modified)" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="handling_lt" on_change="on_change_lt(order_creation_lt, order_validation_lt, supplier_lt, handling_lt, order_coverage, previous_order_rrd, date_next_order_received_modified)" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="external_lt" />
                        <field name="total_lt" />
                        <group colspan="2" col="4" attrs="{'invisible': [('rule', '!=', 'cycle')]}">
                            <field name="order_coverage" attrs="{'readonly': [('state', '!=', 'draft')]}" on_change="compute_next_order_received(order_creation_lt, order_validation_lt, supplier_lt, handling_lt, order_coverage, previous_order_rrd, date_next_order_received_modified)"/>
                            <field name="safety_stock" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="previous_order_rrd" />
                            <field name="date_preparing" />
                            <field name="date_next_order_validated" />
                            <field name="date_next_order_received" />
                            <label colspan="2" />
                            <field name="date_next_order_received_modified" attrs="{'readonly': [('state', 'not in', ['draft', 'complete'])]}"  on_change="compute_next_order_received(order_creation_lt, order_validation_lt, supplier_lt, handling_lt, order_coverage, previous_order_rrd, date_next_order_received_modified)"/>
                        </group>
                        <field name="last_generation" nolabel="1" colspan="2">
                            <tree string="Generation Date">
                                <field name="instance_id" />
                                <field name="amc_date" />
                                <field name="full_date" />
                            </tree>

                        </field>
                    </group>
                    <group colspan="4" name="import" string="Import Lines" attrs="{'invisible': [('state', '!=', 'draft')]}">
                        <field name="file_to_import" colspan="2" />
                        <button name="import_lines" string="Import Lines" type="object" colspan="2" icon="gtk-save" />
                        <button name="add_multiple_lines" type="object" icon="gtk-add" string="Add multiple products" colspan="4" />
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids" colspan="4" nolabel="1" default_get="rule=rule" scroll="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="top" editable_style="new">
                                    <field name="product_id" />
                                    <field name="product_description" displayon="noteditable"/>
                                    <field name="uom_id" invisible="1" />
                                    <field name="in_main_list" />
                                    <field name="status" />
                                    <field name="min_qty" invisible="context.get('rule')!='minmax'"/>
                                    <field name="max_qty" invisible="context.get('rule')!='minmax'"/>
                                    <field name="auto_qty" invisible="context.get('rule')!='auto'"/>
                                    <field name="buffer_qty" invisible="context.get('rule')!='cycle'"/>
                                    <field name="real_stock" />
                                    <field name="rr_amc" />
                                    <field name="rr_fmc_1" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_1" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_1', '!=', False)]}" on_change="change_fmc('from', '1', rr_fmc_from_1)"/>
                                    <field name="rr_fmc_to_1" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_1', '!=', False)]}" on_change="change_fmc('to', '1', rr_fmc_to_1)"/>
                                    <field name="rr_fmc_2" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_2" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_2', '!=', False)]}" on_change="change_fmc('from', '2', rr_fmc_from_2)"/>
                                    <field name="rr_fmc_to_2" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_2', '!=', False)]}" on_change="change_fmc('to', '2', rr_fmc_to_2)"/>
                                    <field name="rr_fmc_3" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_3" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_3', '!=', False)]}" on_change="change_fmc('from', '3', rr_fmc_from_3)"/>
                                    <field name="rr_fmc_to_3" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_3', '!=', False)]}" on_change="change_fmc('to', '3', rr_fmc_to_3)"/>
                                    <field name="rr_fmc_4" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_4" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_4', '!=', False)]}" on_change="change_fmc('from', '4', rr_fmc_from_4)"/>
                                    <field name="rr_fmc_to_4" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_4', '!=', False)]}" on_change="change_fmc('to', '4', rr_fmc_to_4)"/>
                                    <field name="rr_fmc_5" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_5" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_5', '!=', False)]}" on_change="change_fmc('from', '5', rr_fmc_from_5)"/>
                                    <field name="rr_fmc_to_5" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_5', '!=', False)]}" on_change="change_fmc('to', '5', rr_fmc_to_5)"/>
                                    <field name="rr_fmc_6" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_6" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_6', '!=', False)]}" on_change="change_fmc('from', '6', rr_fmc_from_6)"/>
                                    <field name="rr_fmc_to_6" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_6', '!=', False)]}" on_change="change_fmc('to', '6', rr_fmc_to_6)"/>
                                    <field name="rr_fmc_7" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_7" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_7', '!=', False)]}" on_change="change_fmc('from', '7', rr_fmc_from_7)"/>
                                    <field name="rr_fmc_to_7" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_7', '!=', False)]}" on_change="change_fmc('to', '7', rr_fmc_to_7)"/>
                                    <field name="rr_fmc_8" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_8" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_8', '!=', False)]}" on_change="change_fmc('from', '8', rr_fmc_from_8)"/>
                                    <field name="rr_fmc_to_8" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_8', '!=', False)]}" on_change="change_fmc('to', '8', rr_fmc_to_8)"/>
                                    <field name="rr_fmc_9" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_9" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_9', '!=', False)]}" on_change="change_fmc('from', '9', rr_fmc_from_9)"/>
                                    <field name="rr_fmc_to_9" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_9', '!=', False)]}" on_change="change_fmc('to', '9', rr_fmc_to_9)"/>
                                    <field name="rr_fmc_10" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_10" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_10', '!=', False)]}" on_change="change_fmc('from', '10', rr_fmc_from_10)"/>
                                    <field name="rr_fmc_to_10" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_10', '!=', False)]}" on_change="change_fmc('to', '10', rr_fmc_to_10)"/>
                                    <field name="rr_fmc_11" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_11" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_11', '!=', False)]}" on_change="change_fmc('from', '11', rr_fmc_from_11)"/>
                                    <field name="rr_fmc_to_11" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_11', '!=', False)]}" on_change="change_fmc('to', '11', rr_fmc_to_11)"/>
                                    <field name="rr_fmc_12" invisible="context.get('rule')!='cycle'"/>
                                    <field name="rr_fmc_from_12" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_12', '!=', False)]}" on_change="change_fmc('from', '12', rr_fmc_from_12)"/>
                                    <field name="rr_fmc_to_12" invisible="context.get('rule')!='cycle'" attrs="{'required': [('rr_fmc_12', '!=', False)]}" on_change="change_fmc('to', '12', rr_fmc_to_12)"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Chronogram">
                            <html>
                             <table id="rr-chrono">
                                    <tr>
                                        <td> </td>
                                        <td colspan="8" class="tlt">Total Lead Time (73)</td>
                                        <td> </td>
                                    </tr>
                                    <tr>
                                        <td> </td>
                                        <td colspan="4" class="ilt">Internal Lead Time (8)</td>
                                        <td colspan="4" class="elt">External Lead Time (65)</td>
                                        <td> </td>
                                    </tr>
                                    <tr>
                                        <td> </td>
                                        <td class="oclt" colspan="2">Order Creation Lead Time (4)</td>
                                        <td class="ovlt" colspan="2">Order Validation Lead Time (4)</td>
                                        <td class="slt" colspan="2">Supplier Lead Time (60)</td>
                                        <td class="hlt" colspan="2">Handling Lead Time (5)</td>
                                        <td> </td>
                                    </tr>
                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                    <tr class="rr-text">
                                        <td> </td>
                                        <td colspan="2">Analysis + update or Order Proposal</td>
                                        <td>Create IR</td>
                                        <td>Create PO</td>
                                        <td colspan="2">Confirm PO</td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                    <tr class="rr-text">
                                        <td colspan="2">Stock Take Date Generation of Order Calculation</td>
                                        <td colspan="2">Validate Order Proposal</td>
                                        <td colspan="2">Validate PO (Coordo/Proj)</td>
                                        <td colspan="2">Goods arrival</td>
                                        <td colspan="2">Goods Available at Warehouse</td>
                                    </tr>
                                </table>
                            </html>
                        </page>
                    </notebook>
                    <field name="state" />
                    <field name="has_inprogress_cal" invisible="1" />
                    <group colspan="2">
                        <button name="trigger_compute" string="Force Computation" type="object" icon="gtk-remove" attrs="{'invisible': [('state', 'not in', ['draft', 'complete'])]}"/>
                        <button name="completed" string="Completed" type="object" icon="terp-check" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="set_as_draft" string="Set As Draft" type="object" attrs="{'invisible':[('state', 'not in', ['complete', 'archived', 'cancel'])]}" icon="gtk-go-back" />
                        <button name="generate_order_calc" string="Generate Order Calc" type="object" icon="gtk-convert" attrs="{'invisible': [('state', '!=', 'complete')]}"/>
                        <button name="set_as_archived" string="Archive" type="object" attrs="{'invisible':[('state', 'in', ['cancel', 'archived'])]}" icon="terp-locked" />
                        <button name="set_as_cancel" string="Cancel" type="object" attrs="{'invisible':['|', ('state', '=', 'cancel'), ('has_inprogress_cal', '=', True)]}" icon="gtk-cancel" />
                        <button name="set_as_cancel_and_cancel_order" string="Cancel Segment and Order Calc." type="object" attrs="{'invisible':['|', ('state', '=', 'cancel'), ('has_inprogress_cal', '=', False)]}" icon="gtk-cancel" confirm="This will cancel the Segment and the in-progess Order Calc. Do you confirm ?"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="replenishment_segment_tree" model="ir.ui.view">
            <field name="name">replenishment.segment.tree</field>
            <field name="model">replenishment.segment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Segment">
                    <field name="name_seg" />
                    <field name="description_seg" />
                    <field name="line_ids" />
                    <field name="location_config_id" />
                    <field name="rule" />
                    <field name="product_list_id" />
                    <field name="date_preparing" />
                    <field name="date_next_order_validated" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="replenishment_segment_search" model="ir.ui.view">
            <field name="name">replenishment.segment.search</field>
            <field name="model">replenishment.segment</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Segment">
                    <filter string="Current Instance" name="current_instance" icon="terp-stage" domain="[('is_current_instance', '=', True)]"/>
                    <separator orientation="vertical"/>
                    <filter string="Draft" domain="[('state', '=', 'draft')]" icon="terp-document-new"/>
                    <filter string="Complete" domain="[('state', '=', 'complete')]" icon="terp-check"/>
                    <filter string="Archived" domain="[('state', '=', 'archived')]" icon="terp-locked"/>
                    <filter string="Cancel" domain="[('state', '=', 'cancel')]" icon="gtk-cancel"/>
                    <separator orientation="vertical" />

                    <field name="name_seg" />
                    <field name="description_seg" />
                    <field name="line_ids" />
                    <field name="location_config_id" />
                    <field name="rule" />
                    <field name="product_list_id" />
                </search>
            </field>
        </record>

        <record id="replenishment_segment_action" model="ir.actions.act_window">
            <field name="name">Segment</field>
            <field name="res_model">replenishment.segment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_current_instance': True}</field>
        </record>

        <menuitem id="replenishment_segment_menu"
            action="replenishment_segment_action"
            sequence="40"
            parent="stock_schedule.stock_automatic_procurements_menu" />


        <act_window id="action_from_segment_to_order_calc"
            name="Order Calc."
            src_model="replenishment.segment"
            res_model="replenishment.order_calc"
            domain="[('segment_id', '=', active_id)]"
            />

        <act_window id="action_from_location_config_to_order_calc"
            name="Order Calc."
            src_model="replenishment.location.config"
            res_model="replenishment.order_calc"
            domain="[('location_config_id', '=', active_id)]"
            context="{'search_view': False}"
            />

        <act_window id="action_from_location_config_to_segment"
            name="Segments"
            src_model="replenishment.location.config"
            res_model="replenishment.segment"
            domain="[('location_config_id', '=', active_id)]"
            context="{'search_view': False}"
            />

        <record id="replenishment_order_calc_form" model="ir.ui.view">
            <field name="name">replenishment.order_calc.form</field>
            <field name="model">replenishment.order_calc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Order Calculation" hide_duplicate_button="1" hide_new_button="1" hide_delete_button="1">
                    <field name="name" />
                    <field name="segment_id" />
                    <field name="description_seg" />
                    <field name="rule" />
                    <field name="rule_alert" />
                    <field name="total_lt" />
                    <field name="new_order_reception_date" />
                    <field name="generation_date" />
                    <field name="next_generation_date" />
                    <newline />
                    <group colspan="2" col="4">
                        <separator string="Location Config"/>
                        <field name="local_location_ids" nolabel="1">
                            <tree>
                                <field name="complete_name" />
                                <field name="usage" />
                                <field name="location_category" />
                            </tree>
                        </field>
                        <field name="remote_location_ids" nolabel="1">
                            <tree>
                                <field name="full_name" string="Other project Locations"/>
                            </tree>
                        </field>
                    </group>
                    <group colspan="2" col="2">
                        <field name="instance_id" />
                        <field name="location_config_id" />
                        <field name="location_config_description" />
                    </group>
                    <newline />
                    <group colspan="4" name="import" string="Import Lines" attrs="{'invisible':[('state', '!=', 'draft')]}">
                        <field name="file_to_import" colspan="2" />
                        <button name="import_lines" string="Import Lines" type="object" colspan="2" icon="gtk-save" />
                    </group>
                    <field name="order_calc_line_ids" colspan="4" nolabel="1" attrs="{'readonly':[('state', '!=', 'draft')]}" default_get="rule=rule">
                        <tree editable="top" editable_style="new">
                            <field name="product_id" />
                            <field name="product_description" displayon="noteditable"/>
                            <field name="uom_id" invisible="1" />
                            <field name="in_main_list" />
                            <field name="valid_rr_fmc" invisible="context.get('rule')!='cycle'"/>
                            <field name="real_stock" />
                            <field name="pipeline_qty" />
                            <field name="eta_for_next_pipeline" />
                            <field name="reserved_stock_qty" />
                            <field name="projected_stock_qty" />
                            <field name="qty_lacking" invisible="context.get('rule')!='cycle'"/>
                            <field name="qty_lacking_needed_by" invisible="context.get('rule')!='cycle'"/>
                            <field name="open_loan" />
                            <field name="expired_qty_before_cons" invisible="context.get('rule')!='cycle'"/>
                            <field name="expired_qty_before_eta" />
                            <field name="proposed_order_qty" />
                            <field name="agreed_order_qty" />
                            <field name="order_qty_comment" />
                            <field name="warning" invisible="context.get('rule')=='auto'"/>
                        </tree>
                    </field>
                    <field name="state" />
                    <group colspan="2">
                    <button name="validated" string="Validated" type="object" attrs="{'invisible':[('state', '!=', 'draft')]}" icon="gtk-ok" />
                    <button name="set_as_draft" string="Set As Draft" type="object" attrs="{'invisible':[('state', '!=', 'validated')]}" icon="gtk-go-back" />
                    <button name="generate_ir" string="Generate Requisition &amp; Close" type="object" attrs="{'invisible':[('state', '!=', 'validated')]}" icon="gtk-convert"/>
                    <button name="cancel" string="Cancel" type="object"  attrs="{'invisible':[('state', 'not in', ['draft', 'validated'])]}" icon="gtk-cancel" />
                    </group>

                </form>
            </field>
        </record>

        <record id="replenishment_order_calc_tree" model="ir.ui.view">
            <field name="name">replenishment.order_calc.tree</field>
            <field name="model">replenishment.order_calc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Order Calculation" hide_new_button="1" hide_delete_button="1">
                    <field name="name" />
                    <field name="segment_id" />
                    <field name="description_seg" />
                    <field name="location_config_id" />
                    <field name="rule" />
                    <field name="order_calc_line_ids" />
                    <field name="generation_date" />
                    <field name="next_generation_date" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="replenishment_order_calc_search" model="ir.ui.view">
            <field name="name">replenishment.order_calc.search</field>
            <field name="model">replenishment.order_calc</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Order Calculation">
                    <filter string="Draft" domain="[('state', '=', 'draft')]" icon="terp-document-new"/>
                    <filter string="Validated" domain="[('state', '=', 'validated')]" icon="gtk-ok"/>
                    <filter string="Closed" domain="[('state', '=', 'closed')]" icon="gtk-close"/>
                    <filter string="Cancel" domain="[('state', '=', 'cancel')]" icon="gtk-cancel"/>
                    <separator orientation="vertical"/>
                    <field name="name" />
                    <field name="segment_id" />
                    <field name="description_seg" />
                    <field name="rule" />
                </search>
            </field>
        </record>

        <record id="replenishment_order_calc_action" model="ir.actions.act_window">
            <field name="name">Order Calculation</field>
            <field name="res_model">replenishment.order_calc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="replenishment_order_calc_menu"
            action="replenishment_order_calc_action"
            sequence="45"
            parent="stock_schedule.stock_automatic_procurements_menu" />

    </data>
</openerp>
