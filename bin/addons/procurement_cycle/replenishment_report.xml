<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <report
            id="report_replenishment_parent_segment_chronogram_xls"
            string="Chronogram"
            model="replenishment.parent.segment"
            name="report_replenishment_parent_segment_chronogram_xls"
            file="procurement_cycle/report_doc/chronogram.mako"
            target_filename="Chronogram_%(year)s_%(month)s_%(day)s"
            report_type="webkit"
            menu="True"
            />

      <report
            id="report_replenishment_segment_xls"
            string="Segment"
            model="replenishment.segment"
            name="report_replenishment_segment_xls"
            file="procurement_cycle/report_doc/replenishment_segment.mako"
            target_filename="${name_seg}_%(year)s_%(month)s_%(day)s"
            report_type="webkit"
            menu="True"
            />

    <report
            id="report_replenishment_order_calc_xls"
            string="Order Calc Excel Export"
            model="replenishment.order_calc"
            name="report_replenishment_order_calc_xls"
            file="procurement_cycle/report_doc/replenishment_order_calc.mako"
            target_filename="${_('Order_Calc_Excel_Export')}"
            report_type="webkit"
            menu="True"
            sequence="1"
            />

      <report
            id="report_replenishment_order_calc_warning_xls"
            string="Order Calc Excel Export (only lines with warning)"
            model="replenishment.order_calc"
            name="report_replenishment_order_calc_warning_xls"
            file="procurement_cycle/report_doc/replenishment_order_calc.mako"
            target_filename="${_('Order_Calc_only_lines_with_warning')}"
            report_type="webkit"
            menu="True"
            sequence="2"
            />

      <report
            id="report_replenishment_order_calc_draft_consolidated_xls"
            string="Draft Consolidated OC Lines"
            model="replenishment.order_calc"
            name="report_replenishment_order_calc_draft_consolidated_xls"
            file="procurement_cycle/report_doc/replenishment_order_calc.mako"
            target_filename="${_('Export_Draft_Consolidated_OC_Lines')}"
            report_type="webkit"
            menu="False"
            />
      <record id="action_replenishment_order_calc_draft_consolidated" model="ir.actions.server">
          <field name="name">Draft Consolidated OC Lines</field>
          <field name="model_id" ref="model_replenishment_order_calc"/>
          <field name="state">code</field>
          <field name="code">action = obj.check_draft_consolidated(context=context)</field>
      </record>
      <record id="ir_replenishment_order_calc_draft_consolidated" model="ir.values">
          <field name="key2">client_print_multi</field>
          <field name="model">replenishment.order_calc</field>
          <field name="name">Draft Consolidated OC Lines</field>
          <field eval="'ir.actions.server,%d'%action_replenishment_order_calc_draft_consolidated" name="value"/>
          <field eval="True" name="object"/>
          <field name="sequence">3</field>
      </record>

      <report
            id="report_replenishment_order_calc_consolidated_xls"
            string="Consolidated OC Lines - All Statuses"
            model="replenishment.order_calc"
            name="report_replenishment_order_calc_consolidated_xls"
            file="procurement_cycle/report_doc/replenishment_order_calc.mako"
            target_filename="${_('Export_Consolidated_OC_all_status')}"
            report_type="webkit"
            menu="True"
            sequence="4"
            />

      <report
            id="report_replenishment_inventory_review_xls2"
            string="Inventory Review xls"
            model="replenishment.inventory.review"
            name="report_replenishment_inventory_review_xls2"
            report_type="openpyxl"
            auto="False"
            target_filename="Inventory-Review-${location_config_id.name}_%(year)s_%(month)s_%(day)s"
            menu="True"
            />

      <report
            id="report_replenishment_product_list"
            string="Replenishment Product List"
            model="replenishment.product.list"
            name="report_replenishment_product_list"
            file="procurement_cycle/report_doc/replenishment_product_list.mako"
            report_type="webkit"
            menu="False"
            />

      <report
            id="report_product_stock_out_xls"
            string="Stock Out"
            model="product.stock_out"
            name="report_product_stock_out_xls"
            file="procurement_cycle/report_doc/product_stock_out.mako"
            report_type="webkit"
            menu="True"
            />
    </data>
</openerp>

