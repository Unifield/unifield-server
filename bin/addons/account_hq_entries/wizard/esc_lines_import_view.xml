<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="esc_line_import_wizard" model="ir.ui.view">
            <field name="name">esc.line.import.wizard</field>
            <field name="model">esc.line.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="International Invoices Lines Import">
                    <label string="This will import lines from a SpreadSheet xml file." colspan="4"/>
                    <newline/>
                    <group colspan="4">
                        <field name="file" filename="filename" colspan="2"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <newline />
                    <button name="get_template_file" type="object"  string="Download Empty Template" icon="gtk-justify-fill" colspan="1"/>
                    <group colspan="3" />
                    <newline />
                    <newline />
                    <group colspan="4" col="2">
                        <button string="Cancel" special="cancel" icon="gtk-cancel"/>
                        <button name="button_validate" type="object" string="Import" icon="terp-camera_test"/>
                    </group>
                </form>
            </field>
        </record>


        <record id="esc_line_import_progress_wizard" model="ir.ui.view">
            <field name="name">esc.line.import.wizard</field>
            <field name="model">esc.line.import</field>
            <field name="priority" eval="100" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="International Invoices Lines Import">
                    <field name="progress" widget="progressbar" colspan="4"/>
                    <newline />
                    <field name="filename" readonly="1" />
                    <newline />
                    <field name="state" />
                    <group colspan="2" col="4">
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                    <html colspan="4">
                    <script language="javascript">
                        $(document).ready(function() {
                            if ($('#state').val() == 'inprogress') {
                                setTimeout(function(){
                                    $('#dummy').click();
                                },2400)
                            }
                        });
                    </script>
                    </html>

                    <newline />
                    <field name="created" />
                    <field name="nberrors" />
                    <field name="error" colspan="4" nolabel="1" />
                    <group colspan="4" col="2">
                        <button name="dummy" string="Update" icon="gtk-refresh" invisible="1"/>
                        <button string="Ok" name="done" type="object" icon="gtk-ok" states="done" />
                        <button string="Cancel" name="ack" type="object" icon="gtk-cancel" states="error"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="esc_line_import_action" model="ir.actions.server">
            <field name="name">International Invoices Lines Import</field>
            <field name="model_id" ref="model_esc_line_import" />
            <field name="state">code</field>
            <field name="code">action = obj.open_wizard(context=context)</field>
        </record>

        <menuitem name="International Invoices Lines Import" action="esc_line_import_action" type="server" id="esc_line_import_menu" parent="menu_hq" sequence="19"/>
    </data>
</openerp>
