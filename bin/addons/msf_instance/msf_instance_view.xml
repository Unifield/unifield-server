                </xpath>
            </field>
        </record>
        <!-- Redefine G/L account move line -->
        <record id="view_move_line_tree_instance_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.instance.inherit</field>
            <field name="model">account.move.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="res_currency_functional.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="before">
                    <field name="instance_id" readonly="1"/>
                </field>
            </field>
        </record>
        <record id="view_move_line_tree_editable_instance_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.editable.instance.inherit</field>
            <field name="model">account.move.line</field>
            <field name="type">tree</field>
            <field name="priority">25</field>
            <field name="inherit_id" ref="res_currency_functional.view_move_line_tree_editable"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="before">
                    <field name="instance_id" readonly="1"/>
                </field>
            </field>
        </record>

        <!-- Redefine register -->
        <record id="inherit_view_bank_statement_instance_form" model="ir.ui.view">
            <field name="name">inherit.view.bank.statement.instance.form</field>
            <field name="model">account.bank.statement</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="register_accounting.inherit_view_bank_statement_form"/>
            <field name="priority">35</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form//field[@name='journal_id']" position="before">
                        <field name="instance_id" readonly="1"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="inherit_view_bank_statement_instance_form2" model="ir.ui.view">
            <field name="name">inherit.view.bank.statement.instance.form2</field>
            <field name="model">account.bank.statement</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="register_accounting.inherit_view_bank_statement_form2"/>
            <field name="priority">35</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form//field[@name='journal_id']" position="before">
                        <field name="instance_id" readonly="1"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="view_cheque_register_form" model="ir.ui.view">
            <field name="name">view.cheque.register.instance.form</field>
            <field name="model">account.bank.statement</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="register_accounting.view_cheque_register_form"/>
            <field eval="62" name="priority"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form//field[@name='journal_id']" position="before">
                        <field name="instance_id" readonly="1"/>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="view_bank_statement_instance_tree" model="ir.ui.view">
            <field name="name">account.bank.statement.instance.tree</field>
            <field name="model">account.bank.statement</field>
            <field name="type">tree</field>
            <field eval="35" name="priority"/>
            <field name="inherit_id" ref="account.view_bank_statement_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='name']" position="before">
                    <field name="instance_id" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_cash_statement_instance_tree" model="ir.ui.view">
            <field name="name">account.cash.statement.instance.tree</field>
            <field name="model">account.bank.statement</field>
            <field name="type">tree</field>
            <field eval="36" name="priority"/>
            <field name="inherit_id" ref="register_accounting.view_cash_statement_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='name']" position="before">
                    <field name="instance_id" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_cheque_register_instance_tree" model="ir.ui.view">
            <field name="name">account.cheque.register.instance.tree</field>
            <field name="model">account.bank.statement</field>
            <field name="type">tree</field>
            <field eval="37" name="priority"/>
            <field name="inherit_id" ref="register_accounting.view_cheque_register_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='name']" position="before">
                    <field name="instance_id" readonly="1"/>
                </xpath>
            </field>
        </record>
        <!--
      MSF Instance search view
    -->
        <record id="view_msf_instance_filter" model="ir.ui.view">
            <field name="name">msf.instance.filter</field>
            <field name="model">msf.instance</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Proprietary Instances List">
                    <filter domain="[('state', '=', 'active')]"
                        icon="terp-check" name="active" string="Active"/>
                    <filter domain="[('state', '=', 'inactive')]"
                        icon="gtk-dialog-error" name="inactive" string="Inactive"/>
                    <separator orientation="vertical"/>
                    <field name="code" select="1"/>
                    <field name="mission" select="1"/>
                    <field name="level" select="1"/>
                </search>
            </field>
        </record>

    <!-- Analytic accounts -->
        <record id="view_analytic_account_form2" model="ir.ui.view">
            <field name="name">analytic.account.form.2</field>
            <field name="model">account.analytic.account</field>
            <field name="type">form</field>
            <field name="priority">30</field>
            <field name="inherit_id" ref="account.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="parent_id" position="before">
                        <field name="current_instance_type" invisible="1"/>
                        <field name="is_pf" invisible="1"/>
                        <field name="instance_id" domain="[('level', '=', 'coordo')]"
                               attrs="{'required': [('category', '=', 'FUNDING'), ('current_instance_type', '=', 'section'), ('is_pf', '=', False)],
                                       'invisible': [('category', '!=', 'FUNDING')],
                                       'readonly': ['|', ('current_instance_type', '!=', 'section'), ('is_pf', '=', True)]}"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_msf_instance_backup_form" model="ir.ui.view">
            <field name="name">msf.instance.backup.form"</field>
            <field name="model">msf.instance.cloud</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cloud Backup Config">
                    <field name="code" readonly="1"/>
                    <field name="name" readonly="1"/>
                    <field name="cloud_url" widget="url" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="is_editable" invisible="1" />
                    <field name="has_config" invisible="1" />
                    <field name="cloud_login" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_set_password" password="1" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_schedule_time" widget="float_time" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_retry_from" widget="float_time" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_retry_to" widget="float_time" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <newline />
                    <button name="test_connection" icon="monitor.png" string="Test Connection" type="object" colspan="2"/>
                    <group colspan="4" attrs="{'invisible': ['|', ('is_editable', '=', False), ('has_config', '=', False)]}">
                        <separator colspan="4" string="Duplicate the configuration to all instances" />
                        <field name="delay_minute" />
                        <button name="copy_to_all" type="object" icon="gtk-copy" string="Duplicate Config to all instances" confirm="This will override all instances configuration." />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_msf_instance_backup_tree" model="ir.ui.view">
            <field name="name">msf.instance.tree</field>
            <field name="model">msf.instance.cloud</field>
            <field name="type">tree</field>
            <field name="priority" eval="110" />
            <field name="arch" type="xml">
                <tree editable="top" hide_delete_button="1" hide_new_button="1" string="Cloud Backup Config" noteditable="not is_editable" colors="red: not has_config">
                    <field name="code" readonly="1"/>
                    <field name="name" readonly="1"/>
                    <field name="cloud_url" widget="url" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="is_editable" invisible="1" />
                    <field name="has_config" invisible="1" />
                    <field name="cloud_login" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_set_password" password="1" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_schedule_time" widget="float_time" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_retry_from" widget="float_time" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <field name="cloud_retry_to" widget="float_time" attrs="{'readonly': [('is_editable', '=', False)]}"/>
                    <button name="test_connection" icon="monitor.png" string="Test Connection" type="object" />
                </tree>
            </field>
        </record>

        <record id="view_msf_instance_backup_search" model="ir.ui.view">
            <field name="name">msf.instance.search</field>
            <field name="model">msf.instance.cloud</field>
            <field name="type">search</field>
            <field name="priority" eval="110" />
            <field name="arch" type="xml">
                <search>
                    <filter string="Not configured" icon="terp-emblem-important" domain="[('has_config','=',False)]"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="cloud_url" />
                    <field name="cloud_login" />
                    <field name="cloud_schedule_time" widget="float_time"/>
                </search>
            </field>
        </record>

        <record id="action_msf_instance_backup" model="ir.actions.act_window">
            <field name="name">Cloud Backup Config</field>
            <field name="res_model">msf.instance.cloud</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'active'), ('filter_by_level', '=', True)]</field>
            <field name="search_view_id" ref="view_msf_instance_backup_search" />
            <field name="view_id" ref="view_msf_instance_backup_tree" />
        </record>

    </data>
</openerp>
