<?xml version="1.0" encoding="utf-8"?>
<openerp>
      <data>
            <record model="ir.ui.view" id="wizard_confirm_closing_balance">
                  <field name='name'>wizard.confirm.closing.balance</field>
                  <field name='model'>wizard.confirm.closing.balance</field>
                  <field name='type'>form</field>
                  <field name='arch' type='xml'>
                        <form>
                              <separator string=""/>
                              <field name="is_prev_reg_open" invisible="1"/>
                              <field name="display_normal" attrs="{'invisible': [('is_prev_reg_open', '=', True)]}"/>
                              <group colspan="4">
                                    <button string='Cancel' special='cancel' icon='gtk-cancel' colspan="2" />
                                    <button name="button_confirm_closing_balance" string="Confirm" attrs="{'readonly': [('display_normal', '=', False), ('display_override', '=', False)]}" type="object" icon="gtk-apply" colspan="2" />
                              </group>
                              <newline/>
                              <newline/>
                              <newline/>
                              <group attrs="{'invisible': [('is_prev_reg_open', '=', False)]}">
                                    <html>
                                          <div style="height:20em">
                                                <p></p>
                                          </div>
                                          <div align="center" style="color:red; font-weight:bold; font-size:2.5em; vertical-align:top;">
                                                <p class="par">
                                                      <style>
                                                            .par input[type=checkbox]{
                                                                  -moz-transform: scale(2.5); /* Firefox */
                                                                  -webkit-transform: scale(2.5); /* Safari and Chrome */
                                                                  transform: scale(2.5);
                                                                  margin: 0.25em;
                                                                  height: 0.75em;
                                                            }
                                                      </style>
                                                      <span><translate>Are you sure you want to freeze closing balance while the previous period is still open?</translate></span>
                                                      <span><field name="display_override" attrs="{'invisible': [('is_prev_reg_open', '=', False)]}" colspan="4"/></span>
                                                </p>
                                          </div>
                                    </html>
                              </group>
                        </form>
                  </field>
            </record>
      </data>
</openerp>
