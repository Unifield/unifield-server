<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Wizard -->
        <record id="employee_activation_view" model="ir.ui.view">
            <field name="name">Activate/Deactivate Employees</field>
            <field name="model">hr.employee.activation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Activate/Deactivate Employees">
                <field name="active_status"/>
                <button icon="gtk-cancel" string="Cancel" special="cancel"/>
                <button icon="terp-camera_test" string="Approve" name="change_employee_status" type="object" default_focus="1"/>
            </form>
            </field>
        </record>

        <!-- Action in Menu -->
        <record id="employee_activation_action" model="ir.actions.act_window">
            <field name="name">Activate/Deactivate Employees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.activation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="employee_activation_view"/>
            <field name="target">new</field>
        </record>
        <record model="ir.values" id="employee_activation_values">
            <field name="model_id" ref="model_hr_employee" />
            <field name="object" eval="1" />
            <field name="name">Activate/Deactivate Employees</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('employee_activation_action'))" />
            <field name="key">action</field>
            <field name="model">hr.employee</field>
            <field name="sequence" eval="105"/>
        </record>

    </data>
</openerp>
