<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="version_tree_view">
            <field name="name">version_tree_view</field>
            <field name="model">sync_server.version</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Update Version">
                    <field name="name"/>
                    <field name="sum" />
                    <field name="date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sync_server_user_rights_search">
            <field name="name">sync_server_user_rights_search</field>
            <field name="model">sync_server.user_rights</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="sum" />
                    <field name="date" />
                    <field name="state" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="sync_server_user_rights_tree">
            <field name="name">sync_server_user_rights_tree</field>
            <field name="model">sync_server.user_rights</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="User Rights" colors="blue:state=='confirmed';gray:state=='deprecated';red:state=='draft'" editable="top" hide_new_button="1">
                    <field name="name"/>
                    <field name="sum" />
                    <field name="date" />
                    <field name="state" />
                    <button type="object" name="download_file" string="Download File" icon="gtk-go-forward"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sync_server_user_rights_form">
            <field name="name">sync_server_user_rights_form</field>
            <field name="model">sync_server.user_rights</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="User Rights" hide_new_button="1" hide_duplicate_button="1">
                    <field name="name"/>
                    <field name="sum" />
                    <field name="date" />
                    <field name="state" />
                    <button name="activate" type="object" icon="gtk-ok" string="Activate" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="sync_server_user_rights_action">
            <field name="name">Instances User Rights</field>
            <field name="res_model">sync_server.user_rights</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="sync_server_user_rights_menu" parent="sync_server.sync_menu" sequence="100" action="sync_server_user_rights_action" />

        <record model="ir.ui.view" id="sync_server_user_rights_add_file_form">
            <field name="name">sync_server_user_rights_add_file_form</field>
            <field name="model">sync_server.user_rights.add_file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="User Right: import new file">
                    <group colspan="4">
                    <field name="name" />
                    <newline />
                    <field name="zip_file" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    </group>
                    <group colspan="4" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <separator colspan="4" string="Message" />
                        <field name="message" colspan="4" nolabel="1"  widget="full_text"/>
                    </group>
                    <field name="state" invisible="1" />
                    <html>
                        <script language="javascript">
                            $(document).ready(function() {
                                if ($('#state').val() == 'inprogress') {
                                    setTimeout(function(){
                                       $('#dummy').click();
                                    },2400)
                                }
                            });
                        </script>
                    </html>

                    <group colspan="4">
                        <separator colspan="4" string="Actions" />
                        <button name="import_zip" type="object" icon="gtk-ok" string="Import" colspan="2"  attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="dummy" string="Update" icon="gtk-refresh" type="object" attrs="{'invisible':[('state', '!=', 'inprogress')]}"/>
                        <button name="done" string="Deploy on server" icon="gtk-ok" type="object" attrs="{'invisible':[('state', '!=', 'done')]}"/>
                    </group>
                    <newline />
                    <group colspan="4" attrs="{'invisible': [('state', '=', 'inprogress')]}">
                        <separator colspan="4" string="Cancel" />
                        <button special="cancel" icon="gtk-cancel" string="Cancel" colspan="2" />
                    </group>
                </form>
            </field>
        </record>

        <act_window
            id="sync_server_user_rights_add_file_link"
            name="Add new file"
            src_model="sync_server.user_rights"
            res_model="sync_server.user_rights.add_file"
            target="new"
            view_mode="form"
            view_type="form"
            empty_ids="1" />


        <record model="ir.ui.view" id="sync_server_survey_search">
            <field name="name">sync_server_survey_search</field>
            <field name="model">sync_server.survey</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="activated" string="Synced" domain="[('activated', '=', True)]" icon="gtk-connect" />
                    <filter name="deactivated" string="Not Synced" domain="[('activated', '=', False)]" icon="gtk-disconnect"/>
                    <separator />
                    <filter name="current" string="Current" domain="[('date_filter', '=', 'current')]" icon="terp-go-today" />
                    <filter name="future" string="Future" domain="[('date_filter', '=', 'future')]" icon="terp-calendar" />
                    <separator />
                    <field name="name"/>
                    <field name="profile" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="included_group_ids" />
                    <field name="excluded_group_ids" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="sync_server_survey_tree">
            <field name="name">sync_server_survey_tree</field>
            <field name="model">sync_server.survey</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree colors="grey:end_date&lt;current_date;orange:not activated and end_date&gt;current_date">
                    <field name="name"/>
                    <field name="profile" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="activated" />
                    <field name="url_en" widget="url"/>
                    <field name="url_fr" widget="url"/>
                    <field name="included_group_ids" truncate="256" />
                    <field name="excluded_group_ids" truncate="256" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sync_server_survey_form">
            <field name="name">sync_server_survey_tree</field>
            <field name="model">sync_server.survey</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Survey">
                    <group colspan="4" attrs="{'invisible': [('activated', '=', True)]}">
                        <html>
                            <p style="text-align: center; color: orange; margin-bottom: 10px; font-weight: bold; font-size: +1.5em;">
                                <translate>Survey is not synced.</translate>
                            </p>
                        </html>
                    </group>
                    <field name="name"/>
                    <field name="profile" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="url_en" widget="url" attrs="{'readonly': [('activated', '=', True)]}" colspan="4" />
                    <field name="url_fr" widget="url" attrs="{'readonly': [('activated', '=', True)]}" colspan="4" />
                    <group colspan="4">
                        <field name="activated" readonly="1"/>
                        <button name="activate" icon="gtk-connect" type="object" string="Activate Sync" attrs="{'invisible': [('activated', '=', True)]}"/>
                        <button name="deactivate" icon="gtk-disconnect" type="object" string="De-Activate Sync" attrs="{'invisible': [('activated', '=', False)]}" />
                    </group>
                    <newline />
                    <separator string="Included Groups" colspan="2"/>
                    <separator string="Excluded Groups" colspan="2"/>
                    <field name="included_group_ids" context="{'hide': excluded_group_ids}" nolabel="1" colspan="2"/>
                    <field name="excluded_group_ids" context="{'hide': included_group_ids}" nolabel="1" colspan="2"/>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="sync_server_survey_action">
            <field name="name">Survey</field>
            <field name="res_model">sync_server.survey</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="sync_server_survey_menu" parent="sync_server.sync_menu" sequence="100" action="sync_server_survey_action" />

        <record model="ir.ui.view" id="res_groups_instances_search">
            <field name="name">res_groups_instances_search</field>
            <field name="model">res.groups.instances</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                </search>
            </field>
        </record>
    </data>
</openerp>

