<separator string="Wizard template" colspan="4"/>
<group col="5" colspan="4">
    <field name="display_load_button" invisible="1" />
    <field name="saved_templates" on_change="onchange_saved_templates()" string="Select an existing template" />
    <button icon="gtk-save" name="load_template" string="Load" type="object" attrs="{'invisible': [('display_load_button', '=', False)]}" />
    <button icon="gtk-edit" name="edit_template" string="Replace" type="object" attrs="{'invisible': [('display_load_button', '=', True)]}" />
    <button icon="gtk-cancel" name="delete_template" string="Delete" type="object" attrs="{'invisible': [('display_load_button', '=', True)]}"
            confirm="Do you really want to delete the selected template?"/>
    <field name="template_name" colspan="2" string="or Choose a new template name" />
    <button icon="gtk-floppy" name="save_template" string="Save new template" type="object" colspan="3" />
</group>