<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Redefine analytic line tree and form -->
        <record id="account.view_account_analytic_line_tree" model="ir.ui.view">
            <field name="name">account.analytic.line.tree</field>
            <field name="model">account.analytic.line</field>
            <field name="type">tree</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree editable="top" noteditable="1" string="Analytic Journal Items" hide_delete_button="1" hide_new_button="1">
                    <field name="instance_id" readonly="1"/>
                    <field name="is_reversal" invisible="1"/>
                    <field name="journal_type" invisible="1"/>
                    <field name="is_corrigible" invisible="1"/>
                    <button name="button_corrections" type="object" string="Accounting info/correction"
                            attrs="{'invisible': [('is_corrigible', '=', False)]}" icon="terp-mail-message-new"/>
                    <field name="is_reallocated" invisible="1"/>
                    <field name="last_corrected_id" invisible="1"/>
                    <field name="is_engi" invisible="1"/>
                    <button string="Have been reallocated" attrs="{'invisible': [('is_reallocated', '=', False), ('last_corrected_id', '=', False)]}" icon="terp-mail-" colspan="2" name="button_open_analytic_corrections" type="object"/>
                    <field name="journal_id" domain="[('is_current_instance','=',True)]"/>
                    <field name="entry_sequence"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="document_date"/>
                    <field name="date"/>
                    <field name="period_id"/>
                    <field name="general_account_id"/>
                    <field name="destination_id" string="Destination" invisible="not context.get('display_fp', False)"/>
                    <field name="cost_center_id" string="Cost Center" invisible="not context.get('display_fp', False)"/>
                    <field name="account_id"/>
                    <field name="partner_txt"/>
                    <field name="amount_currency" sum="Sum"/>
                    <field name="currency_id"/>
                    <field name="amount" sum="Sum"/>
                    <field name="functional_currency_id"/>
                    <field name="output_amount"/>
                    <field name="output_currency"/>
                    <field name="reversal_origin_txt"/>
                    <field name="user_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="account.view_account_analytic_line_form" model="ir.ui.view">
            <field name="name">account.analytic.line.form</field>
            <field name="model">account.analytic.line</field>
            <field name="type">form</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <form string="Analytic Journal Item" hide_new_button="1" hide_delete_button="1" hide_duplicate_button="1">
                    <separator string="General Information"/>
                    <group col="4" colspan="4">
                        <field name="name" readonly="True"/>
                        <field name="ref" readonly="True"/>
                        <field name="journal_id"/>
                        <field name="period_id"/>
                        <field name="document_date"/>
                        <field name="date"/>
                        <field name="source_date" invisible="1"/>
                    </group>
                    <separator string="Amount"/>
                    <group col="6" colspan="4">
                        <field name="destination_id" readonly="True"/>
                        <field name="cost_center_id" readonly="True"/>
                        <field name="account_id" readonly="True"/>
                        <field name="partner_txt" widget="char"/>
                        <field name="amount_currency"/>
                        <field name="amount"/>
                    </group>
                    <group col="4" colspan="4">
                        <group col="2" colspan="2">
                            <separator string="Currency"/>
                            <field name="currency_id"/>
                            <field name="functional_currency_id"/>
                        </group>
                        <group col="2" colspan="2">
                            <separator string="Other information"/>
                            <field name="move_id"/>
                            <field name="is_reversal" readonly="True"/>
                            <field name="reversal_origin"/>
                            <field name="invoice_id" invisible="1"/>
                            <field name="purchase_order_id" invisible="1"/>
                            <field name="db_id" invisible="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
