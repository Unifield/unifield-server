<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

    <record model="ir.ui.view" id="view_account_employee_balance_search" >
        <field name="name">account.employee.balance.tree.search</field>
        <field name="model">account.employee.balance.tree</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Employee Balance Search">
                <field name="employee_id" string="Employee" />
            </search>
        </field>
    </record>

        <record model="ir.ui.view" id="view_account_employee_balance_tree">
            <field name="name">account.employee.balance.tree.view</field>
            <field name="model">account.employee.balance.tree</field>
            <field name="type">tree</field>
            <field name="priority" eval="300"/>
            <field name="arch" type="xml">
                <tree string="Employee Balance View"
                    editable="top" noteditable="1"
                    hide_new_button="1" hide_delete_button="1">
                    <button
                        name="open_journal_items"
                        string="Open journal items"
                        type="object"
                        icon="terp-gtk-go-back-rtl"
                    />
                    <field name="employee_id" invisible="1"/>
                    <field name="name"/>
                    <field name="debit" sum="Debit" />
                    <field name="credit" sum="Credit" />
                    <field name="balance" sum="Balance" />
                </tree>
            </field>
        </record>

        <!-- journal items from view_account_employee_balance_tree !-->
        <record model="ir.ui.view" id="view_account_employee_balance_tree_move_line_tree">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="type">tree</field>
            <field name="priority" eval="301"/>
            <field name="arch" type="xml">
                <tree string="Account Entry Line" editable="bottom" noteditable="1" colors="red:state in ('draft');black:state in ('valid')" hide_new_button="1">
                    <field name="journal_id"/>
                    <field name="move_id"/>
                    <!--
                    <field name="name"/>
                    <field name="ref"/>
                    -->
                    <field name="document_date"/>
                    <field name="date"/>
                    <field name="period_id" domain="[('state','=','draft')]"/>
                    <field name="account_id"/>
                    <field name="move_state" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="employee_id" invisible="1"/>
                    <field name="transfer_journal_id" invisible="1"/>
                    <field name="partner_txt" invisible="1"/>
                    <field name="partner_type"/>
                    <field name="debit_currency" sum="Total Book. Debit"/>
                    <field name="credit_currency" sum="Total Book. Credit"/>
                    <field name="currency_id"/>
                    <field name="debit" sum="Total Func. Debit"/>
                    <field name="credit" sum="Total Func. Credit"/>
                    <field name="output_amount_debit" invisible="1" />
                    <field name="output_amount_credit" invisible="1" />
                    <field name="functional_currency_id"/>
                    <field name="reconcile_txt"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="wizard_account_report_employee_balance_tree_view" model="ir.ui.view">
            <field name="name">Employee Balance View</field>
            <field name="model">wizard.account.employee.balance.tree</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.account_common_report_view" />
            <field name="arch" type="xml">
            <data>
            <xpath expr="/form/label[@string='']" position="replace">
                <separator string="Employee Balance Tree" colspan="4"/>
            </xpath>
            <xpath expr="//field[@name='target_move']" position="after">
                <field name="result_selection" on_change="onchange_result_selection(result_selection)"/>
                <field name="display_employee"/>
                <field name="reconciled"/>
                <field name="only_active_employees"/>
                <field name="employee_type" on_change="onchange_employee_type(employee_type)"/>
                <field name="payment_method" on_change="onchange_payment_method(payment_method)"/>
                <field name="instance_ids" domain="[('instance_to_display_ids','=',True)]">
                    <tree noteditable="1" editable="top" string="Proprietary Instances">
                            <field name="code" />
                            <field name="name" />
                    </tree>
                </field>
                <field name="employee_ids" >
                    <tree noteditable="1">
                        <field name="name_resource"/>
                        <field name="identification_id"/>
                        <field name="employee_type"/>
                    </tree>
                </field>
                <field name="account_domain" invisible="1"/>
                <field name="account_ids" domain="account_domain">
                    <tree noteditable="1">
                        <field name="code"/>
                        <field name="name"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//field[@name='fiscalyear_id']" position="attributes">
                <attribute name="on_change">onchange_fiscalyear(fiscalyear_id)</attribute>
            </xpath>
            <xpath expr="//field[@name='period_from']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="//field[@name='period_to']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>

            <xpath expr="//group[1]" position="replace">
             <group col="4" colspan="4">
                <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
                <button icon="terp-gtk-go-back-rtl" name="show" string="Balance View" type="object" colspan="2" default_focus="1" />
                <button icon="gtk-print" name="print_pdf" string="Print PDF" type="object" colspan="2" />
                <button icon="gtk-print" name="print_xls" string="Print Excel" type="object" colspan="2" />
            </group>
            </xpath>

            <xpath expr="//field[@name='journal_ids']" position="replace">
                <group col="4" colspan="4">
                    <button name="remove_journals" string="Remove all journals" type="object" colspan="1" />
                    <label string="" colspan="3" />
                    <!-- exclude extra-accounting journals from this report (IKD, ODX). -->
                    <field name="journal_ids" colspan="4" nolabel="1" noteditable="1"
                        domain="[('type', 'not in', ['inkind', 'extra'])]">
                        <tree noteditable="1" editable="top" string="Account Journal" colors="red:is_active==False;black:is_active==True">
                            <field name="is_active" invisible="1" />
                            <field name="instance_id" />
                            <field name="code" />
                            <field name="name" />
                            <field name="type" />
                        </tree>
                    </field>
                </group>
            </xpath>

            </data>
            </field>
        </record>

        <record id="action_account_employee_balance_tree" model="ir.actions.act_window">
             <field name="name">Employee Balance View</field>
             <field name="res_model">wizard.account.employee.balance.tree</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="wizard_account_report_employee_balance_tree_view"/>
             <field name="context">{'record_id': active_id}</field>
             <field name="target">new</field>
       </record>


       <menuitem icon="STOCK_PRINT"
            name="Employee Balance"
            action="action_account_employee_balance_tree"
            id="menu_account_employee_balance_tree"
            parent="account.employee_menu"
            sequence="2000" />

     </data>
 </openerp>
