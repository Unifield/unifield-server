<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Entries Data Integrity - Wizard -->
        <record id="integrity_finance_wizard_view" model="ir.ui.view">
            <field name="name">Entries Data Integrity</field>
            <field name="model">integrity.finance.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <field name="instance_ids" domain="[('instance_to_display_ids', '=', True)]">
                        <tree noteditable="1">
                            <field name="code"/>
                            <field name="name"/>
                        </tree>
                    </field>
                    <field name="fiscalyear_id" on_change="onchange_fiscalyear_id(fiscalyear_id)"/>
                    <notebook tabpos="up" colspan="4">
                        <page string="Filters" name="filters">
                            <field name="filter" on_change="onchange_filter(filter)" colspan="4"/>
                            <separator string="Dates" colspan="4"/>
                            <field name="date_from" attrs="{'readonly': [('filter', 'not in', ('filter_date', 'filter_date_doc'))],
                                                            'required': [('filter', 'in', ('filter_date', 'filter_date_doc'))]}" colspan="4"/>
                            <field name="date_to" attrs="{'readonly': [('filter', 'not in', ('filter_date', 'filter_date_doc'))],
                                                          'required': [('filter', 'in', ('filter_date', 'filter_date_doc'))]}"  colspan="4"/>
                            <separator string="Periods"  colspan="4"/>
                            <field name="period_from"
                                   attrs="{'readonly': [('filter', '!=', 'filter_period')],
                                           'required':[('filter', '=', 'filter_period')]}" colspan="4"/>
                            <field name="period_to"
                                   attrs="{'readonly': [('filter', '!=', 'filter_period')],
                                           'required':[('filter', '=', 'filter_period')]}" colspan="4"/>
                        </page>
                    </notebook>
                    <group colspan="6" col="4">
                        <button icon="gtk-cancel" string="Cancel" special="cancel" colspan="2"/>
                        <button icon="gtk-print" string="Print" name="print_integrity_finance_report" type="object"
                                default_focus="1" colspan="2"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Entries Data Integrity - Menu Entry -->
        <record id="action_integrity_finance_report" model="ir.actions.act_window">
             <field name="name">Entries Data Integrity</field>
             <field name="res_model">integrity.finance.wizard</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="integrity_finance_wizard_view"/>
             <field name="target">new</field>
        </record>
        <menuitem
            name="Entries Data Integrity"
            action="action_integrity_finance_report"
            id="menu_integrity_finance_report"
            parent="account.menu_finance_generic_reporting"
            sequence="100"/>

    </data>
</openerp>
