<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

         <record id="account_partner_ledger_view" model="ir.ui.view">
            <field name="name">Partner Ledger</field>
            <field name="model">account.partner.ledger</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_common_report_view" />
            <field name="arch" type="xml">
            <data>
            <xpath expr="/form/label[@string='']" position="replace">
                <separator string="Partner Ledger" colspan="4"/>
                <label nolabel="1" colspan="4" string="This report is an analysis done by partner. It is a report containing one line per partner representing the cumulative credit balance."/>
            </xpath>
            <xpath expr="//field[@name='target_move']" position="after">
                <field name="result_selection" on_change="onchange_result_selection_or_tax(result_selection, tax)"/>
                <field name="reconciled"/>
                <field name="page_split"/>
                <field name="tax" on_change="onchange_result_selection_or_tax(result_selection, tax)"/>
                <field name="only_active_partners"/>
                <field name="instance_ids" domain="[('instance_to_display_ids','=',True)]">
                    <tree noteditable="1">
                        <field name="code"/>
                        <field name="name"/>
                    </tree>
                </field>
                <field name="partner_ids"
                       domain="['&amp;', '|', ('supplier', '=', True), ('customer', '=', True), ('name', '!=', 'To be defined')]"
                       context="{'active_test': only_active_partners}">
                    <tree noteditable="1">
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="partner_type"/>
                    </tree>
                </field>
                <field name="account_domain" invisible="1"/>
                <field name="account_ids" domain="account_domain">
                    <tree noteditable="1">
                        <field name="code"/>
                        <field name="name"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//field[@name='fiscalyear_id']" position="attributes">
                <attribute name="on_change">onchange_fiscalyear(fiscalyear_id)</attribute>
            </xpath>
            <xpath expr="//field[@name='period_from']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="//field[@name='period_to']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="//group[1]" position="replace">
                <group col="4" colspan="4">
                    <button icon="gtk-print" name="check_report" string="Print PDF" type="object" colspan="2" default_focus="1" />
                    <button icon="gtk-print" name="print_report_xls" string="Print Excel" type="object" colspan="2" />
                    <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="4"/>
                </group>
            </xpath>
            </data>
            </field>
        </record>

         <record id="action_account_partner_ledger" model="ir.actions.act_window">
             <field name="name">Partner Ledger</field>
             <field name="res_model">account.partner.ledger</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="account_partner_ledger_view"/>
             <field name="context">{'record_id':active_id}</field>
             <field name="target">new</field>
       </record>

        <menuitem icon="STOCK_PRINT"
            name="Partner Ledger"
            action="action_account_partner_ledger"
            groups="group_account_manager,group_account_user"
            id="menu_account_partner_ledger"
            parent="account.next_id_22"/>

     </data>
 </openerp>
