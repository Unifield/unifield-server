<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

         <record id="account_employee_ledger_view" model="ir.ui.view">
            <field name="name">Employee Ledger</field>
            <field name="model">account.employee.ledger</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_common_report_view" />
            <field name="arch" type="xml">
            <data>
            <xpath expr="/form/label[@string='']" position="replace">
                <separator string="Employee Ledger" colspan="4"/>
                <label nolabel="1" colspan="4" string="This report is an analysis done by employee. It is a report containing one line per employee representing the cumulative credit balance."/>
            </xpath>
            <xpath expr="//field[@name='target_move']" position="after">
                <field name="result_selection" on_change="onchange_result_selection(result_selection)"/>
                <field name="display_employee"/>
                <field name="page_split"/>
                <field name="reconciled"/>
                <field name="only_active_employees"/>
                <field name="employee_type" on_change="onchange_employee_type(employee_type)"/>
                <field name="payment_method" on_change="onchange_payment_method(payment_method)"/>
                <newline/>
                <field name="instance_ids" domain="[('instance_to_display_ids','=',True)]">
                    <tree noteditable="1">
                        <field name="code"/>
                        <field name="name"/>
                    </tree>
                </field>
                <field name="employee_ids">
                    <tree noteditable="1">
                        <field name="name_resource"/>
                        <field name="identification_id"/>
                        <field name="employee_type"/>
                    </tree>
                </field>
                <field name="account_domain" invisible="1"/>
                <field name="account_ids" domain="account_domain">
                    <tree noteditable="1">
                        <field name="code"/>
                        <field name="name"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//field[@name='fiscalyear_id']" position="attributes">
                <attribute name="on_change">onchange_fiscalyear(fiscalyear_id)</attribute>
            </xpath>
            <xpath expr="//field[@name='period_from']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="//field[@name='period_to']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="//group[1]" position="replace">
                <group col="4" colspan="4">
                    <button icon="gtk-print" name="check_report" string="Print PDF" type="object" colspan="2" default_focus="1" />
                    <button icon="gtk-print" name="print_report_xls" string="Print Excel" type="object" colspan="2" />
                    <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="4"/>
                </group>
            </xpath>
            </data>
            </field>
        </record>

         <record id="action_account_employee_ledger" model="ir.actions.act_window">
             <field name="name">Employee Ledger</field>
             <field name="res_model">account.employee.ledger</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="account_employee_ledger_view"/>
             <field name="context">{'record_id':active_id}</field>
             <field name="target">new</field>
       </record>

        <menuitem icon="STOCK_PRINT"
            name="Employee Ledger"
            action="action_account_employee_ledger"
            id="menu_account_employee_ledger"
            parent="account.employee_menu"
            sequence="1999" />

     </data>
 </openerp>
