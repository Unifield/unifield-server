<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    <!-- OCG export -->

        <record id="hq_export_ocg_view" model="ir.ui.view">
            <field name="name">Export to HQ system (OCG)</field>
            <field name="model">wizard.hq.report.ocg</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Export to HQ system">
                <field name="instance_id"
                       domain="['&amp;', ('level', '=', 'coordo'), ('instance_to_display_ids', '=', True)]"
                       on_change="onchange_instance_id()"/>
                <field name="fiscalyear_id"/>
                <field name="period_id" domain="[('fiscalyear_id', '=', fiscalyear_id),
                                                 ('state', '&lt;&gt;', 'created'),
                                                 ('number', '&lt;', 16),
                                                 ('child_mission_hq_closed', '=', [instance_id, fiscalyear_id])]"/>
                <newline/>
                <button icon="terp-camera_test" string="Export" name="button_create_report" type="object" default_focus="1"/>
            </form>
            </field>
        </record>

        <record id="action_hq_export_ocg" model="ir.actions.act_window">
            <field name="name">Export to HQ system (OCG)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.hq.report.ocg</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hq_export_ocg_view"/>
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_generic_reporting"
            action="action_hq_export_ocg"
            id="menu_action_hq_export_ocg"  sequence="10"/>

        <!-- OCG-POC -->
        <record id="action_hq_export_ocg_poc" model="ir.actions.act_window">
            <field name="name">Export to HQ system (OCG-POC)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.hq.report.ocg</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hq_export_ocg_view"/>
            <field name="context">{'ocg_poc': True}</field>
            <field name="target">new</field>
        </record>
        <menuitem parent="account.menu_finance_generic_reporting"
                  action="action_hq_export_ocg_poc"
                  id="menu_action_hq_export_ocg_poc" sequence="12"/>

    <!-- OCA export -->

        <record id="hq_export_oca_view" model="ir.ui.view">
            <field name="name">Export to HQ system (OCA)</field>
            <field name="model">wizard.hq.report.oca</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Export to HQ system">
                <field name="instance_id" domain="['&amp;', ('level', '=', 'coordo'), ('instance_to_display_ids','=',True)]"
                       on_change="onchange_instance_id()"/>
                <field name="fiscalyear_id"/>
                <field name="period_id" domain="[('child_mission_closed', '=', [instance_id, fiscalyear_id]), ('number', '&lt;', 16)]"/>
                <field name="selection"/>
                <group colspan="6" col="4">
                    <label string="" colspan="2"/>
                    <button special="cancel" string="Cancel" colspan="1" icon="gtk-cancel"/>
                    <button icon="terp-camera_test" string="Export" name="button_create_report" type="object" default_focus="1" colspan="1"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_hq_export_oca" model="ir.actions.act_window">
            <field name="name">Export to HQ system (OCA)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.hq.report.oca</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hq_export_oca_view"/>
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_generic_reporting"
            action="action_hq_export_oca"
            id="menu_action_hq_export_oca"  sequence="20"/>

    <!-- OCB export -->

        <record id="ocb_export_wizard" model="ir.ui.view">
            <field name="name">Export to HQ system (OCB)</field>
            <field name="model">ocb.export.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Export to HQ system">
                <field name="instance_id" domain="['&amp;', ('level', 'in', ['coordo','section']), ('instance_to_display_ids','=',True)]"/>
                <field name="fiscalyear_id"/>
                <field name="period_id" domain="[('fiscalyear_id', '=', fiscalyear_id), ('number', '&lt;', 16)]"/>
                <field name="selection"/>
                <group colspan="6" col="4">
                    <label string="" colspan="2"/>
                    <button special="cancel" string="Cancel" colspan="1" icon="gtk-cancel"/>
                    <button icon="terp-camera_test" string="Export" name="button_export" type="object" default_focus="1" colspan="1"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_hq_export_ocb" model="ir.actions.act_window">
            <field name="name">Export to HQ system (OCB)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ocb.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ocb_export_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_generic_reporting"
            action="action_hq_export_ocb"
            id="menu_action_hq_export_ocb"  sequence="30"/>

    <!-- OCB-New export -->
        <record id="ocb_export_wizard_new" model="ir.ui.view">
            <field name="name">Export to HQ system (OCB-New)</field>
            <field name="model">ocb.export.wizard</field>
	    <field name="type">form</field>
            <field name="priority" eval="20" />
            <field name="arch" type="xml">
            <form string="Export to HQ system (OCB-New)">
                <field name="instance_id" domain="['&amp;', ('level', 'in', ['coordo','section']), ('instance_to_display_ids','=',True)]" on_change="onchange_instance_id()"/>
                <field name="fiscalyear_id"/>
                <field name="period_id" domain="[('child_mission_hq_closed', '=', [instance_id, fiscalyear_id]), ('number', '&lt;', 16)]"/>
                <field name="selection"/>
                <group colspan="6" col="4">
                    <label string="" colspan="2"/>
                    <button special="cancel" string="Cancel" colspan="1" icon="gtk-cancel"/>
                    <button icon="terp-camera_test" string="Export" name="button_export" type="object" default_focus="1" colspan="1"/>
                </group>
            </form>
            </field>
        </record>


        <record id="action_hq_export_ocb_new" model="ir.actions.act_window">
            <field name="name">Export to HQ system (OCB-New)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ocb.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ocb_export_wizard_new"/>
            <field name="context">{'poc_export': True}</field>
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_generic_reporting"
            action="action_hq_export_ocb_new"
            id="menu_action_hq_export_ocb_new"  sequence="50"/>

    <!-- OCP export -->

        <record id="ocp_export_wizard" model="ir.ui.view">
            <field name="name">Export to HQ system (OCP)</field>
            <field name="model">ocp.export.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Export to HQ system">
                <field name="warning_db_name"/>
                <group colspan="6" col="2">
                    <html>
                        <p id="label_warning_db_name"
                           style="text-align: center; color: red; font-weight: bold; font-size: 1.1em; display: none">
                            <translate>The database name is not OCP_HQ. This will impact the DB ID column.</translate>
                        </p>
                        <script language="javascript">
                            var warning_db_name = $('#warning_db_name').val() || $('#warning_db_name').text();
                            if (warning_db_name) {
                                $('#label_warning_db_name').show();
                            }
                        </script>
                    </html>
                </group>
                <field name="instance_id"
                       domain="['&amp;', ('level', '=', 'coordo'), ('instance_to_display_ids', '=', True)]"
                       on_change="onchange_instance_id(instance_id)"
                       attrs="{'required': [('all_missions', '=', False)]}"
                />
                <field name="fiscalyear_id"/>
                <field name="all_missions"
                       string="or All Missions"
                       on_change="onchange_all_missions(all_missions)"
                />
                <field name="period_id"
                       domain="[('period_visible', '=', [fiscalyear_id, instance_id, all_missions])]"
                 />
                <group colspan="6" col="4">
                    <label string="" colspan="2"/>
                    <button special="cancel" string="Cancel" colspan="1" icon="gtk-cancel"/>
                    <button icon="terp-camera_test" string="Export" name="button_ocp_export_to_hq" type="object" default_focus="1" colspan="1"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_hq_export_ocp" model="ir.actions.act_window">
            <field name="name">Export to HQ system (OCP)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ocp.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ocp_export_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_generic_reporting"
            action="action_hq_export_ocp"
            id="menu_action_hq_export_ocp" sequence="60"/>

    <!-- OCP matching export -->

        <record id="ocp_matching_export_wizard" model="ir.ui.view">
            <field name="name">OCP matching export</field>
            <field name="model">ocp.matching.export.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="OCP matching export">
                <field name="instance_id" domain="['&amp;', ('level', '=', 'coordo'), ('instance_to_display_ids','=',True)]"/>
                <field name="fiscalyear_id"/>
                <field name="period_id" domain="[('fiscalyear_id', '=', fiscalyear_id), ('state', '&lt;&gt;', 'created'), ('number', '&lt;', 16)]"/>
                <newline/>
                <group colspan="6" col="4">
                    <label string="" colspan="2"/>
                    <button special="cancel" string="Cancel" colspan="1" icon="gtk-cancel"/>
                    <button icon="terp-camera_test" string="Export" name="button_ocp_matching_export" type="object" default_focus="1" colspan="1"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_hq_ocp_matching_export" model="ir.actions.act_window">
            <field name="name">OCP matching export</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ocp.matching.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ocp_matching_export_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_generic_reporting"
            action="action_hq_ocp_matching_export"
            id="menu_action_hq_ocp_matching_export" sequence="70"/>

        <!-- OCB matching export BASED ON OCP MATCHING EXPORT -->
        <record id="action_hq_ocb_matching_export" model="ir.actions.act_window">
            <field name="name">OCB matching export</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ocp.matching.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ocp_matching_export_wizard"/>
            <field name="context">{'ocb_matching': True}</field>
            <field name="target">new</field>
        </record>
        <menuitem parent="account.menu_finance_generic_reporting"
                  action="action_hq_ocb_matching_export"
                  id="menu_action_hq_ocb_matching_export" sequence="40"/>

        <record id="action_hq_ocb_matching_export_new" model="ir.actions.act_window">
            <field name="name">OCB matching export (new)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ocp.matching.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ocp_matching_export_wizard"/>
            <field name="context">{'ocb_matching': True, 'poc_export': True}</field>
            <field name="target">new</field>
        </record>
        <menuitem parent="account.menu_finance_generic_reporting"
                  action="action_hq_ocb_matching_export_new"
                  id="menu_action_hq_ocb_matching_export_new" sequence="53"/>

    </data>
</openerp>
