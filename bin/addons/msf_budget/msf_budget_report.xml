<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- see msf_budget/wizard/wizard_budget_criteria_export.py for real filename -->
        <report id="budget_criteria_2"
        string="Budget vs. Actuals"
        model="msf.budget"
        name="budget.criteria.2"
        target_filename="Budget vs. Actual_${code}_%(year)s%(month)s%(day)s"
        file="msf_budget/report/budget_criteria_xls.mako"
        report_type="webkit"
        header="False"
        auto="False"
        menu="False"/>

        <report id="xls_budget_monthly"
        string="Monthly Budget (XLS)"
        model="msf.budget"
        name="xls.budget.monthly"
        target_filename="Monthly_Budget_${code}_${decision_moment_id}_${version}"
        file="msf_budget/report/monthly_budget.mako"
        report_type="webkit"
        header="False"
        auto="False"
        menu="False"/>

        <report id="pdf_budget_monthly"
        string="Monthly Budget (PDF)"
        model="msf.budget"
        name="msf.pdf.budget.monthly"
        target_filename="Monthly_Budget_${code}_${decision_moment_id}_${version}"
        rml="msf_budget/report/monthly_budget.rml"
        auto="False"
        menu="False"/>

        <!-- see 'report/report_pdf_budget_summary.py' for real filename -->
        <report id="pdf_budget_summary"
        string="Budget Summary"
        model="msf.budget"
        name="msf.pdf.budget.summary"
        target_filename="Budget_Summary_${code}_%(year)s%(month)s%(day)s"
        rml="msf_budget/report/budget_summary.rml"
        auto="False"
        menu="False"/>

        <report id="report_local_expenses_xls"
        string="Local Expenses"
        model="account.analytic.line"
        name="local.expenses"
        target_filename="Local Expenses_%(instance_code)s_%(year)s%(month)s%(day)s"
        file="msf_budget/report/report_local_expenses_xls.mako"
        report_type="webkit"
        header="False"
        auto="False"
        menu="False"/>

        <!-- Order Impact vs. Budget report PDF declaration -->
        <report id="pdf_engagement"
        string="Order impact vs. Budget"
        model="purchase.order"
        name="msf.pdf.engagement"
        target_filename="Order Impact vs. Budget_${name}_%(year)s%(month)s%(day)s"
        rml="msf_budget/report/engagement.rml"
        auto="False"
        menu="False"/>

        <!-- Order Impact vs. Budget report XLS declaration -->
        <report id="order_impact_vs_budget_xls"
                string="Order Impact vs. Budget"
                model="purchase.order"
                name="order.impact.vs.budget.xls"
                file="msf_budget/report/order_impact_vs_budget.mako"
                report_type="webkit"
                header="False"
                auto="False"
                menu="False"/>

        <report id="budget_actual"
        string="Actuals by CC"
        model="msf.budget"
        name="msf.budget.actual"
        target_filename="Actuals by CC_${code}_%(year)s%(month)s%(day)s"
        report_type="txt"
        auto="False"
        menu="False"/>

        <!-- Order Impact vs. Budget report menu -->
        <record id="action_order_impact_vs_budget_menu" model="ir.actions.act_window">
            <field name="name">Order Impact vs. Budget</field>
            <field name="res_model">wizard.order.impact.vs.budget</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record model="ir.values" id="action_order_impact_vs_budget_values">
            <field name="object" eval="1" />
            <field name="name">order.impact.vs.budget</field>
            <field name="key2">client_print_multi</field>
            <field name="view_ids" ref="purchase.purchase_order_form,purchase.purchase_order_tree" />
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_order_impact_vs_budget_menu'))" />
            <field name="key">action</field>
            <field name="model">purchase.order</field>
            <field name="sequence" eval="105"/>
        </record>

        <!-- Order Impact vs. Budget report Wizard -->
        <record id="wizard_order_impact_vs_budget_view" model="ir.ui.view">
            <field name="name">Order Impact vs. Budget</field>
            <field name="model">wizard.order.impact.vs.budget</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="4">
                        <field colspan="4" name="export_type"/>
                        <button colspan="2" string="Cancel" icon='gtk-cancel' special="cancel"/>
                        <button colspan="2" name="button_order_impact_vs_budget_report" string="Print" type="object" icon="gtk-print"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>

