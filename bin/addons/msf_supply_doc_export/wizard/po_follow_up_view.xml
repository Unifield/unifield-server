<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!--  PO Follow up wizard form -->
	<record id="po_follow_up_view" model="ir.ui.view">
		<field name="name">po.follow.up.view</field>
		<field name="model">po.follow.up</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Export PO Follow-up" hide_edit_button="1" hide_save_button="1" hide_cancel_button="1">
				<group colspan="2">
					<field name="po_id" domain="[('rfq_ok', '=', False)]" />
					<field name="po_date_from" />  <!-- need to do from / though on dates  -->
					<field name="partner_id" />
					<field name="po_date_thru" />
					<field name="project_ref" />
				</group>

				<separator string="Order statuses" colspan="4" />
				<group>
					<field name="draft_ok" colspan="4" />
					<field name="validated_ok" colspan="4" />
					<field name="sourced_ok" colspan="4" />
					<field name="confirmed_ok" colspan="4" />
					<field name="closed_ok" colspan="4" />
					<field name="cancel_ok" colspan="4" />
				</group>

				<separator string="Report parameters" colspan="4" />
				<group>
					<field name="pending_only_ok" colspan="2" />
					<field name="include_notes_ok" colspan="2" />
				</group>
				
				<separator string="Actions" />
				<group colspan="2">
					<button name="excel_report" type="object" string="Excel report" icon="gtk-ok"/>
					<button name="pdf_report" type="object" string="PDF report" icon="gtk-ok"/>
				</group>
			</form>
		</field>
	</record>
	    </data>
</openerp>
