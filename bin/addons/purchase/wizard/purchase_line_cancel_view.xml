<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_line_cancel_form_view" model="ir.ui.view">
            <field name="name">Cancel PO line</field>
            <field name="model">purchase.order.line.cancel.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Cancel Purchase Order line">
                    <field name="linked_sol_id" invisible="1"/>
                    <group colspan="4" col="1">
                        <html>
                            <h3 style="text-align: center; margin: 13px"><translate>Please confirm cancelation of selected line.</translate></h3>
                        </html>
                    </group>
                    <group colspan="4" col="1" attrs="{'invisible': [('linked_sol_id', '=', False)]}">
                        <html>
                            <h3 style="text-align: center; margin: 13px"><translate>If you click on 'Cancel &amp; Resource' button, all linked FO/IR lines will be re-sourced.</translate></h3>
                        </html>
                    </group>
                    <newline />
                    <separator string="Actions" />
                    <button name="cancel_only_pol" string="Cancel only" type="object" icon="gtk-cancel" colspan="2" />
                    <button name="cancel_and_resource" string="Cancel &amp; Resource" type="object" icon="gtk-cancel" colspan="2" attrs="{'invisible': [('linked_sol_id', '=', False)]}"/>
                </form>
            </field>
        </record>  
    </data>
</openerp>  
        
