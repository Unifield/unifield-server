<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_purchase_order_line" model="workflow">
            <field name="name">purchase.order.line.basic</field>
            <field name="osv">purchase.order.line</field>
            <field name="on_create">True</field>
        </record>

        <!-- ############## Activity ############## -->

        <record id="act_pol_draft" model="workflow.activity">
            <field name="name">draft</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="flow_start">True</field>
        </record>
        <record id="act_pol_validated_p" model="workflow.activity">
            <field name="name">validated_p</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_validated_p()</field>
        </record>
        <record id="act_pol_validated" model="workflow.activity">
            <field name="name">validated</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_validate()</field>
        </record>
        <record id="act_pol_confirmed" model="workflow.activity">
            <field name="name">confirmed</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_confirmed()</field>
        </record>
        <record id="act_pol_cancel" model="workflow.activity">
            <field name="name">cancel</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="flow_stop">True</field>
        </record>
        <record id="act_pol_done" model="workflow.activity">
            <field name="name">done</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="flow_stop">True</field>
        </record>


        <!-- ############## Transitions ############## -->

        <!-- specific transitions for validated-p lines -->
            <record id="trans_pol_draft_validated_p" model="workflow.transition">
                <field name="act_from" ref="act_pol_draft"/>
                <field name="act_to" ref="act_pol_validated_p"/>
                <field name="condition">created_when_po_validated == True</field>
            </record>
            <record id="trans_pol_validated_p_to_confirmed" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated_p"/>
                <field name="act_to" ref="act_pol_confirmed"/>
                <field name="signal">confirmed</field>
            </record>
        <!-- end validated-p -->
        
        <record id="trans_pol_draft_validated" model="workflow.transition">
            <field name="act_from" ref="act_pol_draft"/>
            <field name="act_to" ref="act_pol_validated"/>
            <field name="signal">validated</field>
        </record>
        <record id="trans_pol_validated_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_pol_validated"/>
            <field name="act_to" ref="act_pol_confirmed"/>
            <field name="signal">confirmed</field>
        </record>
        <record id="trans_pol_confirmed_done" model="workflow.transition">
            <field name="act_from" ref="act_pol_confirmed"/>
            <field name="act_to" ref="act_pol_done"/>
            <field name="signal">done</field>
        </record>
        <record id="trans_pol_daft_cancel" model="workflow.transition">
            <field name="act_from" ref="act_pol_draft"/>
            <field name="act_to" ref="act_pol_cancel"/>
            <field name="signal">cancel</field>
        </record>

    </data>
</openerp>