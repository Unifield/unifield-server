<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_purchase_order_line" model="workflow">
            <field name="name">purchase.order.line.basic</field>
            <field name="osv">purchase.order.line</field>
            <field name="on_create">True</field>
        </record>

        <!-- ############## Activity ############## -->

        <record id="act_pol_draft" model="workflow.activity">
            <field name="name">draft</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="flow_start">True</field>
            <field name="kind">function</field>
            <field name="action">set_sync_order_line_db_id()</field>
        </record>
        <record id="act_pol_validated_n" model="workflow.activity">
            <field name="name">validated_n</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_validated_n()</field>
        </record>
        <record id="act_pol_validated" model="workflow.activity">
            <field name="name">validated</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_validate()</field>
        </record>
        <record id="act_pol_sourced_sy" model="workflow.activity">
            <field name="name">sourced_sy</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_sourced_sy()</field>
        </record>
        <record id="act_pol_sourced_v" model="workflow.activity">
            <field name="name">sourced_v</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_sourced_v()</field>
        </record>
        <record id="act_pol_sourced_n" model="workflow.activity">
            <field name="name">sourced_n</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_sourced_n()</field>
        </record>
        <record id="act_pol_confirmed" model="workflow.activity">
            <field name="name">confirmed</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_confirmed()</field>
        </record>
        <record id="act_pol_cancel" model="workflow.activity">
            <field name="name">cancel</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_cancel()</field>
            <field name="flow_stop">True</field>
        </record>
        <record id="act_pol_cancel_r" model="workflow.activity">
            <field name="name">cancel_r</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_cancel_r()</field>
            <field name="flow_stop">True</field>
        </record>
        <record id="act_pol_done" model="workflow.activity">
            <field name="name">done</field>
            <field name="wkf_id" ref="wkf_purchase_order_line"/>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
            <field name="flow_stop">True</field>
        </record>



        <!-- ############## Transitions ############## -->

        <record id="trans_pol_draft_validated" model="workflow.transition">
            <field name="act_from" ref="act_pol_draft"/>
            <field name="act_to" ref="act_pol_validated"/>
            <field name="sequence" eval="10" />
            <field name="signal">validated</field>
        </record>

        <!-- specific transitions for validated-n lines -->
            <record id="trans_pol_draft_validated_n" model="workflow.transition">
                <field name="act_from" ref="act_pol_draft"/>
                <field name="act_to" ref="act_pol_validated_n"/>
                <field name="sequence" eval="20" />
                <field name="condition">set_as_validated_n == True</field>
            </record>
            <record id="trans_pol_validated_n_to_confirmed" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated_n"/>
                <field name="act_to" ref="act_pol_validated"/>
                <field name="sequence" eval="10" />
                <field name="signal">validated</field>
            </record>
            <record id="trans_pol_validated_validated" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated"/>
                <field name="act_to" ref="act_pol_validated"/>
                <field name="sequence" eval="11" />
                <field name="signal">validated</field>
            </record>
        <!-- end validated-n -->

        <!-- specific transitions for sourced-XXX -->
            <record id="trans_pol_validated_sourced_sy" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated"/>
                <field name="act_to" ref="act_pol_sourced_sy"/>
                <field name="sequence" eval="10" />
                <field name="signal">sourced_sy</field>
            </record>
            <record id="trans_pol_validated_sourced_v" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated"/>
                <field name="act_to" ref="act_pol_sourced_v"/>
                <field name="sequence" eval="20" />
                <field name="signal">sourced_v</field>
            </record>
            <record id="trans_pol_sourced_sy_sourced_v" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_sy"/>
                <field name="act_to" ref="act_pol_sourced_v"/>
                <field name="sequence" eval="10" />
                <field name="signal">sourced_v</field>
            </record>
            <record id="trans_pol_sourced_sy_confirmed" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_sy"/>
                <field name="act_to" ref="act_pol_confirmed"/>
                <field name="sequence" eval="20" />
                <field name="signal">confirmed</field>
            </record>
            <record id="trans_pol_sourced_v_confirmed" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_v"/>
                <field name="act_to" ref="act_pol_confirmed"/>
                <field name="sequence" eval="10" />
                <field name="signal">confirmed</field>
            </record>
        <!-- end sourced-XXX -->

        <!-- specific transitions for sourced-n lines -->
            <record id="trans_pol_draft_sourced_n" model="workflow.transition">
                <field name="act_from" ref="act_pol_draft"/>
                <field name="act_to" ref="act_pol_sourced_n"/>
                <field name="sequence" eval="30" />
                <field name="condition">set_as_sourced_n == True</field>
            </record>
            <record id="trans_pol_draft_sourced_sy" model="workflow.transition">
                <field name="act_from" ref="act_pol_draft"/>
                <field name="act_to" ref="act_pol_sourced_sy"/>
                <field name="sequence" eval="35" />
                <field name="signal">sourced_sy</field>
            </record>
            <record id="trans_pol_sourced_n_confirmed" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_n"/>
                <field name="act_to" ref="act_pol_confirmed"/>
                <field name="sequence" eval="10" />
                <field name="signal">confirmed</field>
            </record>
            <record id="trans_pol_sourced_n_validated" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_n"/>
                <field name="act_to" ref="act_pol_validated"/>
                <field name="sequence" eval="20" />
                <field name="signal">validated</field>
            </record>
        <!-- end sourced-n -->

        <record id="trans_pol_validated_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_pol_validated"/>
            <field name="act_to" ref="act_pol_confirmed"/>
            <field name="sequence" eval="30" />
            <field name="signal">confirmed</field>
        </record>
        <record id="trans_pol_validated_n_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_pol_validated_n"/>
            <field name="act_to" ref="act_pol_confirmed"/>
            <field name="sequence" eval="20" />
            <field name="signal">confirmed</field>
        </record>
        <record id="trans_pol_confirmed_done" model="workflow.transition">
            <field name="act_from" ref="act_pol_confirmed"/>
            <field name="act_to" ref="act_pol_done"/>
            <field name="sequence" eval="10" />
            <field name="signal">done</field>
        </record>

        <!-- transition cancel -->
            <record id="trans_pol_draft_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_draft"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="40" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_validated_n_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated_n"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="30" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_validated_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="40" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_sourced_sy_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_sy"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="30" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_sourced_v_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_v"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="20" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_sourced_n_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_n"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="30" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_confirmed_cancel" model="workflow.transition">
                <field name="act_from" ref="act_pol_confirmed"/>
                <field name="act_to" ref="act_pol_cancel"/>
                <field name="sequence" eval="20" />
                <field name="signal">cancel</field>
            </record>
            <record id="trans_pol_draft_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_draft"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="50" />
                <field name="signal">cancel_r</field>
            </record>
            <record id="trans_pol_validated_n_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated_n"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="40" />
                <field name="signal">cancel_r</field>
            </record>
            <record id="trans_pol_validated_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_validated"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="50" />
                <field name="signal">cancel_r</field>
            </record>
            <record id="trans_pol_sourced_sy_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_sy"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="40" />
                <field name="signal">cancel_r</field>
            </record>
            <record id="trans_pol_sourced_v_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_v"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="30" />
                <field name="signal">cancel_r</field>
            </record>
            <record id="trans_pol_sourced_n_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_sourced_n"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="40" />
                <field name="signal">cancel_r</field>
            </record>
            <record id="trans_pol_confirmed_cancel_r" model="workflow.transition">
                <field name="act_from" ref="act_pol_confirmed"/>
                <field name="act_to" ref="act_pol_cancel_r"/>
                <field name="sequence" eval="30" />
                <field name="signal">cancel_r</field>
            </record>
        <!-- end cancel -->

    </data>
</openerp>
