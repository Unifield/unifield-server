<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_sale" model="workflow">
            <field name="name">sale.order.basic</field>
            <field name="osv">sale.order</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activity -->
        <record id="act_so_draft" model="workflow.activity">
            <field name="name">draft</field>
            <field name="wkf_id" ref="wkf_sale"/>
            <field name="flow_start">True</field>
        </record>
        <record id="act_so_validated" model="workflow.activity">
            <field name="name">validated</field>
            <field name="wkf_id" ref="wkf_sale"/>
        </record>
        <record id="act_so_sourced" model="workflow.activity">
            <field name="name">sourced</field>
            <field name="wkf_id" ref="wkf_sale"/>
        </record>
        <record id="act_so_confirmed" model="workflow.activity">
            <field name="name">confirmed</field>
            <field name="wkf_id" ref="wkf_sale"/>
        </record>
        <record id="act_so_cancel" model="workflow.activity">
            <field name="name">cancel</field>
            <field name="wkf_id" ref="wkf_sale"/>
            <field name="flow_stop">True</field>
        </record>
        <record id="act_so_done" model="workflow.activity">
            <field name="name">done</field>
            <field name="wkf_id" ref="wkf_sale"/>
            <field name="flow_stop">True</field>
        </record>

        <!-- Transitions -->
        <record id="trans_so_draft_validated" model="workflow.transition">
            <field name="act_from" ref="act_so_draft"/>
            <field name="act_to" ref="act_so_validated"/>
            <field name="condition">test_validated()</field>
        </record>
        <record id="trans_so_validated_sourced" model="workflow.transition">
            <field name="act_from" ref="act_so_validated"/>
            <field name="act_to" ref="act_so_sourced"/>
            <field name="condition">test_sourced()</field>
        </record>
        <record id="trans_so_sourced_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_so_sourced"/>
            <field name="act_to" ref="act_so_confirmed"/>
            <field name="condition">test_confirmed()</field>
        </record>
        <record id="trans_so_confirmed_done" model="workflow.transition">
            <field name="act_from" ref="act_so_confirmed"/>
            <field name="act_to" ref="act_so_done"/>
            <field name="condition">test_done()</field>
        </record>
        <record id="trans_so_daft_cancel" model="workflow.transition">
            <field name="act_from" ref="act_so_draft"/>
            <field name="act_to" ref="act_so_cancel"/>
            <field name="condition">test_cancel()</field>
        </record>
    </data>
</openerp>