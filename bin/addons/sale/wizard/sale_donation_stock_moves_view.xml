<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_donation_stock_moves_form_view" model="ir.ui.view">
            <field name="name">sale.donation.stock.moves.form.view</field>
            <field name="model">sale.donation.stock.moves</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Donation Report">
                    <separator colspan="4" string="Request parameters" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="partner_id" on_change="donation_report_onchange(partner_id, move_id, display_bn_ed)" />
                    <field name="partner_type" />
                    <field name="product_id" />
                    <field name="nomen_manda_0" domain="[('level', '=', '0'), ('type', '=', 'mandatory')]" widget="selection"/>
                    <field name="move_id" domain="[('reason_type_id.name', 'in', ['In-Kind Donation', 'Donation before expiry', 'Donation (standard)']),('state', '=', 'done'),
                        '|', ('type', '=', 'in'), '&amp;', ('location_id.usage', '=', 'internal'), ('location_dest_id.usage', 'in', ['customer', 'supplier'])]" />
                    <separator colspan="4" string="Report parameters" />
                    <field name="display_bn_ed" on_change="donation_report_onchange(partner_id, move_id, display_bn_ed)" />
                    <separator colspan="4" string="Actions" />
                    <button name="print_excel" string="Excel report" icon="gtk-print" type="object" colspan="4" />
                </form>
            </field>
        </record>

        <record id="action_sale_donation_stock_moves" model="ir.actions.act_window">
            <field name="name">Donation Report</field>
            <field name="res_model">sale.donation.stock.moves</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_sale_donation_stock_moves" action="action_sale_donation_stock_moves" sequence="2"
            parent="base.next_id_64"/>
    </data>
</openerp>
