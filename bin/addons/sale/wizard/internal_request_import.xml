<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="internal_request_import_form_view" model="ir.ui.view">
            <field name="name">internal.request.import.form.view</field>
            <field name="model">internal.request.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="IR Import - Simulation Screen">
                    <separator colspan="4" string="Internal Request Information" />
                    <group colspan="4" name="file" string="Import data">
                        <field name="file_to_import" filename="filename" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="filename" invisible="1" />
                        <field name="error_file" filename="error_filename" readonly="1"
                               attrs="{'invisible': [('import_error_ok', '!=', False), ('state', '!=', 'done')]}" />
                        <field name="error_filename" invisible="1" />
                        <field name="import_error_ok" invisible="1" />
                        <field name="state" />
                        <field name="no_prod_as_comment" />
                        <field name="nb_treated_lines" attrs="{'invisible': [('state', '=', 'draft')]}" />
                        <field name="percent_completed" widget="progressbar" attrs="{'invisible': [('state', '=', 'draft')]}" />
                    </group>
                    <group name="buttons" colspan="4" col="6">
                        <button name="reset_import" string="Reset the import" icon="gtk-refresh" type="object" />
                        <button name="go_to_ir" string="Return to IR" icon="gtk-jump-to" type="object"
                                attrs="{'invisible': [('order_id', '=', False)]}" />
                        <button name="launch_simulate" string="Simulate" icon="gtk-execute" type="object" states="draft" />
                        <button name="launch_import" string="Import" icon="gtk-execute" type="object" states="simu_done" />
                        <button name="go_to_simulation" string="Update" icon="gtk-execute" type="object"
                                states="simu_progress,import_progress" />
                    </group>
                    <notebook colspan="4">
                        <page string="Errors" attrs="{'invisible': [('import_error_ok', '=', False), ('state', '!=', 'error')]}">
                            <field name="message" nolabel="1" colspan="4" readonly="1" widget="full_text" />
                        </page>
                        <page string="Internal Request">
                            <field name="order_id" invisible="1" />
                            <label> </label>
                            <separator colspan="1" string="Original values" />
                            <separator colspan="1" string="Imported values" />
                            <field name="in_order_name" />
                            <field name="imp_order_name" nolabel="1" />
                            <label> </label>
                            <field name="in_categ" />
                            <field name="imp_categ" nolabel="1" />
                            <label> </label>
                            <field name="in_priority" />
                            <field name="imp_priority" nolabel="1" />
                            <label> </label>
                            <field name="in_requested_date" />
                            <field name="imp_requested_date" nolabel="1" />
                            <label> </label>
                            <field name="in_requestor" />
                            <field name="imp_requestor" nolabel="1" />
                            <label> </label>
                            <field name="in_loc_requestor" />
                            <field name="imp_loc_requestor" nolabel="1" />
                            <label> </label>
                            <field name="in_origin" />
                            <field name="imp_origin" nolabel="1" />
                        </page>
                        <page string="Details">
                            <field name="imp_line_ids" nolabel="1" colspan="4">
                                <tree string="Lines" colors="red: error_msg not in ['', False]" >
                                    <field name="in_line_number" />
                                    <field name="in_product_id" />
                                    <field name="in_qty" />
                                    <field name="in_cost_price" />
                                    <field name="in_uom" />
                                    <field name="in_comment" />
                                    <field name="error_msg" invisible="1" />
                                    <button name="get_error_msg" type="object" icon="gtk-dialog-warning" string="See error" attrs="{'invisible': [('error_msg', '=', '')]}" />
                                    <field name="imp_line_number" />
                                    <field name="imp_product_id" />
                                    <field name="imp_qty" />
                                    <field name="imp_cost_price" />
                                    <field name="imp_uom_id" />
                                    <field name="imp_comment" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="menu_ir_import_action" model="ir.actions.act_window">
            <field name="name">Internal Request Import</field>
            <field name="res_model">internal.request.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>

        <menuitem id="menu_order_import" name="Order Import" parent="base.menu_base_partner" sequence="13"/>
        <menuitem action="menu_ir_import_action" id="menu_ir_import" parent="menu_order_import" sequence="1" />
    </data>
</openerp>