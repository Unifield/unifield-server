<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wizard_reserved_products_form_view" model="ir.ui.view">
            <field name="name">reserved.products.wizard.form.view</field>
            <field name="model">reserved.products.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reserved Products Export">
                    <separator colspan="4" string="Filters" />
                    <field name="location_id" colspan="2" />
                    <field name="product_id" colspan="2" />
                    <separator colspan="4" string="Actions" />
                    <button name="export_reserved_products_report_xls" string="Export Reserved Products XML Report" icon="gtk-execute" colspan="2" type="object" />
                </form>
            </field>
        </record>

        <record id="stock.reserved_products_export_action" model="ir.actions.act_window">
            <field name="name">Reserved Products</field>
            <field name="res_model">reserved.products.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
