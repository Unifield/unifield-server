<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>

        <record id="stock_reception_wizard_form_view" model="ir.ui.view">
            <field name="name">stock.reception.wizard.form.view</field>
            <field name="model">stock.reception.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Receptions Report">
                    <separator colspan="4" string="Request parameters" />
                    <field name="company_id" invisible="1"/>
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="reason_type_id" widget="selection" domain="[('incoming_ok', '=', True)]" />
                    <field name="partner_id" />
                    <field name="order_category" />
                    <field name="order_type" />
                    <field name="nomen_manda_0" domain="[('level', '=', '0'), ('type', '=', 'mandatory')]" widget="selection"/>
                    <field name="location_dest_id"  />
                    <field name="final_dest_id" attrs="{'readonly': [('final_partner_id', '!=', False)]}" on_change="onchange_final_dest_id(final_dest_id)" />
                    <field name="final_partner_id" attrs="{'readonly': [('final_dest_id', '!=', False)]}" on_change="onchange_final_partner_id(final_partner_id)" />
                    <separator colspan="4" string="Actions" />
                    <button name="print_excel" string="Excel report" icon="gtk-print" type="object" colspan="4" />
                </form>
            </field>
        </record>

        <record id="action_stock_reception_wizard" model="ir.actions.act_window">
            <field name="name">Receptions Report</field>
            <field name="res_model">stock.reception.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_stock_reception_wizard"
            action="action_stock_reception_wizard"
            parent="stock.next_id_61"
            sequence="7"
            />

    </data>

</openerp>
