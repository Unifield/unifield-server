<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_invoice_onshipping" model="ir.ui.view">
            <field name="name">Stock Invoice Onshipping</field>
            <field name="model">stock.invoice.onshipping</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
              <form string="Create invoice">
                    <separator colspan="4" string="Create invoice" />
                    <field name="journal_id"/>
                    <newline/>
                    <field name="group"/>
                    <newline/>
                    <field name="invoice_date" />
                    <separator string="" colspan="4" />
                    <button special="cancel" string="_Cancel" icon='gtk-cancel'/>
                    <button name="open_invoice" string="Create" type="object" icon="terp-gtk-go-back-rtl"/>
             </form>
            </field>
        </record>

        <!-- circular ref, juste create 2 empty views -->
        <record id="stock.view_picking_in_tree" model="ir.ui.view" />
        <record id="stock.view_picking_in_form" model="ir.ui.view">
            <field name="priority" eval="50"/>
        </record>

        <act_window name="Create invoice"
            res_model="stock.invoice.onshipping"
            src_model="stock.picking"
            key2="client_action_multi"
            multi="True"
            view_mode="form"
            view_type="form"
            target="new"
            id="action_stock_invoice_onshipping"
            view_ids="stock.view_picking_in_tree,stock.view_picking_in_form"
            />
    </data>
</openerp>
