<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_inventory_select_products" model="ir.ui.view">
            <field name="name">Select Products</field>
            <field name="model">stock.inventory.select.products</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select Products">
                    <group col="2">
                        <field name="first_filter" colspan="2" />
                        <field name="recent_moves_months" attrs="{'invisible':[('first_filter','!=','recent_moves')]}" colspan="2"/>
                        <newline/>
                        <field name="second_filter" colspan="2"/>
                        <field name="product_list" colspan="2"/>
                        <newline/>
                        <separator string="" colspan="4" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>
