<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_inventory_select_product" model="ir.ui.view">
            <field name="name">Select Products</field>
            <field name="model">stock.inventory.select.product</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select Products">
                    <separator string="Chooooooose a base filter or whatever" colspan="4" />
                    <field name="base_filter"/>
                    <newline/>
                    <separator string="" colspan="4" />
                    <button special="cancel" string="_Cancel" icon='gtk-cancel'/>
                    <button name="add" string="Add these" type="object" icon="gtk-ok"/>
                </form>
            </field>
        </record>
    </data>
</openerp>
