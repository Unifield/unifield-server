<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="stock_inventory_select_products" model="ir.ui.view">
            <field name="name">Select Products</field>
            <field name="model">stock.inventory.select.products</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select Products">
                    <field name="full_inventory" invisible="1"/>
                    <group col="4" colspan="4" attrs="{'invisible':[('full_inventory', '=', False)]}">
                        <separator string="Full inventory" />
                        <group col="1" colspan="4">
                        <html>
                            <h3 style="text-align: center; margin: 13px"><translate>This is a full inventory. All products currently in stock and all products with movements in the last X months will be added.</translate></h3>
                        </html>
                        </group>
                        <field name="recent_moves_months_fullinvo" colspan="1" attrs="{'required':[('full_inventory','=',True)]}"/>
                    </group>
                    <group col="4" colspan="4" attrs="{'invisible':[('full_inventory', '=', True)]}">
                    <separator string="Partial inventory" />
                        <group col="2" colspan="2">
                            <field name="first_filter"        attrs="{'required':[('full_inventory', '=', False)]}" />
                            <field name="recent_moves_months" attrs="{'invisible':[('first_filter','!=','recent_movements')], 
                                                                       'required':[('first_filter', '=','recent_movements')]}" colspan="2"/>
                        </group>
                        <group col="2" colspan="2">
                            <field name="second_filter" attrs="{'required':[('full_inventory', '=', False)]}"/>
                            <field name="product_list"  attrs="{'invisible':[('second_filter','!=','productlist')], 'required':[('second_filter','=','productlist')]}" />
                            <field name="kc"            attrs="{'invisible':[('second_filter','!=','specialcare')]}" />
                            <field name="cs"            attrs="{'invisible':[('second_filter','!=','specialcare')]}" />
                            <field name="dg"            attrs="{'invisible':[('second_filter','!=','specialcare')]}" />
                            <group col="2" colspan="2"  attrs="{'invisible':[('second_filter','!=','family')]   }">
                            <field name="nomen_manda_0" widget="selection" 
                                   domain="[('level', '=', '0'), ('type', '=', 'mandatory')]" 
                                   on_change="onChangeSearchNomenclature(0, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)" 
                                   attrs="{'required':[('second_filter','=','family')]}"/>
                            <field name="nomen_manda_1" widget="selection" get_selection="get_nomen" 
                                   domain="[('level', '=', '1'), ('type', '=', 'mandatory')]" 
                                   on_change="onChangeSearchNomenclature(1, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)" 
                                   />
                            <field name="nomen_manda_2" widget="selection" get_selection="get_nomen" 
                                   domain="[('level', '=', '2'), ('type', '=', 'mandatory'), ('category_id', '!=', False)]" 
                                   on_change="onChangeSearchNomenclature(2, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)" 
                                   />
                            <field name="nomen_manda_3" widget="selection" get_selection="get_nomen"
                                   domain="[('level', '=', '3'), ('type', '=', 'mandatory')]" 
                                   on_change="onChangeSearchNomenclature(3, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)" 
                                   />
                            </group>
                        </group>
                    </group>
                    <separator colspan="4" string="Preview" />
                    <button name="refresh_products_from_filters" string="Refresh" icon="gtk-refresh" colspan="4" type="object" />
                    <field colspan="4" name="products_preview" nolabel="1">
                        <tree string="Products">
                            <field name="default_code" />
                            <field name="name"         />
                            <field name="uom_id"       />
                            <field name="batch_management" string="BN mandatory" />
                            <field name="perishable"       string="ED mandatory" />
                            <field name="is_kc"            string="KC"           />
                            <field name="is_dg"            string="DG"           />
                            <field name="is_cs"            string="CS"           />
                        </tree>
                    </field>
                    <separator colspan="4" string="Actions" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel" />
                    <button name="import_products_from_filters" string="Add products" icon="terp-check" colspan="3" type="object" />
                </form>
            </field>
        </record>
    </data>
</openerp>
