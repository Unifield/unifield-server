<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="physical_inventory_generate_counting_sheet" model="ir.ui.view">
            <field name="name">Generate Counting Sheet</field>
            <field name="model">physical.inventory.generate.counting.sheet</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Generate Counting Sheet">
                    <field name="first_filter_months" invisible="1"/>
                    <field name="prefill_bn" colspan="4" on_change="onchange_prefill_bn(prefill_bn, only_with_stock_level)"/>
                    <field name="prefill_ed" colspan="4" on_change="onchange_prefill_ed(prefill_ed, only_with_stock_level)"/>
                    <field name="only_with_stock_level" colspan="4" on_change="onchange_only_with_stock_level(only_with_stock_level, only_with_pos_move)"/>
                    <field name="only_with_pos_move" colspan="2" on_change="onchange_only_with_pos_move(only_with_pos_move, only_with_stock_level)" attrs="{'readonly': ['|', '|', ('prefill_bn', '=', False), ('prefill_ed', '=', False), ('first_filter_months', '=', 0)]}"/>
                    <group colspan="2" attrs="{'invisible': [('only_with_pos_move', '=', False)]}">
                        <field name="recent_moves_months" colspan="2" attrs="{'invisible': [('multi_recent_moves_months', '!=', False)], 'required': [('only_with_pos_move', '=', True)]}"/>
                        <field name="multi_recent_moves_months" colspan="2" readonly="1" attrs="{'invisible': [('multi_recent_moves_months', '=', False)]}"/>
                    </group>
                    <button name="generate_counting_sheet" string="Generate counting sheet" icon="gtk-go-forward" colspan="4" type="object" />
                </form>
            </field>
        </record>
    </data>
</openerp>
