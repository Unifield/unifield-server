<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>

        <record id="stock_expired_damaged_wizard_form_view" model="ir.ui.view">
            <field name="name">stock.expired.damaged.wizard.form.view</field>
            <field name="model">stock.expired.damaged.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Expired/Damaged Products">
                    <separator colspan="4" string="Request parameters" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="location_id" domain="[('usage', '=', 'internal')]" />
                    <field name="location_dest_id" domain="[('usage', '!=', 'view'), '|', ('quarantine_location', '=', True), ('destruction_location', '=', True)]" />
                    <field name="nomen_manda_0" domain="[('level', '=', '0'), ('type', '=', 'mandatory')]" widget="selection"/>
                    <separator colspan="4" string="Reason Type" />
                    <group colspan="4" col="8">
                        <field name="loss_ok" />
                        <field name="loss_scrap_ok" />
                        <field name="loss_sample_ok" />
                        <field name="loss_expiry_ok" />
                        <field name="loss_damage_ok" />
                    </group>
                    <separator colspan="4" string="Actions" />
                    <button name="print_excel" string="Excel report" icon="gtk-print" type="object" colspan="4" />
                </form>
            </field>
        </record>

        <record id="action_stock_expired_damaged_wizard" model="ir.actions.act_window">
            <field name="name">Expired/Damaged Products</field>
            <field name="res_model">stock.expired.damaged.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_stock_expired_damaged_wizard"
            action="action_stock_expired_damaged_wizard"
            parent="stock.next_id_61"
            />

    </data>

</openerp>
