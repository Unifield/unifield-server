<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="product_history_consumption_form" model="ir.ui.view">
            <field name="name">product.history.consumption.form</field>
            <field name="model">product.history.consumption</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Product historical consumption">
                <field name="status" invisible="1" />
                <group colspan="2" col="2">
                    <separator colspan="2" string="Period parameters" />
                    <field name="hidden_date_from" invisible="1" />
                    <field name="date_from" on_change="date_change(date_from, date_to, consumption_type)" required="True" attrs="{'readonly': [('status', '!=', 'draft')]}" depends="hidden_date_from"/>
                        <field name="date_to" on_change="date_change(date_from, date_to, consumption_type)" required="True" attrs="{'readonly': [('status', '!=', 'draft')]}" />
                        <field name="month_ids" nolabel="1" colspan="2" attrs="{'readonly': [('status', '!=', 'draft')]}">
                        <tree string="Months" hide_new_button="1" noteditable="True" editable="top">
                            <field name="name" />
                        </tree>
                        </field>
                </group>

                <group colspan="2" col="2">
                    <separator colspan="2" string="Consumption parameters" />
                    <field name="consumption_type" on_change="onchange_consumption_type(consumption_type, date_to)" required="True" attrs="{'readonly': [('status', '!=', 'draft')]}" />
                    <field name="location_id" attrs="{'invisible': [('consumption_type', '!=', 'rac')], 'required': [('consumption_type', '=', 'rac')], 'readonly': [('status', '!=', 'draft')]}" />
                    <field name="location_dest_id" attrs="{'invisible': [('consumption_type', '!=', 'rac')], 'readonly': [('status', '!=', 'draft')]}" />
                    <group colspan="2" col="4">
                        <field name="src_location_ids" attrs="{'invisible': [('consumption_type', '!=', 'rr-amc')], 'readonly': [('status', '!=', 'draft')]}" on_change="change_location_ids(src_location_ids, dest_location_ids)" nolabel="1">
                            <tree string="Source Locations" hide_edit_button="1">
                                <field name="name" />
                                <field name="usage" />
                            </tree>
                        </field>
                        <field name="dest_location_ids" attrs="{'invisible': [('consumption_type', '!=', 'rr-amc')], 'readonly': [('status', '!=', 'draft')]}" on_change="change_dest_location_ids(dest_location_ids, ext_partner_ids)" nolabel="1">
                            <tree string="Destination Locations" hide_edit_button="1">
                                <field name="name" />
                                <field name="usage" />
                            </tree>
                        </field>
                        <field name="ext_partner_ids" attrs="{'invisible': [('consumption_type', '!=', 'rr-amc')], 'readonly': [('status', '!=', 'draft')]}" on_change="change_ext_partner_ids(dest_location_ids, ext_partner_ids)" context="{'from_history_consumption': True}" nolabel="1">
                            <tree string="External Partners" hide_edit_button="1">
                                <field name="name" />
                            </tree>
                        </field>
                    </group>
                    <group colspan="2" col="2" attrs="{'invisible': [('consumption_type', '!=', 'rr-amc')]}">
                        <html colspan="2">
                            <i><translate>The RR-AMC (Average Monthly Consumption) lets you choose one or more internal source locations, and one or more destination locations so you can view consumption based on specific locations, ECUs or External Partners.</translate></i>
                        </html>
                    </group>
                    <field name="disable_adjusted_rr_amc" invisible="1" />
                    <field name="adjusted_rr_amc"  attrs="{'invisible': [('consumption_type', '!=', 'rr-amc')], 'readonly': ['|', ('disable_adjusted_rr_amc', '=', True), ('status', '!=', 'draft')]}" />
                    <group colspan="2" col="2" attrs="{'invisible': [('consumption_type', '=', 'rac')]}">
                        <field name="remove_negative_amc" colspan="2" attrs="{'readonly': [('status', '!=', 'draft')]}" />
                        <html colspan="2">
                            <i><translate>If ticked it means that for periods/months where there are more returns (via return INs) than Outs, the standard calculation would display a negative Consumption/AMC quantity, but in this case (if ticked) the figure is set to zero.</translate></i>
                        </html>
                    </group>
                    <separator colspan="2" string="Product parameters" />
                    <field name="sublist_id" attrs="{'readonly': ['|', ('nomen_manda_0', '!=', False), ('status', '!=', 'draft')]}" />
                    <group colspan="2" col="4">
                        <field name="nomen_manda_0"
                            domain="[('level', '=', '0'), ('type', '=', 'mandatory')]"
                            widget="selection"
                            on_change="onChangeSearchNomenclature(0, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)"
                            attrs="{'readonly': [('status', '!=', 'draft')]}" 
                        />
                        <field name="nomen_manda_1"
                            domain="[('id','=', 0)]"
                            widget="selection"
                            get_selection="get_nomen"
                            on_change="onChangeSearchNomenclature(1, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)"
                            attrs="{'readonly': [('status', '!=', 'draft')]}" 
                        />
                        <field name="nomen_manda_2"
                            domain="[('id','=', 0)]"
                            widget="selection"
                            get_selection="get_nomen"
                            on_change="onChangeSearchNomenclature(2, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)"
                            attrs="{'readonly': [('status', '!=', 'draft')]}" 
                        />
                        <field name="nomen_manda_3"
                            domain="[('id','=', 0)]"
                            widget="selection"
                            get_selection="get_nomen"
                            on_change="onChangeSearchNomenclature(3, 'mandatory', nomen_manda_0, nomen_manda_1, nomen_manda_2, nomen_manda_3, False)"
                            attrs="{'readonly': [('status', '!=', 'draft')]}" 
                        />
                    </group>
                    <separator colspan="2" string="Actions" />
                    <group colspan="2" attrs="{'invisible': [('consumption_type', 'in', ['rr-amc', 'amc']), ('remove_negative_amc', '=', True)]}">
                        <button name="create_lines" type="object" string="View historical data" icon="terp-check" colspan="2" attrs="{'readonly': [('status', '=', 'in_progress')], 'invisible': [('status', '=', 'ready')]}" />
                        <button name="open_report" type="object" string="View historical data" icon="terp-check" colspan="2" attrs="{'invisible': [('status', '!=', 'ready')]}" />
                    </group>
                    <button name="report_amc_with_negative" type="object" string="Historical data report" icon="xlsx.png" colspan="2" attrs="{'invisible': ['|', ('consumption_type', '=', 'rac'), ('remove_negative_amc', '=', False)]}" />
                    <button name="report_amc_no_negative" type="object" string="Generate historical report" icon="xlsx.png" colspan="2" attrs="{'invisible': ['|', ('consumption_type', '=', 'rac'), ('remove_negative_amc', '=', True)]}" />
                </group>
                <group colspan="4" col="4" string="Error" attrs="{'invisible': [('status', '!=', 'error')]}">
                    <field name="error_msg" nolabel="1" colspan="4" />
                    <button name="reset_to_draft" type="object" string="Reset to draft" icon="gtk-go-forward" colspan="2" />
            </group>
        </form>
        </field>
    </record>

    <record id="history_consumption_waiting_view" model="ir.ui.view">
        <field name="name">history.consumption.waiting.view</field>
        <field name="model">product.history.consumption</field>
        <field name="type">form</field>
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <form string="Status of the report" hide_new_button="1" hide_delete_button="1">
                <label> </label>
                <group colspan="2" col="2">
                    <html>
                        <div style="align: center">
                            <p style="font-size:14px;align:center">
                                Your historical consumption demand will be treated quickly.<br />
                            </p>
                            <p style="font-size:14px;align:center">
                                Due to the volume of data, your history cannot be shown immediatly.<br />
                            </p>
                            <p style="font-size:14px;align:center">
                                When the report will be ready, you can access to it by the menu Warehouse / Reporting / Consumption reports / Historical consumption.<br />
                            </p>
                        </div>
                    </html>
                </group>
                <label> </label>
                <!--
                Remove the button because a click on this button waits the end of the thread to display the list of reports
                <label> </label>
                <button name="go_to_list" string="Return to the list of history consumption reports" icon="gtk-undo" type="object" colspan="2"/>
                <label> </label>-->
            </form>
        </field>
    </record>

    <record id="history_consumption_search_view" model="ir.ui.view">
        <field name="name">history.consumption.search.view</field>
        <field name="model">product.history.consumption</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Historical Consumptions">
                <field name="requestor_id" />
                <filter domain="[('requestor_id', '=', uid)]" icon="terp-personal" help="My requests" />
                <field name="requestor_date" />
            </search>
        </field>
    </record>

    <record id="history_consumption_tree_view" model="ir.ui.view">
        <field name="name">history.consumption.tree.view</field>
        <field name="model">product.history.consumption</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Historical Consumptions" noteditable="1" colors="grey:status=='in_progress';green:status=='ready';red:status=='error'">
                <field name="requestor_date" />
                <field name="requestor_id" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="consumption_type" />
                <field name="txt_source" />
                <field name="txt_destination" />
                <field name="txt_ext_partner" />
                <field name="sublist_id" />
                <field name="nomen_manda_0" />
                <field name="nomen_manda_1" />
                <field name="nomen_manda_2" />
                <field name="nomen_manda_3" />
                <field name="remove_negative_amc" />
                <field name="adjusted_rr_amc" />
                <button name="in_progress" type="object" icon="gtk-refresh" string="In Progress" attrs="{'invisible': [('status', '!=', 'in_progress')]}" />
                <button name="open_report" type="object" icon="terp-check" string="Open report" attrs="{'invisible': ['|', ('status', '!=', 'ready'), ('remove_negative_amc', '=', True)]}"/>
                <button name="report_amc_with_negative" type="object" icon="xlsx.png" string="Generate historical report" attrs="{'invisible': ['|', ('status', '!=', 'ready'), ('remove_negative_amc', '=', True)]}"/>
                <button name="report_amc_no_negative" type="object" icon="xlsx.png" string="Generate historical report" attrs="{'invisible': ['|', ('status', '!=', 'ready'), ('remove_negative_amc', '=', False)]}"/>
                <field name="fake_status" />
                <field name="status" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="action_history_consumption" model="ir.actions.act_window">
        <field name="name">History consumptions</field>
        <field name="res_model">product.history.consumption</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="target"></field>
    </record>

    <menuitem id="menu_product_history_consumption"
          action="action_history_consumption"
		  name="Historical Consumption"
		  parent="warehouse_consumption_menu" />

    <record id="product_history_consumption_tree_view" model="ir.ui.view">
        <field name="name">product.history.consumption.search.view</field>
        <field name="model">product.product</field>
        <field name="type">tree</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <tree string="Historical Consumptions" hide_delete_button="1">
                <field name="default_code" />
                <field name="name" />
            </tree>
        </field>
    </record>

