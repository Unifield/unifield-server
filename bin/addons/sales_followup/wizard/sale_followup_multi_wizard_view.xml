<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>

        <record id="sale_followup_multi_wizard_form_view" model="ir.ui.view">
            <field name="name">sale.followup.multi.wizard.form.view</field>
            <field name="model">sale.followup.multi.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Export FO Follow-up">
                    <separator colspan="4" string="Request parameters" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="partner_id" domain="[('customer', '=', True)]" on_change="partner_onchange(partner_id, order_id)" context="{'show_button_show_inactive': True}" />
                    <field name="order_id" domain="[('to_partner_id', '=', partner_id), ('procurement_request', '=', False)]" />
                    <separator colspan="4" string="Order statuses" />
                    <group colspan="4" col="8">
                        <field name="draft_ok" />
                        <field name="validated_ok" />
                        <field name="sourced_ok" />
                        <field name="confirmed_ok" />
                        <field name="closed_ok" />
                        <field name="cancel_ok" />
                    </group>
                    <separator colspan="4" string="Order categories" />
                    <group colspan="4" col="8">
                        <field name="medical_ok" />
                        <field name="logistic_ok" />
                        <field name="service_ok" />
                        <field name="transport_ok" />
                        <field name="other_ok" />
                    </group>
                    <separator colspan="4" string="Order types" />
                    <group colspan="4" col="8">
                        <field name="regular_ok" />
                        <field name="donation_prog_ok" />
                        <field name="donation_exp_ok" />
                        <field name="donation_st_ok" />
                        <field name="loan_ok" />
                        <field name="loan_return_ok" />
                    </group>
                    <separator colspan="4" string="Report parameters" />
                    <field name="msl_non_conform" />
                    <newline />
                    <field name="only_bo" />
                    <field name="include_notes_ok" />
                    <separator colspan="4" string="Actions" />
                    <button name="print_excel" string="Excel report" icon="gtk-print" type="object" colspan="2" />
                    <button name="print_pdf" string="PDF report" icon="gtk-print" type="object" colspan="2" attrs="{'readonly': ['|', '|', '|', '|', '|', '|', '|', '|', '|', '|', ('medical_ok', '=', True), ('logistic_ok', '=', True), ('service_ok', '=', True), ('transport_ok', '=', True), ('other_ok', '=', True), ('regular_ok', '=', True), ('donation_prog_ok', '=', True), ('donation_exp_ok', '=', True), ('donation_st_ok', '=', True), ('loan_ok', '=', True), ('loan_return_ok', '=', True)]}" />
                </form>
            </field>
        </record>

        <record id="action_sale_followup_multi_wizard" model="ir.actions.act_window">
            <field name="name">Export FO Follow-up</field>
            <field name="res_model">sale.followup.multi.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_sale_followup_multi"
            action="action_sale_followup_multi_wizard"
            parent="base.next_id_64"
            sequence="5"
            />

    </data>

</openerp>
