<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>

        <record id="ir_track_changes_wizard_form_view" model="ir.ui.view">
            <field name="name">ir.track.changes.wizard.form.view</field>
            <field name="model">ir.track.changes.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="INTERNAL REQUEST Track Changes">
                    <separator colspan="4" string="Request parameters" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="order_id" domain="[('procurement_request', '=', 't')]" />
                    <separator colspan="4" string="Actions" />
                    <button name="print_excel" string="Excel report" icon="gtk-print" type="object" colspan="4" />
                </form>
            </field>
        </record>

        <record id="action_ir_track_changes_wizard" model="ir.actions.act_window">
            <field name="name">IR Track Changes</field>
            <field name="res_model">ir.track.changes.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_ir_track_changes"
            action="action_ir_track_changes_wizard"
            parent="base.menu_sales"
            sequence="3"
            />

    </data>

</openerp>
