<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wizard_return_from_unit_import_form_view" model="ir.ui.view">
            <field name="name">wizard.return.from.unit.import.form.view</field>
            <field name="model">wizard.return.from.unit.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Return from Unit">
                    <separator colspan="4" string="Incoming Shipment Information" />
                    <field name="picking_id" />
                    <group colspan="4" name="file" string="Import data">
                        <group colspan="4">
                            <field name="file_to_import" filename="filename" colspan="1" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                            <field name="filename" invisible="1" />
                            <button name="export_scratch_template_file" colspan="1" string="Save as" type="object" icon="gtk-print" />
                        </group>
                        <field name="state" />
                    </group>
                    <group colspan="4" attrs="{'invisible': [('state', 'not in', ['error', 'done'])]}">
                        <separator colspan="12" string="Import Information" />
                        <field name="message" colspan="4" nolabel="1" widget="full_text"/>
                    </group>
                    <group name="buttons" colspan="4" col="6">
                        <button name="go_to_in" string="Return to the IN" icon="gtk-cancel" type="object" />
                        <button name="import_in" string="Import file" icon="gtk-go-forward" type="object" states="draft" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>
