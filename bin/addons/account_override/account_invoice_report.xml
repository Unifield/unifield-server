<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report id="open_invoices_2"
            string="Pending Invoices"
            model="account.invoice"
            name="open.invoices.2"
            target_filename="${_('Pending Invoices')}_${company_id.instance_id.code}_%(year)s%(month)s%(day)s"
            file="account_override/report/open_invoices_xls.mako"
            report_type="webkit"
            header="False"
            auto="False"
            menu="True"/>
        <!-- put "Pending Invoices" at the top of the menu -->
        <function model="ir.values" name="write">
            <function model="ir.values" name="search"
                      eval="[[('key', '=', 'action'),
                              ('key2', '=', 'client_print_multi'),
                              ('model', '=', 'account.invoice'),
                              ('name', '=', 'Pending Invoices')]]" />
            <value eval="{'sequence': 90}" />
        </function>

        <!-- PAID INVOICES REPORT -->
        <report id="paid_invoices"
            string="Paid Invoices"
            model="account.invoice"
            name="paid.invoices"
            file="account_override/report/open_invoices_xls.mako"
            report_type="webkit"
            header="False"
            auto="False"
            menu="False"/>
        <record id="action_paid_invoices_menu" model="ir.actions.act_window">
            <field name="name">Paid Invoices</field>
            <field name="res_model">wizard.report.paid.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record model="ir.values" id="action_paid_invoices_values">
            <field name="object" eval="1" />
            <field name="name">Paid Invoices</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_paid_invoices_menu'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
            <field name="sequence" eval="95"/>
        </record>
        <record id="wizard_paid_invoices_view" model="ir.ui.view">
            <field name="name">Paid Invoices</field>
            <field name="model">wizard.report.paid.invoice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select currency">
                    <field name="beginning_date"/>
                    <field name="ending_date"/>
                    <group colspan="4" >
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="button_paid_invoices_report" string="Create report" type="object" icon="gtk-ok"/>
                    </group>
                </form>
            </field>
        </record>

        <report id="synthesis_invoices_report"
            string="Allocation synthesis"
            model="account.invoice"
            name="allocation.synthesis.invoices"
            target_filename="Allocation_synthesis_${company_id.instance_id.code}_%(year)s%(month)s%(day)s"
            file="account_override/report/allocation_synthesis_invoices_xls.mako"
            report_type="webkit"
            header="False"
            auto="False"
            menu="True"/>

        <report id="allocation_invoices_report"
            model="account.invoice"
            name="allocation.invoices.report"
            target_filename="Allocation_report_${company_id.instance_id.code}_%(year)s%(month)s%(day)s"
            rml="account_override/report/allocation_invoices_report.rml"
            header="False"
            auto="False"
            string="Invoice allocation"/>
    </data>
</openerp>

