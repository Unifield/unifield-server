<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_merged_wizard_form_view" model="ir.ui.view">
            <field name="name">product.merged.wizard.form.view</field>
            <field name="model">product.merged.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Merge Product">
                    <field name="old_product_id" colspan="4" />
                    <field name="show_ud" attrs="{'readonly': [('new_product_id', '!=', False)]}"/>
                    <field name="new_product_id" colspan="4" required="1" on_change="change_warning(new_product_id)" domain="[('show_ud', '=', show_ud)]" context="{'display_active_filter': 0, 'display_old_code': 1}"/>
                    <field name="ud_old_code" />
                    <field name="warning_checked" invisible="1" />
                    <group colspan="4" attrs="{'invisible': [('warning_msg', '=', False)]}">
                        <separator colspan="4" string="Warning" />
                        <field name="warning_msg" colspan="4" nolabel="1" />
                    </group>
                    <button name="do_merge_product" string="Merge Product" type="object"  icon="gtk-ok" colspan="2" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2" />
                </form>
            </field>
        </record>
    </data>
</openerp>
