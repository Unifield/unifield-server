<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_enter_reason_form_wizard" model="ir.ui.view">
            <field name="name">Enter Reason for Cancellation</field>
            <field name="model">enter.reason</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Enter Reason for Cancellation">
                <separator string="Select a reason for Incoming Shipment cancellation" colspan="4"/>
                <field name="in_from_dpo" invisible="1" />
                <field name="display_warning" invisible="1" />
                   <group colspan="4" col="1" attrs="{'invisible': [('in_from_dpo', '=', False)]}">
                        <html>
                            <h4 style="text-align: center; margin: 10px"><translate>In this context C&amp;R is not possible so order must be recreated if still needed.</translate></h4>
                        </html>
                    </group>
                    <group colspan="4" col="1" attrs="{'invisible': [('display_warning', '=', False)]}">
                        <html>
                            <h2 style="text-align: center; margin: 10px"><translate>Warning! There is a risk of producing inconsistent data if you cancel this IN before it receives the delivery details and is changed into status "Available Shipped" after synchronization.</translate></h2>
                        </html>
                    </group>
                    <newline />
                <field name="picking_id" colspan="4" />
                <field name="change_reason" colspan="4" />
                <group colspan="2" />
                <button icon='gtk-cancel' special="cancel"
                    string="_Close" />
                <button name="do_cancel" string="Cancel Incoming"
                    type="object" icon="gtk-ok" />
            </form>
            </field>
        </record>

    </data>
</openerp>
