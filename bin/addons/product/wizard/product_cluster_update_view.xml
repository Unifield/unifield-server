<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_cluster_update_form" model="ir.ui.view">
            <field name="name">product.cluster.update.form</field>
            <field name="model">product.cluster.update</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product Cluster Update" noteditable="state != 'draft" hide_delete_button="1">
                    <field name="state" />
                    <!--<group name="import" string=" Import Lines " colspan="4" attrs="{'invisible':[('state', '!=', 'draft')]}">-->
                        <!--<button name="wizard_import_products" string="Import lines" icon="gtk-dnd" colspan="2" type="object" attrs="{'invisible':[('state', '!=', 'draft')]}"/>-->
                        <!--<button name="button_remove_lines" string="Delete Lines" icon="gtk-remove" colspan="2" type="object"/>-->
                        <!--<newline/>-->
                        <!--<button name="add_multiple_lines" string="Add multiple lines" icon="gtk-add" colspan="4" type="object"/>-->
                    <!--</group>-->
                    <field name="product_ids" colspan="4" mode="tree,form,graph" nolabel="1" widget="one2many_list" o2m_selectable="2">
                        <tree string="Products">
                            <field name="default_code" />
                            <field name="description" />
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="product_cluster_update_action" model="ir.actions.act_window">
            <field name="name">Product Cluster Update</field>
            <field name="res_model">product.cluster.update</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
            <field name="view_id" ref="view_product_cluster_update_form"/>
        </record>

        <menuitem action="product_cluster_update_action" id="menu_import_request" sequence="3" parent="import_data.parent_import_products" />
    </data>
</openerp>
