<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<data>

					<field name="lang" position="after">
						<field name="zone" />
					</field>
					
					<field name="user_id" position="replace"></field>
					<!-- <field name="leadtime" position="replace"></field> -->
					<field name="parent_id" position="replace"></field>
					<field name="date" position="replace"></field>
					
					<page string="Sales &amp; Purchases" position="inside">
			          	<group colspan="2" col="2" groups="base.group_extended">
			            	<separator string="Default Lead Times [days]" colspan="2"/>
			            	<field name="customer_lt" />
			            	<field name="procurement_lt" />
			            	<field name="transport_by_air_lt" />
			            	<field name="air_sequence" />
			            	<field name="transport_by_sea_lt" />
			            	<field name="sea_sequence" />
			            	<field name="transport_by_road_lt" />
			            	<field name="road_sequence" />
			          	</group>
			        </page>

				</data>
			</field>
		</record>
		
		<record id="product_supplierinfo_form_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
            <field name="arch" type="xml">
                <data>
                	<field name="name" position="replace">
                		<field name="name" on_change="onchange_supplier_id(name)" />
                	</field>
                </data>
            </field>
        </record>

	</data>
</openerp>
