<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
        <record id="procurement_list_form_view" model="ir.ui.view">
            <field name="name">procurement.list.form.view</field>
            <field name="model">procurement.list</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Procurement list">
                    <group colspan="4" col="6">
                        <field name="name" />
                        <field name="order_date" />
                        <field name="warehouse_id" widget="selection" />
                        <field name="requestor" />
                        <field name="origin" />
                    </group>
                    <notebook colspan="4">
                        <page string="Products">
                            <field name="line_ids" mode="tree" colspan="4" nolabel="1">
                                <tree editable="top" string="Products">
                                    <field name="product_id" on_change="product_id_change(product_id)" />
                                    <field name="product_uom_id" />
                                    <field name="product_qty" />
                                    <field name="comment" />
                                    <field name="from_stock" />
                                    <field name="latest" />
                                    <field name="supplier_id" context="{'product_id': product_id, 'choose_supplier': True}" />
                                    <button name="split_line" type="object" string="Split Line" icon="terp-stock_effects-object-colorize" />
                                    <button name="merge_line" type="object" string="Merge Line" icon="terp-gtk-jump-to-ltr" context="{'wizard_id': active_id}" />
                                </tree>
                            </field>
                            <group colspan="4" col="6">
                                <field name="state" />
                                <button name="cancel" string="Cancel" icon="gtk-cancel" type="object" states="draft"/>
                                <button name="create_rfq" type="object" string="Create RfQ" icon="gtk-execute" states="draft" />
                                <button name="create_po" type="object" string="Create PO" icon="gtk-execute" states="draft" />
                                <button name="reset" string="Reset to Draft" icon="gtk-ok" type="object" states="cancel" />
                            </group>
                        </page>
                        <page string="Sourcing Documents">
                        	<field name="order_ids" nolabel="1" colspan="4">
                        		<tree string="Sourcing Documents" colors="blue:state=='draft'">
                        			<field name="name" />
                        			<field name="partner_id" />
                        			<field name="state" />
                        		</tree>
                        	</field>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" />
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="procurement_list_tree_view" model="ir.ui.view">
            <field name="name">procurement.list.tree.view</field>
            <field name="model">procurement.list</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Procurement lists">
                    <field name="name" />
                    <field name="order_date" />
                    <field name="requestor" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="procurement_list_filter_view" model="ir.ui.view">
            <field name="name">procurement.list.filter.view</field>
            <field name="model">procurement.list</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Procurement List">
                    <group col="10" colspan="4">
                        <filter icon="terp-document-new" string="Draft" domain="[('state', '=', 'draft')]" help="Draft Procurement list" />
                        <filter icon="terp-dialog-close" string="Done" domain="[('state', '=', 'done')]" help="Done Procurement list" />
                        <separator orientation="vertical" />
                        <field name="name" />
                        <field name="order_date" />
                        <field name="requestor" />
                    </group>
                    <newline />
                    <group expand="0" string="Group By..." colspan="4" col="10" groups="base.group_extended">
                        <filter string="Responsible" icon="terp-personal" domain="[]" context="{'group_by': 'user_id'}" />
                        <separator orientation="vertical" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_procurement_list_tree" model="ir.actions.act_window">
            <field name="name">Procurement Lists</field>
            <field name="res_model">procurement.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_id" ref="procurement_list_filter_view" />
            <field name="help">A procurement list is a list of items to supply. After creation of the list of items, you can choose
            a list of suppliers and create automatically a Request for Quotation for each supplier.</field>
        </record>

        <menuitem
            action="action_procurement_list_tree"
            id="menu_procurement_list"
            sequence="0"
            parent="purchase.menu_procurement_management" />

	</data>
</openerp>

