<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
        
        <record id="choose_supplier_line_split_qty" model="ir.ui.view">
        	<field name="name">choose.supplier.line.split.qty</field>
        	<field name="model">procurement.list.line.split</field>
        	<field name="type">form</field>
        	<field name="arch" type="xml">
        		<form string="Split line">
        			<separator colspan="4" string="New quantity" />
        			<field name="qty" colspan="4" />
        			<separator colspan="4" string="Actions" />
        			<button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2" type="object" />
        			<button name="split" string="New line" icon="gtk-ok" colspan="2" type="object" />
        		</form>
        	</field>
        </record>
        
        <record id="choose_supplier_line_merge" model="ir.ui.view">
        	<field name="name">choose.supplier.line.merge</field>
        	<field name="model">procurement.list.line.merge</field>
        	<field name="type">form</field>
        	<field name="arch" type="xml">
        		<form string="Merge lines">
        		    <separator colspan="4" string="Possible lines to merge" />
        			<field name="line_ids" colspan="4" nolabel="1" >
        			    <tree string="Lines">
        			        <field name="product_id" />
        			        <field name="product_qty" />
        			        <field name="product_uom_id" />
        			        <field name="supplier_id" />
        			    </tree>
        			</field>
        			<separator colspan="4" />
        			<button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2" type="object" />
        			<button name="merge_confirm" string="Merge" icon="gtk-ok" colspan="2" type="object" />
        		</form>
        	</field>
        </record>

        <record id="choose_supplier_rfq_form_view" model="ir.ui.view">
            <field name="name">choose.supplier.rfq.form.view</field>
            <field name="model">procurement.choose.supplier.rfq</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Choose Suppliers">
                    <separator colspan="4" string="Suppliers" />
                    <field name="supplier_ids" colspan="4" nolabel="1" />
                    <separator colspan="4" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2" type="object" />
                    <button name="create_rfq" type="object" string="Create RfQ" icon="gtk-execute" />
                </form>
            </field>
        </record>

	</data>
</openerp>

