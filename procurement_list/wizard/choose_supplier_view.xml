<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

        <record id="choose_supplier_form_view" model="ir.ui.view">
            <field name="name">choose.supplier.form.view</field>
            <field name="model">procurement.choose.supplier</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Choose suppliers" >
                    <separator string="General Information" colspan="4" />
                    <field name="date" />
                    <separator colspan="4" string="Lines" />
                    <field name="line_ids" colspan="4" nolabel="1" />
                    <separator colspan="4" string="Actions" />
                    <group colspan="4" col="6">
                        <button special="cancel" string="Cancel" icon="gtk-cancel" />
                        <button name="create_rfq" type="object" string="Create RfQ" icon="gtk-execute" />
                        <button name="create_po" type="object" string="Create PO" icon="gtk-execute" />
                    </group>
                </form>
            </field>
        </record>

        
        <record id="choose_supplier_line_tree_view" model="ir.ui.view">
            <field name="name">choose.supplier.line.tree.view</field>
            <field name="model">procurement.choose.supplier.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Procurement Lines" editable="top">
                    <field name="product_id" readonly="1" />
                    <field name="product_uom" />
                    <field name="product_qty" />
                    <field name="supplier_id" context="{'product_id': product_id, 'choose_supplier': True}" />
                    <button name="split_line" type="object" string="Split Line" icon="terp-stock_effects-object-colorize" />
                </tree>
            </field>
        </record>
        
        <record id="choose_supplier_line_split_qty" model="ir.ui.view">
        	<field name="name">choose.supplier.line.split.qty</field>
        	<field name="model">procurement.choose.line.split</field>
        	<field name="type">form</field>
        	<field name="arch" type="xml">
        		<form string="Split line">
        			<separator colspan="4" string="New quantity" />
        			<field name="qty" colspan="4" />
        			<separator colspan="4" string="Actions" />
        			<button special="cancel" string="Cancel" icon="gtk-cancel" colspan="2" />
        			<button name="split" string="New line" icon="gtk-ok" colspan="2" type="object" />
        		</form>
        	</field>
        </record>

        <record id="choose_supplier_rfq_form_view" model="ir.ui.view">
            <field name="name">choose.supplier.rfq.form.view</field>
            <field name="model">procurement.choose.supplier.rfq</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Choose Suppliers">
                    <separator colspan="4" string="Suppliers" />
                    <field name="supplier_ids" colspan="4" nolabel="1" />
                    <separator colspan="4" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel" />
                    <button name="create_rfq" type="object" string="Create RfQ" icon="gtk-execute" />
                </form>
            </field>
        </record>

	</data>
</openerp>

