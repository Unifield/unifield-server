<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sync_server_sync_rule_form_view_rw">
            <field name="name">sync_rule.form.rw</field>
            <field name="model">sync_server.sync_rule</field>
            <field name="inherit_id" ref="sd.sync_server_sync_rule_form_view" />
            <field name="arch" type="xml">
                <field name="sequence_number" position="after">
                    <field name="usb" />
                </field>  
                <field name="direction" position="replace">
                	<field name="direction" attrs="{'invisible': [('usb','=',True)]}" />
                	<field name="direction_usb" attrs="{'invisible': [('usb','=',False)]}" />
                </field>
                <field name="applies_to_type" position="attributes">
                	<attribute name="attrs">{'invisible': [('usb','=',True)]}</attribute>
                </field>
                <field name="group_id" position="attributes">
                	<attribute name="attrs">{'invisible':['|', ('applies_to_type','=',True), ('usb','=',True)], 'required':[('applies_to_type','=',False),('usb','=',False)]}</attribute>
                </field>
                <field name="type_id" position="attributes">
                	<attribute name="attrs">{'invisible':['|', ('applies_to_type','=',False), ('usb','=',True)], 'required':[('applies_to_type','=',True),('usb','=',False)]}</attribute>
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="sync_server_sync_rule_tree_view_rw">
            <field name="name">sync_rule.tree.rw</field>
            <field name="model">sync_server.sync_rule</field>
            <field name="inherit_id" ref="sd.sync_server_sync_rule_tree_view" />
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="usb" string="USB" />
                </field>  
            </field>
        </record>
        
        <record model="ir.ui.view" id="sync_server_sync_rule_search_view_rw">
            <field name="name">sync_rule.search.rw</field>
            <field name="model">sync_server.sync_rule</field>
            <field name="inherit_id" ref="sd.sync_server_data_rule_search_view" />
            <field name="arch" type="xml">
                <filter name="all" position="after">
                    <field name="usb"  />
                </filter>  
            </field>
        </record>
    </data>
</openerp>