<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="analytic_distribution_wizard_lines_tree">
            <field name="name">analytic.distribution.wizard.lines.tree"</field>
            <field name="model">analytic.distribution.wizard.lines</field>
            <field name="type">tree</field>
            <field name="arch" type='xml'>
                <tree string="" editable="top">
                    <field name="analytic_id" domain="[('type', '!=', 'view'), ('category', '=', 'OC'), ('state', '=', 'open')]"/>
                    <field name="percentage" sum="Total Percentage"/>
                    <field name="amount" sum="Total Amount"/>
                </tree>
            </field>
        </record>

        <record id="analytic_distribution_wizard_view" model="ir.ui.view">
            <field name="name">analytic.distribution.wizard.view</field>
            <field name="model">analytic.distribution.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Analytic Wizard Distribution">
                    <field colspan="2" name="total_amount" readonly="1"/>
                    <group colspan="2" col="3">
                        <field colspan="2" name="entry_mode" readonly="1"/>
                        <button name="dummy" type="object" string="Switch entry mode" icon='gtk-jump-to' colspan="1"/>
                    </group>
                    <separator colspan="4" string="Allocation"/>
                    <field colspan="4" name="line_ids" nolabel="1" widget="one2many_list" context="{'mode': entry_mode}"/>
                    <group colspan="4">
                        <button special='cancel' string='Cancel' icon='gtk-cancel' colspan="2"/>
                        <button name="button_confirm" string="Ok" type="object" icon="gtk-ok" colspan="2" />
                    </group>
                    <field name="state" invisible="1"/>
                </form>
            </field>
        </record>

    </data>
</openerp>
