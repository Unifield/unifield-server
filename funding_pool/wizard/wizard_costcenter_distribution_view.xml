<?xml version="1.0"?>
<openerp>
      <data>
            <record model="ir.ui.view" id="costcenter_distribution_line_tree_editable">
                <field name="name">costcenter.distribution.line.tree.editable"</field>
                <field name="model">wizard.costcenter.distribution.line</field>
                <field name="type">tree</field>
                <field name="arch" type='xml'>
                    <tree string="" editable="top">
                        <field name="analytic_id" domain="[('type', '!=', 'view'),
                                                           ('category', '=', 'OC'),
                                                           ('date_start', '&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d')),
                                                           ('|'),
                                                           ('date', '&gt;', datetime.date.today().strftime('%%Y-%%m-%%d')),
                                                           ('date', '=', False)]"/>
                        <field name="percentage" sum="Total Percentage" />
                        <field name="amount" sum="Total Amount" />
                    </tree>
                </field>
            </record>
            <record model="ir.ui.view" id="wizard_costcenter_distribution_form1">
                  <field name='name'>wizard.costcenter.distribution.form1</field>
                  <field name='model'>wizard.costcenter.distribution</field>
                  <field name='type'>form</field>
                  <field name='arch' type='xml'>
                        <form string="Cost Centers">
                            <field colspan="2" name="total_amount" readonly="1"/>
                            <group colspan="2" col="3">
                                <field colspan="2" name="entry_mode" readonly="1"/>
                                <button name="dummy" type="object" string="Switch entry mode"/>
                            </group>
                            <separator colspan="4" string="Allocation"/>
                            <field colspan="4" name="wizard_distribution_lines" nolabel="1" widget="one2many_list" context="{'mode': entry_mode}" />
                            <group colspan="4">
                                <button name="button_cancel" string='Cancel' type='object' icon='gtk-cancel' colspan="2"/>
                                <button name="button_next_step" string="Next" type="object" icon="gtk-go-forward" colspan="2" />
                            </group>
                        </form>
                  </field>
            </record>
       </data>
</openerp>
