<?xml version="1.0"?>
<openerp>
      <data>
            <record model="ir.ui.view" id="wizard_fundingpool_distribution_form1">
                  <field name='name'>wizard.fundingpool.distribution.form1</field>
                  <field name='model'>wizard.fundingpool.distribution</field>
                  <field name='type'>form</field>
                  <field name='arch' type='xml'>
                        <form string="Funding Pools">
                            <field colspan="2" name="total_amount" readonly="1"/>
                            <field colspan="2" name="entry_mode"/>
                            <separator colspan="4" string="Allocation"/>
                            <field colspan="4" name="distribution_id" invisible="1"/>
                            <field colspan="4" name="cost_centers" invisible="1"/>
                            <field colspan="4" name="wizard_distribution_lines" nolabel="1" widget="one2many_list">
                                <tree string="" editable="top">
                                    <field name="analytic_id" domain="[('|'),
                                                                       ('code', '=', 'PF'),
                                                                       ('type', '!=', 'view'),
                                                                       ('category', '=', 'FUNDING'),
                                                                       ('date_start', '&lt;=', datetime.date.today().strftime('%%Y-%%m-%%d')),
                                                                       ('|'),
                                                                       ('date', '&gt;', datetime.date.today().strftime('%%Y-%%m-%%d')),
                                                                       ('date', '=', False)]"/>
                                    <field name="cost_center_id" string="Cost Center" domain="[('id', 'in', parent.cost_centers)]" context="{'search_by_ids': True}"/>
                                    <field name="percentage" sum="Total Percentage"/>
                                    <field name="amount" sum="Total Amount"/>
                                </tree>
                            </field>
                            <group colspan="5">
                                <button name="button_cancel" string='Cancel' type='object' icon='gtk-cancel' colspan="1"/>
                                <button name="button_previous_step" string="Previous" type="object" icon="gtk-go-back" colspan="1"/>
                                <button name="button_next_step" string="Next" type="object" icon="gtk-go-forward" colspan="1"/>
                                <button name="button_save" string="Save" type="object" icon="gtk-ok" colspan="1"/>
                                <label string="" colspan="1"/>
                            </group>
                        </form>
                  </field>
            </record>
       </data>
</openerp>
