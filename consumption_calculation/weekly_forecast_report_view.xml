<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <record id="weekly_forecast_report_waiting_view" model="ir.ui.view">
            <field name="name">weekly.forecast.report.waiting.view</field>
            <field name="model">weekly.forecast.report</field>
            <field name="type">form</field>
            <field name="priority" eval="100" />
            <field name="arch" type="xml">
                <form string="Status of the report" hide_new_button="1" hide_delete_button="1">
                    <label> </label>
                    <group colspan="2" col="2">
                        <html>
                            <div style="align: center">
                                <p style="font-size:14px;align:center">
                                    Your demand of Weekly forecast report will be treated quickly.<br />
                                </p>
                                <p style="font-size:14px;align:center">
                                    Due to the volume of data, your demand cannot be shown immediatly.<br />
                                </p>
                                <p style="font-size:14px;align:center">
                                    When the report will be ready, you can access to it by the menu Warehouse / Reporting / Expiry / Weekly forecast report.<br />
                                </p>
                            </div>
                        </html>
                    </group>
                </form>
            </field>
        </record>

        <record id="weekly_forecast_report_search_view" model="ir.ui.view">
            <field name="name">weekly.forecast.report.search.view</field>
            <field name="model">weekly.forecast.report</field>
            <field name="type=">search</field>
            <field name="arch" type="xml">
                <search string="Weekly forecast reports">
                    <field name="requestor_id" />
                    <filter domain="[('requestor_id', '=', uid)]" icon="terp-personal" help="My requests" />
                    <field name="requestor_date" />
                </search>
            </field>
        </record>

        <record id="weekly_forecast_report_tree_view" model="ir.ui.view">
            <field name="name">weekly.forecast.report.tree.view</field>
            <field name="model">weekly.forecast.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Weekly forecast reports">
                    <field name="requestor_date" />
                    <field name="requestor_id" />
                    <field name="consumption_type" />
                    <field name="interval" />
                    <field name="interval_type" />
                    <field name="location_id" />
                    <field name="progress" widget="progressbar" />
                    <field name="status" />
                    <button name="in_progress" type="object" icon="gtk-refresh" string="In Progress" attrs="{'invisible': [('status', '!=', 'in_progress')]}" />
                    <button name="print_report" type="object" icon="gtk-print" string="Print report" attrs="{'invisible': [('status}', '!=', 'ready')]}" />
                </tree>
            </field>
        </record>

        <record id="weekly_forecast_report_form_view" model="ir.ui.view">
            <field name="name">weekly.forecast.report.form.view</field>
            <field name="model">weekly.forecast.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Weekly forecast report">
                    <separator colspan="4" string="Period of calculation" />
                    <field name="interval" />
                    <field name="interval_type" colspan="2" nolabel="1" />
                    <separator colspan="4" string="Consumption parameters" />
                    <field name="consumption_type" colspan="4" />
                    <field name="consumption_from" attrs="{'invisible': [('consumption_type', 'not in', ('amc', 'rac'))], 'required': [('consumption_type', 'in', ('amc', 'rac'))]}" on_change="period_change(consumption_from, consumption_to, consumption_type)" />
                    <field name="consumption_to" attrs="{'invisible': [('consumption_type', 'not in', ('amc', 'rac'))], 'required': [('consumption_type', 'in', ('amc', 'rac'))]}" on_change="period_change(consumption_from, consumption_to, consumption_type)" />
                    <separator colspan="4" string="Location" />
                    <field name="location_id" domain="[('usage', '=', 'internal')]" />
                    <separator colspan="4" string="Actions" />
                    <button name="process_lines" string="View report" type="object" colspan="4" icon="gtk-execute" attrs="{'invisible': [('state', '=', 'in_progress')]}" />
                    <button name="update_report" string="Update" type="object" colspan="4" icon="gtk-execute" attrs="{'invisible': [('state', '!=', 'in_progress')]}" />
                    <label string="" /><label string="" />
                    <group colspan="4" col="4" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <separator string="Status" colspan="4" />
                        <field name="progress_comment" colspan="4" nolabel="True" attrs="{'invisible': [('state', '!=', 'in_progress')]}" />
                        <field name="state" />
                        <field name="progress" widget="progressbar" />
                    </group>
                </form>
            </field>
        </record>

        <record id="action_weekly_forecast_report" model="ir.actions.act_window">
            <field name="name">Weekly forecast reports</field>
            <field name="res_model">weekly.forecast.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_weekly_forecast_report"
                  action="action_weekly_forecast_report"
                  sequence="-1"
                  parent="menu_warehouse_expiry" />

    </data>
</openerp>
