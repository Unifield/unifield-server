<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Add reversal_origin field on account_analytic_line form -->
        <record id="inherit_view_account_analytic_line_form" model="ir.ui.view">
            <field name="name">account.analytic.line.form</field>
            <field name="model">account.analytic.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/group[1]/field[@name='date']" position="after">
                        <field name="reversal_origin"/>
                        <field name="invoice_line_id"/>
                    </xpath>
                </data>
            </field>
        </record>

    <!-- Add some field to account_analytic_line tree -->
        <record id="inherit_view_account_analytic_line_tree" model="ir.ui.view">
            <field name="name">account.analytic.line.tree</field>
            <field name="model">account.analytic.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_tree"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/tree/field[@name='name']" position='after'>
                        <field name="reversal_origin"/>
                    </xpath>
                    <xpath expr="/tree/field[@name='amount']" position='after'>
                        <field name="amount_currency"/>
                        <field name="currency_id"/>
                    </xpath>
                    <xpath expr="/tree/field[@name='general_account_id']" position='after'>
                        <field name="invoice_line_id"/>
                    </xpath>
                </data>
            </field>
        </record>

    <!-- Add a filter to search engagement journal lines -->
        <record id="inherit_view_account_analytic_line_filter" model="ir.ui.view">
            <field name="name">account.analytic.line.select</field>
            <field name="model">account.analytic.line</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="/search/group[1]/filter[@name='purchases']" position='after'>
                    <filter name="engagements" string="Engagements" domain="[('journal_id.type','=','engagement')]" icon="terp-folder-violet" help="Analytic Journal Items related to an engagement journal."/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
