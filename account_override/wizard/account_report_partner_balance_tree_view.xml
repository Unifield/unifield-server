<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

        <record id="account_report_partner_balance_tree_view" model="ir.ui.view">
            <field name="name">Partner Balance</field>
            <field name="model">account.partner.balance.tree</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.account_common_report_view" />
            <field name="arch" type="xml">
            <data>
            <xpath expr="/form/label[@string='']" position="replace">
                <separator string="Partner Balance Tree" colspan="4"/>
            </xpath>
            <xpath expr="//field[@name='target_move']" position="after">
                <field name="result_selection"/>
                <field name="display_partner"/>
                <field name="output_currency"/>
                <newline/>
            </xpath>
            <xpath expr="//group[1]" position="replace">
             <group col="4" colspan="4">
                <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
                <button icon="terp-gtk-go-back-rtl" name="show" string="Show Balances" type="object" colspan="2" default_focus="1" />
                <label string="" colspan="2" />
                <button icon="gtk-print" name="export" string="Print" type="object" colspan="2" />
            </group>
            </xpath>
            <!--
            <group col="4" colspan="4">
                        <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
                        <button icon="gtk-print" name="check_report" string="Print" type="object" colspan="2" default_focus="1" />
            </group>
            -->
            </data>
            </field>
        </record>

         <record id="action_account_partner_balance_tree" model="ir.actions.act_window">
             <field name="name">Partner Balance</field>
             <field name="res_model">account.partner.balance.tree</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="account_report_partner_balance_tree_view"/>
             <field name="context">{'record_id':active_id}</field>
             <field name="target">new</field>
       </record>

        <menuitem icon="STOCK_PRINT"
            name="Partner Balance Tree"
            action="action_account_partner_balance_tree"
            id="menu_account_partner_balance_tree"
            parent="account.next_id_22"/>

     </data>
 </openerp>
