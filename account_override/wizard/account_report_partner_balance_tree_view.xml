        <record model="ir.ui.view" id="view_account_partner_balance_tree">
            <field name="name">account.partner.balance.tree.view</field>
            <field name="model">account.partner.balance.tree</field>
            <field name="type">tree</field>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
                <tree string="Partner Balance Tree"
                    editable="top" noteditable="1" 
                    hide_new_button="1" hide_delete_button="1"
                    colors="gray:account_type in('payable')">
                    <field name="partner_name"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="balance"/>
                    <field name="account_type_display" invisible="1" />
                    <field name="account_type" attrs="{'invisible': [('account_type_display','!=',True)]" />
                </tree>
            </field>
        </record>
         
